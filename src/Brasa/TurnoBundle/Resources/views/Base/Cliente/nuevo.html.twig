{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo cliente</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                           
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-3 control-label">Tercero:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arCliente.terceroRel.nit |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arCliente.terceroRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_nit" class="col-sm-3 control-label">Nit:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombreCorto" class="col-sm-3 control-label">Nombre corto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label for="form_sectorRel" class="col-sm-3 control-label">Sector:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.sectorRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_estrato" class="col-sm-3 control-label">Estrato:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.estrato, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_plazoPago" class="col-sm-3 control-label">Plazo pago:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.plazoPago, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_gerente" class="col-sm-3 control-label">Gerente:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.gerente, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_celularGerente" class="col-sm-3 control-label">Celular:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.celularGerente, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>   
            <div class="form-group form-group-sm">
                <label for="form_financiero" class="col-sm-3 control-label">Financiero:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.financiero, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_celularFinanciero" class="col-sm-3 control-label">Celular:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.celularFinanciero, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_contacto" class="col-sm-3 control-label">Contacto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.contacto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_celularContacto" class="col-sm-3 control-label">Celular contacto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.celularContacto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_telefonoContacto" class="col-sm-3 control-label">Telefono contacto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.telefonoContacto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_cliente_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}