{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo curso</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">     
            <div class="form-group form-group-sm">
                <label for="form_clienteRel" class="col-sm-3 control-label">Cliente:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.clienteRel, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_empleadoRel" class="col-sm-3 control-label">Empleado:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.empleadoRel, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>     
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-3 control-label">Vence:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaVence) }}                      
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_fechaProgramacion" class="col-sm-3 control-label">Programacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaProgramacion) }}                      
                </div>                
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}