{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago horario - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Soporte pago horario detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagosHorariosDetalles, 'CÃ“DIGO', 'p.codigoSoportePagoHorarioDetallePk') }}</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>DIAS</th>
                <th>DESCANSO</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>                
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>                
            </tr>
            {% for arSoportesPagosHorariosDetalles in arSoportesPagosHorariosDetalles %}
            <tr>                
                <td>{{ arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaHasta |date("Y/m/d")  }}</td>   
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
            </tr>
            
            {% endfor %}
        </table>  
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_soporte_pago_horario') }}">Volver</a>            
            </div>
            <div class="btn-group" style="float: left">
                    <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagosHorariosDetalles.getTotalItemCount }}</span></div>
            </div>
        </div>

        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagosHorariosDetalles) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>  
               
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
