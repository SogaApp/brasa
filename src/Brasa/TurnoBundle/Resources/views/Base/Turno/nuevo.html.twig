{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo turno</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">               
            <div class="form-group form-group-sm">
                <label for="form_codigoTurnoPk" class="col-sm-3 control-label">Codigo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.codigoTurnoPk, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_horaDesde" class="col-sm-3 control-label">Hora desde:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horaDesde, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                    
            <div class="form-group form-group-sm">
                <label for="form_horaHasta" class="col-sm-3 control-label">Hora hasta:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horaHasta, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                    
            <div class="form-group form-group-sm">
                <label for="form_horas" class="col-sm-3 control-label">Horas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label for="form_horasDiurnas" class="col-sm-3 control-label">Horas diurnas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_horasNocturnas" class="col-sm-3 control-label">Horas nocturnas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_servicio" class="col-sm-3 control-label">Servicio:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.servicio, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_programacion" class="col-sm-3 control-label">Programacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.programacion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>      
            <div class="form-group form-group-sm">
                <label for="form_novedad" class="col-sm-3 control-label">Novedad:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.novedad, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_turno_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}