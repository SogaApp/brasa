{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Factura detalles</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arFacturaDetalles, 'CÃ“DIGO', 'p.codigoFacturaDetallePk') }}</th>
                <th></th>
            </tr>
            {% for arFacturaDetalles in arFacturaDetalles %}
            <tr>
                <td>{{ arFacturaDetalles.codigoFacturaDetallePk  }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturaDetalles.codigoFacturaDetallePk }}" /></td>
            </tr>

            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_factura') }}">Volver</a>
            </div>
            <!-- Botones Menu Items -->
            <div class="btn-group">
                    <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arFacturaDetalles.getTotalItemCount }}</span></div>
            </div>
        </div>

        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arFacturaDetalles) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_factura_nuevo', {'codigoFactura': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
