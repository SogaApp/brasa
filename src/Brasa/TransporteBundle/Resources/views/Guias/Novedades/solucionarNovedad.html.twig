{% extends '::base_sin_menu.html.twig' %}
{% block content %}

<div class="container">
    <div class="well">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Solucion:</label>
                <div class="col-sm-10">
                {{ form_widget(form.solucion, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Fecha solucion:</label>
                <div class="col-sm-10">
                {{ form_widget(form.fechaSolucion) }}
                </div>
            </div>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
