{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
{% import 'BrasaGeneralBundle:plantillas:macros.html.twig' as utilidades %}
    <form class="form-horizontal" role="form" id="FrmNuevo" action="{{ path('brs_inv_movientos_nuevo', { 'codigoDocumento': codigoDocumento, 'codigoMovimiento': 0  }) }}" method="post">
        <h3>{%if arMovimiento is defined and arMovimiento is not null%}Editar {%else%}Crear {%endif%} Documento</h3>
        {% if codigoDocumento is defined %}
        <input name="iddocumento" type="hidden" value="{{codigoDocumento}}" />
        {% endif %}
        <div class="well">
            {% if arMovimiento is defined and arMovimiento is not null %}
            <div class="form-group">
                <label for="TxtCodigoMovimiento" class="col-sm-2 control-label">Codigo movimento</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigoMovimiento" name="TxtCodigoMovimiento" {% if arMovimiento is defined and arMovimiento is not null %} value="{{arMovimiento.codigoMovimientoPk}}" readonly="true"{% endif %}/>
                </div>
            </div>
            {%set Tercero =  arMovimiento.codigoTerceroFk  %}
            {% else %}
                {%set Tercero = ''%}
            {% endif %}
            <div class="form-group">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero</label>
                <div class="col-sm-10">
                <div class="row">
                  <div class="col-sm-12">
                    <div class="input-group">
                      <input type="text" class="form-control" id="TxtNombreTercero" name="TxtNombreTercero" value="{{Tercero}}" placeholder="Codigo tercero"/>
                      <span class="input-group-btn">
                        <input type="text" class="btn btn-default" id="TxtCodigoTercero" name="TxtCodigoTercero" value="{{Tercero}}"/>
                        <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero') }}', 'BuscarTercero', 600, 900)">Buscar</a>
                      </span>
                    </div><!-- /input-group -->
                  </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
                </div>
            </div>


            <div class="form-group">
                <label for="TxtSoporte" class="col-sm-2 control-label">Soporte</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtSoporte" name="TxtSoporte" {% if arMovimiento is defined and arMovimiento is not null %} value="{{arMovimiento.soporte}}" {% endif %} placeholder="Soporte"/>
                </div>
            </div>

            <div class="form-group">
                <label for="TxtComentarios" class="col-sm-2 control-label">Comentarios</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" id="TxtComentarios" rows=5 name="TxtComentarios" {% if arMovimiento is defined and arMovimiento is not null %} value="{{arMovimiento.comentarios}}" {% endif %} placeholder="Comentarios"> </textarea>
                </div>
            </div>
        </div>


        <div class="modal-footer">
            <a class="btn btn-default" href="{{ path('brs_inv_movientos_lista', { 'codigoDocumento': codigoDocumento }) }}">Cancelar</a>
            <button id="link_guardar" class="btn btn-primary" type="submit" name="OpSubmit" value="OpGuardar">Guardar</button>
        </div>

    </form>
</div>
{% endblock %}