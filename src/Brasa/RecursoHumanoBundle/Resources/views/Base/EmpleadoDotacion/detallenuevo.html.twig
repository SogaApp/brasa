{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva dotación</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>ELEMENTO DOTACIÓN</th>
            <th>CANTIDAD</th>
            <th>SERIE</th>
            <th>LOTE</th>
        </tr>
        
            {%for arDotacionElementos in arDotacionElementos %}
               <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arDotacionElementos.codigoDotacionElementoPk }}">{{ arDotacionElementos.codigoDotacionElementoPk }}</td>
                <td>{{arDotacionElementos.dotacion}}</td>
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidad[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtSerie[]"  size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtLote[]"  size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}