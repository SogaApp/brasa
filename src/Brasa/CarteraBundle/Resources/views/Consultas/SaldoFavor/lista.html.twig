{% extends '::base.html.twig' %}
{% block title %}Cartera consulta saldo favor lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Consulta saldo favor lista</h3>
    </div>

    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>{{ knp_pagination_sortable(arSaldosFavor, 'CÃ“DIGO', 'sf.codigoSaldoFavorPk') }}</th>
            <th>CLIENTE</th>
            <th>VALOR</th>
            <th>SALDO</th>
            <th>ABONO</th>


        </tr>
        {% for arSaldosFavor in arSaldosFavor %}
            <tr>
                <td>{{ arSaldosFavor.codigoSaldoFavorPk  }}</td>
                <td>{{ arSaldosFavor.reciboRel.clienteRel.nombreCorto  }}</td>

                <td  style="text-align: right">${{ arSaldosFavor.valor | number_format(2, '.', ',')  }}</td>
                <td  style="text-align: right">${{ arSaldosFavor.saldo | number_format(2, '.', ',')  }}</td>
                <td  style="text-align: right">${{ arSaldosFavor.abono | number_format(2, '.', ',') }}</td>
            </tr>

        {% endfor %}
    </table>
    <!-- Botones Menu Items -->
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSaldosFavor.getTotalItemCount }}</span></div>
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arSaldosFavor) }}
    </div>

</div>
{% endblock %}
