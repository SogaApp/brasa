{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Factura detalles</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso_nuevo', {'codigoFactura': 0 }) }}">Nuevo</a>
                {% if arFactura.estadoAutorizado == 0 %}
                    <a  class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso_nuevo', {'codigoFactura': arFactura.codigoFacturaPk }) }}">Editar</a>
                {% endif %}
                {{ form_widget(form.BtnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnDesAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnAnular, { 'attr': {'class': 'btn btn-default btn-sm', 'onclick': 'return confirm("Esta seguro de anular el curso?")'} }) }}
            </div>
        </div>        
        <div style="float:right">
            {% if arFactura.estadoAutorizado == 1 %}<span class="label label-default">Autorizado</span>{% endif %}            
            {% if arFactura.numero != 0 %}<span class="label label-success">Impreso</span>{% endif %}
            {% if arFactura.estadoAnulado == 1 %}<span class="label label-danger">Anulado</span>{% endif %}
        </div>
        <br /><br />        
        <div class="panel panel-default">
            <div class="panel-heading">Información</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">NUMERO:</td>
                        <td class="td-in-well">{{ arFactura.numero }}</td>                        
                        <td class="titulo">CODIGO:</td>
                        <td class="td-in-well">{{ arFactura.codigoFacturaPk }}</td>
                    </tr> 
                    <tr>
                        <td class="titulo">TIPO:</td>
                        <td class="td-in-well">{{ arFactura.facturaTipoRel.nombre | default('') }}</td>                        
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                    </tr>                     
                    <tr>
                        <td class="titulo">CLIENTE:</td>
                        <td class="td-in-well">{{ arFactura.clienteRel.nit }}-{{ arFactura.clienteRel.nombreCorto }}</td>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>                        
                    </tr>                    
                    <tr>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo" >TOTAL:</td>
                        <td align="right">{{ arFactura.total | number_format(0, '.', ',')}}</td>
                    </tr>                    
                </table>
            </div>
        </div>   
        <ul class="nav nav-tabs">
            <li class="active"><a href="#detalle" data-toggle="tab">Detalle</a></li>
            <li><a href="#cursos" data-toggle="tab">Cursos</a></li>
        </ul>    
        <div class="tab-content">
            <div class="tab-pane active" id="detalle">
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 100%"><br>
                    <table  class="table table-striped table-bordered table-condensed table-hover">
                        <tr>
                            <th>{{ knp_pagination_sortable(arFacturaDetalles, 'CÓDIGO', 'p.codigoFacturaDetallePk') }}</th>
                            <th></th>
                        </tr>
                        {% for arFacturaDetalles in arFacturaDetalles %}
                        <tr>
                            <td>{{ arFacturaDetalles.codigoFacturaDetallePk  }}</td>
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturaDetalles.codigoFacturaDetallePk }}" /></td>
                        </tr>

                        {% endfor %}
                    </table>
                    <div class="btn-toolbar" style="float: left">
                        <!-- Botones Menu Items -->
                        <div class="btn-group">
                                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arFacturaDetalles.getTotalItemCount }}</span></div>
                        </div>
                    </div>

                    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                            {{ knp_pagination_render(arFacturaDetalles) }}
                    </div>
                    <div class="btn-toolbar" style="float: right">
                        {% if arFactura.estadoAutorizado == 0 %}
                            <div class="btn-group">
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_movimiento_factura_detalle_nuevo', {'codigoFactura': arFactura.codigoFacturaPk }) }}', 'AgregarDetalleFacturaNuevo', 600, 1200)">Nuevo</a>                                                        
                            </div>
                        {% endif %}
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                        </div>            
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="cursos">
                <div id="cursos" style="width: 100%"><br>
                    <div class="btn-toolbar" style="float: left">
                        <!-- Botones Menu Items -->
                        <div class="btn-group">
                                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arFacturaDetalleCursos.getTotalItemCount }}</span></div>
                        </div>
                    </div>

                    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                            {{ knp_pagination_render(arFacturaDetalleCursos) }}
                    </div>                    
                    <div class="btn-toolbar" style="float: right">
                        {% if arFactura.estadoAutorizado == 0 %}
                            <div class="btn-group">
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_movimiento_factura_detalle_nuevo', {'codigoFactura': arFactura.codigoFacturaPk }) }}', 'AgregarDetalleFacturaNuevo', 600, 1200)">Nuevo</a>                                                        
                            </div>
                        {% endif %}
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleCursoActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                        </div>            
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleCursoEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>                    
        <a  class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_factura') }}">Volver</a>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}
        
</div>
{% endblock %}
