{% extends '::base_sin_menu.html.twig' %}
{% block title %}Simular programacion servicio - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Simular programacion servicio</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Generar</div>
            <div class="panel-body">  
                <div class="form-group form-group-sm">  
                    <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fecha, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                                        
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>INCONSISTENCIA</th>
                <th>DETALLE</th>

            </tr>
            {% for arSimulacionDetalle in arSimulacionDetalle %}
            <tr>                
                <td>{{ arSimulacionDetalle.codigoProgramacionInconsistenciaPk  }}</td>  
                <td>{{ arSimulacionDetalle.inconsistencia  }}</td> 
                <td>{{ arSimulacionDetalle.detalle  }}</td> 
            </tr>
            
            {% endfor %}
        </table>  
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
