{% extends '::base.html.twig' %}
{% block title %}Pedido lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista pedidos pendientes por programar</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arPedidos, 'CÃ“DIGO', 'p.codigoPedidoPk') }}</th>
                <th>TIPO</th>
                <th>FECHA</th>
                <th>CLIENTE</th>
                <th>SECTOR</th>                
                <th>PROGRAMADO</th>
                <th>H</th>
                <th>H.D</th>
                <th>H.N</th>
                <th>VALOR</th>                
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arPedidos in arPedidos %}
            <tr>                
                <td>{{ arPedidos.codigoPedidoPk  }}</td>  
                <td>{{ arPedidos.pedidoTipoRel.nombre  }}</td>  
                <td>{{ arPedidos.fecha |date("Y/m/d")  }}</td>                
                <td>{{ arPedidos.clienteRel.nombreCorto  }}</td>  
                <td>{{ arPedidos.sectorRel.nombre |default('')  }}</td> 
                <td>{% if arPedidos.estadoProgramado == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: right">{{ arPedidos.horas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPedidos.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPedidos.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPedidos.vrTotal | number_format(0, '.', ',') }}</td>                
                <td style="text-align: center"><a href="{{ path('brs_tur_pedido_nuevo', {'codigoPedido': arPedidos.codigoPedidoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_tur_pedido_detalle', { 'codigoPedido': arPedidos.codigoPedidoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedidos.codigoPedidoPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidos.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPedidos) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
