{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta empleados</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_entidadSaludRel" class="col-sm-2 control-label">Eps:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.entidadSaludRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_entidadPensionRel" class="col-sm-2 control-label">Pensión:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.entidadPensionRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_entidadCajaRel" class="col-sm-2 control-label">Caja compensación:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.entidadCajaRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarEmpleado, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>
                <th>TELÉFONO</th>
                <th>CELULAR</th>
                <th>DIRECCIÓN</th>
                <th>CIUDAD</th>
                <th>CORREO</th>
                <th>FECHA CONTRATO</th>
                <th>CARGO</th>
                <th>CENTRO COSTO</th>
                <th>EPS</th>
                <th>PENSIÓN</th>
                <th>CAJA COMPENSACIÓN</th>
            </tr>
            {% for arEmpleados in arEmpleados %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arEmpleados.codigoEmpleadoPk }}">{{ arEmpleados.codigoEmpleadoPk }} </td>
                <td>{{ arEmpleados.numeroIdentificacion  }}</td>
                <td>{{ arEmpleados.nombreCorto  }}</td>
                <td>{{ arEmpleados.telefono  }}</td>
                <td>{{ arEmpleados.celular  }}</td>
                <td>{{ arEmpleados.direccion  }}</td>
                <td>{% if arEmpleados.ciudadRel.nombre is defined %} {{ arEmpleados.ciudadRel.nombre  }} {% endif %}</td>
                <td>{{ arEmpleados.correo  }}</td>
                <td>{{ arEmpleados.fechaContrato |date("Y/m/d") }}</td>
                <td>{{ arEmpleados.cargoDescripcion}}</td>
                <td>{% if arEmpleados.centroCostoRel.nombre is defined %} {{ arEmpleados.centroCostoRel.nombre  }} {% endif %}</td>
                <td>{{ arEmpleados.entidadSaludRel.nombre }}</td>
                <td>{{ arEmpleados.entidadPensionRel.nombre }}</td>
                <td>{{ arEmpleados.entidadCajaRel.nombre }}</td>
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arEmpleados) }}
            </div>

        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcelEmpleado, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnPDFEmpleado, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>

        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}

