<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Base prestacional anterior</h4>
      </div>  
      {{ form_start(formIbpAdicional, { 'attr': {'class': 'form-horizontal'} }) }}
      
      <div class="modal-body">
 

        <div class="form-group form-group-sm">
            <label for="form_ibpAdicional" class="col-sm-4 control-label">Ibp adicional:</label>
            <div class="col-sm-8">
                    {{ form_widget(formIbpAdicional.ibpAdicional, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
            </div>
        </div> 
        <br />
        <blockquote>
          <p style="font-size: 0.8em;">* Base prestacional del contrato antes de iniciar operaciones en soga</p>
        </blockquote>     
                    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
        {{ form_widget(formIbpAdicional.BtnGuardar, { 'attr': {'class': 'btn btn-primary'} }) }}            
      </div>
      {{ form_end(formIbpAdicional) }}
    </div>
  </div>
</div>