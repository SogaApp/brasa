{% extends '::base.html.twig' %}
{% block title %}Procesos disciplinarios lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
<div class="container">
    <div class="page-header">
        <h3>Lista procesos disciplinarios</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                    <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arDisciplinarios, 'CODIGO', 'd.codigoDisciplinarioPk') }}</th>
                <th>CENTRO COSTO</th>
                <th>IDENTIFICACIÃ“N</th>
                <th>{{ knp_pagination_sortable(arDisciplinarios, 'NOMBRE', 'd.nombreCorto') }}</th>
                <th>CARGO</th>
                <th>PROCESO</th>
                <th>CAUSAL O MOTIVO</th>
                <th>DESCARGOS</th>
                <th>FECHA PROCESO</th>
                <th>FECHA PROCESO HASTA</th>
                <th>FECHA INGRESO TRABAJO</th>
                <th>AUTORIZADO</th>
                <th style="text-align: center"></th>
                <th></th>
                <th></th>
            </tr>
            {% for arDisciplinarios in arDisciplinarios %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arDisciplinarios.codigoDisciplinarioPk }}">{{ arDisciplinarios.codigoDisciplinarioPk }} </td>
                <td>{{ arDisciplinarios.centroCostoRel.nombre  }}</td>
                <td>{{ arDisciplinarios.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arDisciplinarios.empleadoRel.nombreCorto  }}</td>
                <td>{{ arDisciplinarios.empleadoRel.cargoDescripcion  }}</td>
                <td>{{ arDisciplinarios.disciplinarioTipoRel.nombre  }}</td>
                <td>{{ arDisciplinarios.asunto|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.descargos|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.fechaAplicaProceso|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.fechaAplicaHastaProceso|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.fechaIngresoTrabajo|default('NO APLICA')  }}</td>
                <td>{% if arDisciplinarios.estadoAutorizado == 1%}SI{% else %}NO{% endif %}</td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_disciplinario_nuevo', {'codigoCentroCosto':  arDisciplinarios.codigoCentroCostoFk, 'codigoEmpleado':  arDisciplinarios.codigoEmpleadoFk, 'codigoDisciplinario': arDisciplinarios.codigoDisciplinarioPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_disciplinario_detalle', { 'codigoDisciplinario': arDisciplinarios.codigoDisciplinarioPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDisciplinarios.codigoDisciplinarioPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->.
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Disciplinarios <span class="badge">{{ arDisciplinarios.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arDisciplinarios) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_disciplinario_nuevo', {'codigoDisciplinario': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm', 'onclick': 'return confirm("Esta seguro de eliminar el registro?")'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
