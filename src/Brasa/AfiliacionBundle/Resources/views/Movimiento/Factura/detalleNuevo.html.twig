{% extends '::base_sin_menu.html.twig' %}
{% block title %}Servicio detalle empleado nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo empleado pedido</h3> 
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>CODIGO</th>
                <th>CURSO</th>  
                <th>TOTAL</th>               
                <th>PENDIENTE</th>  
                <th></th>
            </tr>
            {% for arServicios in arServicios %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arServicios.codigoServicioPk }}">{{ arServicios.codigoServicioPk }} </td>                                
                <td style="text-align: right">{{ arServicios.curso | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arServicios.total | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arServicios.pendiente | number_format(0, '.', ',') }}</td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arServicios.codigoServicioPk }}" /></td>
            </tr>
            {% endfor %} 
        </table>                
        <div class="modal-footer">            
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}