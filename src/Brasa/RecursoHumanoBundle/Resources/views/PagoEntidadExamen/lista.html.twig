{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista pago entidad examenes</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arPagoEntidadExamenes, 'ID', 'e.codigoEncabezadoPagoExamenPk') }}</th>
                <th>ENTIDAD</th>
                <th>TOTAL</th>
                <th></th>
                <th></th>
            </tr>
            {% for arPagoEntidadExamenes in arPagoEntidadExamenes %}
            <tr>
                <td>{{ arPagoEntidadExamenes.codigoEncabezadoPagoExamenPk  }}</td>
                <td>{{ arPagoEntidadExamenes.entidadExamenRel.nombre|default('SIN ENTIDAD')  }}</td>
                <td>{{ arPagoEntidadExamenes.total }}</td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_pagoentidadexamen_detalle', { 'codigoEncabezadoPagoExamen':  arPagoEntidadExamenes.codigoEncabezadoPagoExamenPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagoEntidadExamenes.codigoEncabezadoPagoExamenPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>
        {{ knp_pagination_render(arPagoEntidadExamenes) }}


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagoentidadexamen_nuevo', { 'codigoEncabezadoPagoExamen': 0}) }}', 'AgregarExamen', 600, 900)"  style="float:left">Nuevo</a>
            </div>
            <div class="btn-group">
                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
