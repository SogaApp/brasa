
{% extends '::base.html.twig' %}
{% import 'BrasaGeneralBundle:plantillas:macros.html.twig' as utilidades %}
{% block content %}
<div class="container">                
    <p class="description"><h1>Consulta de kardex</h1></p>          
<hr/>

<form class="well" action="{{ path('brs_inv_consultas_kardex') }}" method="post" novalidate >
    <table class="main-all-table-form">
        <tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont"></span>
                        {% if arrControles %} {%set ultimo_item = arrControles.TxtCodigoItem %} {% else %} {%set ultimo_item = '' %} {% endif %} 
                        {{ utilidades.textboxitem(ultimo_item,7,false,false) }}
                </div>
            </tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont">Tercero</span>                    
                    {% if arrControles %} {%set codigo_tercero = arrControles.terceroconsulta %} {% else %} {%set codigo_tercero = '' %} {% endif %} 
                    {{ utilidades.textboxtercero(codigo_tercero,7,false,false,'terceroconsulta') }}
                </div>
            </tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont">Lote</span>
                    <input type="text" class="span2" name="TxtLote" {% if arrControles %} value="{{arrControles.TxtLote}}" {% endif %}>
                </div>
            </tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont">Bodega</span>                                                      
                    <select name="CboBodegas">
                        <option value="">Seleccione</option>
                        {% for bodega in arBodegas%}
                        <option value="{{bodega.codigoBodegaPk}}" {% if arrControles %} {% if arrControles.CboBodegas == bodega.codigoBodegaPk %} selected {%endif%}{% endif %}>{{bodega.nombre}}</option>
                        {%endfor%}
                    </select>
                </div>                    
            </tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont">Documentos</span>
                     <select name="CboDocumentos">
                        <option value="">Seleccione</option>
                                     {% for documento in arDocumentos%}
                        <option value="{{documento.codigoDocumentoPk}}" {% if arrControles %} {% if arrControles.CboDocumentos == documento.codigoDocumentoPk %} selected {%endif%}{%endif%}>{{documento.nombreDocumento}}</option>
                         {%endfor%}
                    </select>               

                </div>
            </tr>
            
            <tr>
                <div class="input-prepend">
                    <span class="add-on-zikmont">Fecha</span>
                    <input type="text" id="FechaDesde" class="span2" name="TxtFechaDesde" {% if arrControles %} value="{{arrControles.TxtFechaDesde}}" {% endif %} placeholder="Desde"/> 
                  - <input type="text" id="FechaHasta" class="span2" name="TxtFechaHasta" {% if arrControles %} value="{{arrControles.TxtFechaHasta}}" {% endif %} placeholder="Hasta"/>
                </div>
            </tr>

            <td></td>
            <td><button type="submit" name="register_submit" id="register_submit" class="btn btn-primary">Buscar</button></td>
          </tr>
       </tr>
   </table>
</form>     

<hr/>
{% if arMovimientosDetalle != "" %}
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Item</th>
                <th>Descripcion</th>                  
                <th>Documento</th>                    
                <th>NÃºmero</th>                    
                <th>Fecha</th>                    
                <th>Tercero</th>                    
                <th>Lote</th>
                <th>Bodega</th>                                                       
                <th>Cantidad</th>                    
                <th>Saldo</th>  
                <th>Costo</th>
                <th>Cto Prom</th>
                <th>Precio</th>                              
                <th>Ver</th>                    
            </tr>

    {% set Saldo = 0 %}

    {% for movimientoDetalle in arMovimientosDetalle %}
            <tr>                                                                              
                <td>{{ movimientoDetalle.codigoDetalleMovimientoPk }}</td>  
                <td>{{ movimientoDetalle.itemRel.codigoItemPk }}</td>
                <td>{{ movimientoDetalle.itemRel.descripcion }}</td>                      
                <td>{{ movimientoDetalle.movimientoRel.documentoRel.nombreDocumento }}</td>                             
                <td>{{ movimientoDetalle.movimientoRel.numeroMovimiento }}</td>                              
                <td>{{ movimientoDetalle.movimientoRel.fecha | date("d/m/Y H:i:s") }}</td>                              
                <td>{{ movimientoDetalle.movimientoRel.terceroRel.nombreCorto }}</td>                              
                <td>{{ movimientoDetalle.loteFk }}</td>                                                   
                <td>{{ movimientoDetalle.codigoBodegaFk }}</td>                                                                        
                <td>{{ movimientoDetalle.cantidadOperada }}</td>                                         
        {% set Saldo = (Saldo + movimientoDetalle.cantidadOperada) %}
                <td>{{ Saldo }}</td>                                         
                <td>{{ movimientoDetalle.vrCosto | number_format(2, '.', ',') }}</td>
                <td>{{ movimientoDetalle.vrCostoPromedio | number_format(2, '.', ',') }}</td>
                <td>{{ movimientoDetalle.vrPrecio | number_format(2, '.', ',') }}</td>                                         
                <td style="text-align: center"><a href="{{ path('brs_inv_movimientos_detalle', { 'codigoMovimiento': movimientoDetalle.codigoMovimientoFk }) }}" target="blank"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=18 height=18></a></td>
            </tr>
    {% endfor %}            

        </table>   
{% endif %}
    </div>
{% endblock %}