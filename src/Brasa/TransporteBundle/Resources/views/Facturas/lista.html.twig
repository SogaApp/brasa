{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
    <div class="page-header">
        <h3>Lista facturas</h3>
    </div>     
    <!-- Formulario de busqueda -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            {{ form_errors(form) }}         
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigoFactura" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtCodigoFactura, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">  
                <label for="form_TxtNumeroFactura" class="col-sm-2 control-label">Numero</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtNumeroFactura, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>     
            <div class="form-group form-group-sm">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                                {{ form_widget(form.TxtNombreTercero, { 'attr': {'class': 'form-control'} }) }}
                                <span class="input-group-btn">
                                    {{ form_widget(form.TxtCodigoTercero, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', {'campoCodigo': 'form_TxtCodigoTercero', 'campoNombre': 'form_TxtNombreTercero'}) }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>        
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                 
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                      {{ form_widget(form.ChkMostrarAnuladas) }} Anuladas
                    </label>
                </div>                                         
            </div>            
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.Buscar, { 'attr': {'class': 'btn btn-default', 'style':'float:right'} }) }}
                </div>
            </div>                               
            {{ form_rest(form) }}          
        </div>
    </div>                                  
    {{ form_end(form) }}    
    <form action="{{ path('brs_tte_guias_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Fecha</th>
                <th>Vence</th>
                <th>Nit</th>
                <th>Cliente</th>
                <th>Flete</th>
                <th>Manejo</th>
                <th>Otros</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {% for arFacturas in arFacturas %}

            <tr>
                <td><input type="hidden" name="LblCodigoFactura[]" value="{{ arFacturas.codigoFacturaPk }}">{{ arFacturas.codigoFacturaPk }} </td>
                <td>{{ arFacturas.numero  }}</td>
                <td>{{ arFacturas.fecha |date("Y/m/d")  }}</td>
                <td>{{ arFacturas.fechaVencimiento |date("Y/m/d")  }}</td>                
                <td>{{ arFacturas.terceroRel.nit }}</td>                
                <td>{{ arFacturas.terceroRel.nombreCorto }}</td>                
                <td style="text-align: right">{{ arFacturas.vrFlete | number_format(2, '.', ',')}}</td>
                <td style="text-align: right">{{ arFacturas.vrManejo | number_format(2, '.', ',')}}</td>
                <td style="text-align: right">{{ arFacturas.vrOtros | number_format(2, '.', ',')}}</td>
                <td style="text-align: center"><a href="{{ path('brs_tte_facturas_nuevo', { 'codigoFactura': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a></td>                
                <td style="text-align: center"><a href="{{ path('brs_tte_facturas_detalle', { 'codigoFactura': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturas.codigoFacturaPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                    
                <a class="btn btn-default" href="{{ path('brs_tte_facturas_nuevo', { 'codigoFactura': 0 }) }}" style="float:left">Nuevo</a>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAutorizar" >Exportar</button>       
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>   
</div>
{% endblock %}
