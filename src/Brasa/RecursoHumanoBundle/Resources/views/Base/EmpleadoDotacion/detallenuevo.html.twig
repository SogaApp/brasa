{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva dotación</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>ELEMENTO DOTACIÓN</th>
            <th></th>
        </tr>
        
            {%for arDotacionElementos in arDotacionElementos %}
               <tr>
                <td>{{arDotacionElementos.codigoDotacionElementoPk}}</td>
                <td>{{arDotacionElementos.dotacion}}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDotacionElementos.codigoDotacionElementoPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}