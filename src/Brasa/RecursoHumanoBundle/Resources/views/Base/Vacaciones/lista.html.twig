{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista vacaciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div>
    
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arVacaciones, 'CÓDIGO', 'v.codigoVacacionPk') }}</th>
                <th>CENTRO COSTO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>
                <th>PERIODO DESDE</th>
                <th>PERIODO HASTA</th>
                <th>DÍAS VACACIONES</th>
                <th>DÍAS PAGADOS</th>
                <th>DISFRUTADO DESDE</th>
                <th>DISFRUTADO HASTA</th>
                <th style="text-align: right">VR. DEDUCCIONES</th>
                <th style="text-align: right">VR. VACACIONES</th>
                <th>PAGADO</th>
                <th style="text-align: center"></th>
                <th style="text-align: center"></th>
                <th style="text-align: center"></th>
            </tr>
            {% for arVacaciones in arVacaciones %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arVacaciones.codigoVacacionPk }}">{{ arVacaciones.codigoVacacionPk }} </td>
                <td>{{ arVacaciones.centroCostoRel.nombre  }}</td>
                <td>{{ arVacaciones.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arVacaciones.empleadoRel.nombreCorto  }}</td>
                <td>{{ arVacaciones.fechaDesdePeriodo |date("Y/m/d")  }}</td>
                <td>{{ arVacaciones.fechaHastaPeriodo |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arVacaciones.diasVacaciones  }}</td>
                <td style="text-align: right">{{ arVacaciones.diasVacacionesPagadas  }}</td>
                <td>{{ arVacaciones.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arVacaciones.fechaHasta |date("Y/m/d")  }}</td>
                <td>{{ arVacaciones.vrDeduccion | number_format(2, '.', ',') }}</td>
                <td>{{ arVacaciones.vrVacacion | number_format(2, '.', ',') }}</td>
                <td>{% if arVacaciones.estadoPagado == 1 %} SI {% else %} NO {% endif %}</td>
                {% if arVacaciones.estadoPagado == 1 %}
                        <td style="text-align: center"><a href="#marcador" onclick="javascript:alert('No se puede modificar el registro, se encuenta pagada!');"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% else %}
                        <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_rhu_vacaciones_nuevo', {'codigoCentroCosto': arVacaciones.codigoCentroCostoFk, 'codigoEmpleado': arVacaciones.codigoEmpleadoFk, 'codigoVacacion': arVacaciones.codigoVacacionPk }) }}', 'Detalle Registro', 600, 900)" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                            
                {% endif %}
                <td><a href="{{ path('brs_rhu_vacaciones_detalle', { 'codigoVacacion': arVacaciones.codigoVacacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22 title="Detalles del registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arVacaciones.codigoVacacionPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        {{ knp_pagination_render(arVacaciones) }}


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>    
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
