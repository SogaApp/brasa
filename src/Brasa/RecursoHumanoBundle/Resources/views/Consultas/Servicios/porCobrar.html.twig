{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Servicios por cobrar</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                       
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>                     
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarServiciosPorCobrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>CENTRO COSTO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>                
                <th>DESDE</th>
                <th>HASTA</th>
                <th style="text-align: right">VR. SALARIO</th>
                <th style="text-align: right">VR. ARP</th>
                <th style="text-align: right">VR. EPS</th>
                <th style="text-align: right">VR. PENSIÓN</th>
                <th style="text-align: right">VR. AUX TRANSPORTE</th>
                <th style="text-align: right">VR. NETO</th>
                <th style="text-align: right">VR. TOTAL COBRAR</th>
            </tr>
            {% set douTotalNeto = 0  %}
            {% set douTotalCobrar = 0  %}
            {% for arServiciosPorCobrar in arServiciosPorCobrar %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arServiciosPorCobrar.codigoServicioCobrarPk }}">{{ arServiciosPorCobrar.codigoServicioCobrarPk }} </td>
                <td>{{ arServiciosPorCobrar.centroCostoRel.nombre  }}</td>
                <td>{{ arServiciosPorCobrar.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arServiciosPorCobrar.empleadoRel.nombreCorto  }}</td>                
                <td>{{ arServiciosPorCobrar.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arServiciosPorCobrar.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrSalario | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrArp | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrEps | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrPension | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrAuxilioTransporte | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrNeto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arServiciosPorCobrar.vrTotalCobrar | number_format(2, '.', ',') }}</td>
                {% set douTotalNeto = douTotalNeto + arServiciosPorCobrar.vrNeto %}
                {% set douTotalCobrar = douTotalCobrar + arServiciosPorCobrar.vrTotalCobrar %}
            </tr>
            {% endfor %}
                <td></td>
                <td></td>
                <td></td>
                <td></td>                
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style="text-align: right">{{ douTotalNeto | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalCobrar | number_format(2, '.', ',') }}</td>
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arServiciosPorCobrar) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arServiciosPorCobrar.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                   
                {{ form_widget(form.BtnExcelServiciosPorCobrar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnPDFServiciosPorCobrar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}   
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
