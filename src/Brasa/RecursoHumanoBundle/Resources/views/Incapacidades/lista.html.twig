{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista incapacidades</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumeroEps" class="col-sm-2 control-label">Numero Eps:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNumeroEps, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>     
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>        
                <div class="form-group form-group-sm">  
                    <label for="form_estadoTranscripcion" class="col-sm-2 control-label">Transcripcion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.estadoTranscripcion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>{{ knp_pagination_sortable(arIncapacidades, 'CÓDIGO', 'i.codigoIncapacidadPk') }}</th>
                <th>NÚMERO INCAPACIDAD</th>
                <th>NÚMERO EPS</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>                                                
                <th>CENTRO COSTO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th style="text-align: right">DÍAS</th>
                <th>COBRAR</th>
                <th>PRORROGA</th>
                <th>TRANSCRIPCIÓN</th>
                <th style="text-align: center"></th>                
                <th></th>
            </tr>
            {% for arIncapacidades in arIncapacidades %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arIncapacidades.codigoIncapacidadPk }}">{{ arIncapacidades.codigoIncapacidadPk }} </td>
                <td>{{ arIncapacidades.numero }}</td>
                <td>{{ arIncapacidades.numeroEps }}</td>
                <td>{{ arIncapacidades.empleadoRel.numeroIdentificacion }}</td>
                <td>{{ arIncapacidades.empleadoRel.nombreCorto  }}</td>
                <td>{{ arIncapacidades.centroCostoRel.nombre  }}</td>
                <td>{{ arIncapacidades.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arIncapacidades.fechaHasta |date("Y/m/d")  }}</td>                                                
                <td style="text-align: right">{{ arIncapacidades.cantidad | number_format(2, '.', ',') }}</td>                                            
                <td>{% if arIncapacidades.estadoCobrar == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arIncapacidades.estadoProrroga == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arIncapacidades.estadoTranscripcion == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_rhu_incapacidades_nuevo', {'codigoCentroCosto': arIncapacidades.codigoCentroCostoFk, 'codigoEmpleado': arIncapacidades.codigoEmpleadoFk, 'codigoIncapacidad': arIncapacidades.codigoIncapacidadPk }) }}', 'AgregarIncapacidad', 600, 900)" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                               
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arIncapacidades.codigoIncapacidadPk }}" /></td>
            </tr>
            {% endfor %}                        
        </table>                       
        {{ knp_pagination_render(arIncapacidades) }}    


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    Enlaces <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="{{ path('brs_rhu_base_empleados_lista') }}" target="_blank">Empleados</a></li>              
                  <li class="divider"></li>
                  <li><a href="{{ path('brs_rhu_base_centros_costos_lista') }}">Centros costos</a></li>              
                </ul>
            </div> 
                
            <div class="btn-group">
                {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
