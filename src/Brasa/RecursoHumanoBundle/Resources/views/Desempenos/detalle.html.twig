{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Detalles de la gestión de desempeño</h3>
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-group">
            {{ form_widget(form.BtnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
            {{ form_widget(form.BtnDesAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
            {{ form_widget(form.BtnCerrar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
        </div>
        <br /> <br />
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CÓDIGO:</td>
                    <td class="td-in-well">{{ arDesempeno.codigoDesempenoPk }}</td>
                    <td class="titulo">FECHA:</td>
                    <td class="td-in-well">{{ arDesempeno.fecha|date("Y/m/d") }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>                 
                <tr>
                    <td colspan="8">COMENTARIOS: </td>
                </tr>
            </table>
            </div>
        </div>
        <a name="marcador"></a>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#detalle" data-toggle="tab">Detalle</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="detalle">
                <br />
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>CÓDIGO</th>
                        <th>CONCEPTO</th>
                        <th>SIEMPRE</th>
                        <th>CASI SIEMPRE</th>
                        <th>ALGUNAS VECES</th>
                        <th>CASI NUNCA</th>
                        <th>NUNCA</th>
                        <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                    </tr>
                    {% for arDesempenosDetalles in arDesempenosDetalles %}
                        <tr>                            
                            <td>
                                <input type="hidden" name="LblCodigo[]" value="{{ arDesempenosDetalles.codigoDesempenoDetallePk }}">
                                <span class="badge">{{ arDesempenosDetalles.codigoDesempenoDetallePk }}</span>
                            </td>
                            <td>{{ arDesempenosDetalles.desempenoConceptoRel.nombre }}</td>
                            {% if arDesempeno.estadoCerrado == 0 %}
                                <td style="text-align: right"><input class="input-grid" type="text" name="TxtSiempre{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" value="{{ arDesempenosDetalles.siempre }}" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCasiSiempre{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" value="{{ arDesempenosDetalles.casiSiempre }}" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                <td style="text-align: right"><input class="input-grid" type="text" name="TxtAlgunasVeces{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" value="{{ arDesempenosDetalles.algunasVeces }}" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCasiNunca{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" value="{{ arDesempenosDetalles.casiNunca }}" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                <td style="text-align: right"><input class="input-grid" type="text" name="TxtNunca{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" value="{{ arDesempenosDetalles.nunca }}" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                            {% else %}
                                <td style="text-align: right">{{ arDesempenosDetalles.siempre | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arDesempenosDetalles.casiSiempre | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arDesempenosDetalles.algunasVeces | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arDesempenosDetalles.casiNunca | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arDesempenosDetalles.nunca | number_format(0, '.', ',') }}</td>
                            {% endif %}                            
                            
                            
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDesempenosDetalles.codigoDesempenoDetallePk }}" /></td>
                        </tr>
                    {% endfor %}
                </table>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        {% if  arDesempeno.estadoAutorizado == 0 %}                                                    
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_desempeno_detalle_nuevo', {'codigoDesempeno': arDesempeno.codigoDesempenoPk }) }}', 'AgregarConceptoDesempeno', 600, 900)" >Nuevo</a>
                        {% endif %}                             
                    </div>
                    <div class="btn-group">                
                        {{ form_widget(form.BtnActualizarDetalle, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}               
                        {{ form_widget(form.BtnEliminarDetalle, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}               
                    </div>                    
                </div>        
                
                {{ knp_pagination_render(arDesempenosDetalles) }}       
                
            </div>                                       
        </div>
        
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_desempeno_lista') }}" style="float:left">Volver</a>
            </div>
        </div>
        <br /><br />
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
