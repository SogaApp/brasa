{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="page-header">
        <h3>Recibos caja</h3>          
    </div>
<div class="panel panel-default">
    <div class="panel-heading">Filtros de busqueda</div>
    <div class="panel-body">
        {{ form_errors(form) }}           
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                 
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.Buscar, { 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
            </div>        
            {{ form_rest(form) }}                 
        {{ form_end(form) }}     
    </div>
</div>        
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>{{ knp_pagination_sortable(arRecibosCaja, 'ID', 'arRecibosCaja.codigoReciboPk') }}</th>
            <th>Fecha</th>
            <th>Numero guia</th>                        
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
        </tr>
        {% for arRecibosCaja in arRecibosCaja %}
        <tr>
            <td>
                <input type="hidden" name="LblCodigoReiciboCaja[]" value="{{ arRecibosCaja.codigoReciboCajaPk }}">
                <span class="badge">{{ arRecibosCaja.codigoReciboCajaPk }}</span>
            </td>
            <td>{{ arRecibosCaja.fecha |date("Y/m/d")  }}</td>
            <td>{{ arRecibosCaja.guiaRel.numeroGuia  }}</td>                                                
            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecibosCaja.codigoReciboCajaPk }}" /></td>
        </tr>
        {% endfor %}                        
    </table>
    <div class="navigation">
        {{ knp_pagination_render(arRecibosCaja) }}
    </div>
</div>
{% endblock %}
