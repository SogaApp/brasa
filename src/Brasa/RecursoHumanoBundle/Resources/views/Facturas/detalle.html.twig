{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Factura detalle</h3>
    </div>

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion programacion pago</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="td-label">Codigo:</td>
                    <td class="td-in-well">{{ arFactura.codigoFacturaPk }}</td>
                    <td class="td-label">Fecha:</td>
                    <td class="td-in-well">{{ arFactura.fecha|date("Y/m/d") }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Bruto:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>                   
                </tr>
                <tr>
                    <td class="td-label">Numero:</td>
                    <td class="td-in-well">{{ arFactura.numero }}</td>
                    <td class="td-label">Vence:</td>
                    <td class="td-in-well">{{ arFactura.fechaVence|date("Y/m/d") }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Retencion fuente:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>                   
                </tr>
                <tr>
                    <td class="td-label">Tercero:</td>
                    <td class="td-in-well">{{ arFactura.terceroRel.nombreCorto }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Retencion CREE:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>
                </tr>    
                <tr>
                    <td class="td-label">Centro costo:</td>
                    <td class="td-in-well">{{ arFactura.centroCostoRel.nombre }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Iva:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>
                </tr>                 
                <tr>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Retencion iva:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>
                </tr> 
                <tr>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Total neto:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arFactura.codigoFacturaPk }}</td>
                </tr>                 
                <tr>
                    <td colspan="8">Comentarios:</td>
                </tr>
            </table>
      </div>
    </div>

    <!-- Fin Encabezado Movimiento -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-group">                        
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default'} }) }}                            
        </div>
    <br /><br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
        <li><a href="#conceptos" data-toggle="tab">Conceptos</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="detalles">                
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>ID</th>                            
                            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                        </tr>
                        {% for arFacturaDetalles in arFacturaDetalles %}
                        <tr>
                            <td>
                                <input type="hidden" name="LblCodigoGuia[]" value="{{ arFacturaDetalles.codigoFacturaDetallePk }}">
                                <span class="badge">{{ arFacturaDetalles.codigoFacturaDetallePk }}</span>
                            </td>                            
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturaDetalles.codigoFacturaDetallePk }}" /></td>
                        </tr>
                        {% endfor %}
                    </table>

                    <!-- Botones Menu Items -->
                    <div class="btn-toolbar" style="float:left">
                        <div class="btn-group">
                            <a class="btn btn-default" href="{{ path('brs_rhu_pagos_lista') }}" style="float:left">Volver</a>
                        </div>
                    </div>
                    <!-- Fin Botones Menu Items -->
                    <div class="btn-toolbar" style="float:right">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_facturas_agregar_pago', {'codigoFactura': arFactura.codigoFacturaPk}) }}', 'AgregarGuia', 600, 1000)" >Agregar</a>
                            {{ form_widget(form.BtnRetirarDetalle, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                        
                        </div>
                    </div>
                    <br/><br/>
                    <hr/>
                </div>
            
        </div>
        <div class="tab-pane" id="conceptos">

        </div>
    </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
