{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Adicionales de los pagos</h3>            
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion centro costo</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="td-label">Numero:</td>
                    <td class="td-in-well">{{ arCentroCosto.codigoCentroCostoPk }}</td>
                    <td class="td-label">Ultimo periodo:</td>
                    <td class="td-in-well">{{ arCentroCosto.fechaUltimoPagoProgramado |date("Y/m/d") }}</td>
                </tr>
                <tr>
                    <td class="td-label">Nombre:</td>
                    <td class="td-in-well">{{ arCentroCosto.nombre }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                </tr>
                <tr>
                    <td colspan="8">Comentarios:</td>
                </tr>
            </table>
      </div>
    </div>    

    <!-- Fin Encabezado Movimiento -->
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>ID</th>
                        <th>TIPO</th>
                        <th>SUBTIPO</th>
                        <th>DETALLE</th>
                        <th>EMPLEADO</th>
                        <th>CANT</th>
                        <th>VALOR</th>
                        <th>PERMANENTE</th>
                        <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                    </tr>
                    {% for arPagosAdicionales in arPagosAdicionales %}
                    <tr>
                        <td>
                            <input type="hidden" name="LblCodigoGuia[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}">
                            <span class="badge">{{ arPagosAdicionales.codigoPagoAdicionalPk }}</span>
                        </td>
                        <td>{{ arPagosAdicionales.pagoAdicionalTipoRel.nombre}}</td>
                        <td>{{ arPagosAdicionales.pagoAdicionalSubtipoRel.nombre }}</td>
                        <td>{{ arPagosAdicionales.detalle }}</td>
                        <td>{{ arPagosAdicionales.empleadoRel.nombreCorto }}</td>
                        <td style="text-align: right">{{ arPagosAdicionales.cantidad | number_format(1, '.', ',') }}</td>                            
                        <td style="text-align: right">{{ arPagosAdicionales.valor | number_format(2, '.', ',') }}</td>                                                        
                        <td>{% if arPagosAdicionales.permanente == 1 %} SI {% else %} NO {% endif %}</td>                        
                        <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}" /></td>
                    </tr>
                    {% endfor %}
                </table>
                <!-- Botones Menu Items -->
                <div class="btn-toolbar" style="float:left">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_lista') }}" style="float:left">Volver</a>
                    </div>
                </div>

                <div class="btn-toolbar" style="float:right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_tiempo', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk}) }}', 'AgregarTiempo', 600, 900)" >Tiempo suplementario</a>
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_valor', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk, 'tipo': 1 }) }}', 'AgregarValor', 600, 900)" >Bonificacion</a>                        
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_valor', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk, 'tipo': 2 }) }}', 'AgregarValor', 600, 900)" >Comision</a>                                                
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_valor', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk, 'tipo': 4 }) }}', 'AgregarValor', 600, 900)" >Descuento</a>                                                                        
                        {{ form_widget(form.BtnConceptoPermanente, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}                                                
                        {{ form_widget(form.BtnRetirarConcepto, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                        
                    </div>
                </div>                

    {{ form_end(form) }}
</div>
{% endblock %}
