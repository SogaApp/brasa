{% extends '::base.html.twig' %}
{% block title %}Factura lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista factura</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arDocumentos, 'CÃ“DIGO', 'p.codigoFacturaPk') }}</th>
                <th>TIPO</th>
                <th>SERVICIO</th>
                <th>NUMERO</th>
                <th>FECHA</th>
                <th>VENCE</th>
                <th>CLIENTE</th>
                <th>TOTAL</th>    
                <th>AUT</th>
                <th>CON</th>
                <th>ANU</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arDocumentos in arDocumentos %}
            <tr>                                             
                <td>{{ arDocumentos.codigoFacturaPk  }}</td>  
                <td>{{ arDocumentos.facturaTipoRel.nombre |default('')  }}</td>
                <td>{{ arDocumentos.facturaServicioRel.nombre |default('')  }}</td>
                <td>{{ arDocumentos.numero  }}</td>
                <td>{{ arDocumentos.fecha |date("Y/m/d")  }}</td>
                <td>{{ arDocumentos.fechaVence |date("Y/m/d")  }}</td>
                <td>{{ arDocumentos.clienteRel.nombreCorto |default('') }}</td>
                <td style="text-align: right">{{ arDocumentos.vrTotal | number_format(0, '.', ',') }}</td>                
                <td>{% if arDocumentos.estadoAutorizado == 1 %} SI {% else %} NO {% endif %}</td>                
                <td>{% if arDocumentos.estadoContabilizado == 1 %} SI {% else %} NO {% endif %}</td>                
                <td>{% if arDocumentos.estadoAnulado == 1 %} SI {% else %} NO {% endif %}</td>                
                {% if arDocumentos.facturaTipoRel.tipo == 1 %} 
                    <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_factura_nuevo', {'codigoFactura': arDocumentos.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% else %} 
                    <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_nota_credito_nuevo', {'codigoFactura': arDocumentos.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% endif %}                
                <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_factura_detalle', { 'codigoFactura': arDocumentos.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDocumentos.codigoFacturaPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arDocumentos.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arDocumentos) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">      
                {{ form_widget(form.BtnInterfaz, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_nota_credito_nuevo', {'codigoFactura': 0}) }}">Nueva nota credito</a>                                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_factura_nuevo', {'codigoFactura': 0}) }}">Nueva factura</a>                                                
            </div>
            <div class="btn-group">                                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
