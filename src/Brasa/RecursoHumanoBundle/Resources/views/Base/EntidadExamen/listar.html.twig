                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEntidadesExamen.codigoEntidadExamenPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>
    {{ knp_pagination_render(arEntidadesExamen) }}
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class='btn-group'>
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_entidadexamen_nuevo', {'codigoEntidadExamenPk': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
        </div>
        
    </div>     
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}