{% extends '::base.html.twig' %}

{% block content %}
<div class="container">    
    {{ form_start(formBanco, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formBanco) }}
    <h3>Nuevo banco</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formBanco.nombre, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Convenio nomina:</label>
                <div class="col-sm-10">
                        {{ form_widget(formBanco.convenioNomina, { 'attr': {'onkeypress': 'txNombres();', 'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Número digitos:</label>
                <div class="col-sm-10">
                        {{ form_widget(formBanco.numeroDigitos, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
    
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_banco_listar') }}">Cancelar</a>
            {{ form_widget(formBanco.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formBanco) }}
</div>    
{% endblock %}
