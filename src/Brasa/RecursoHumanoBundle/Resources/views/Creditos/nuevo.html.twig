{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo credito</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_creditoTipoRel" class="col-sm-2 control-label">Credito:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.creditoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_vrPagar" class="col-sm-2 control-label">Total credito:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vrPagar, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_numeroCuotas" class="col-sm-2 control-label">Cuotas:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.numeroCuotas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>                   
    <div class="modal-footer">      
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_creditos_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}