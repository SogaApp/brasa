{% extends '::base.html.twig' %}
{% block content %}

<div class="container">          
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva factura</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion cliente</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="CboTercero" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.terceroRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>        
  
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
        </div>
    </div> 
    <div class="modal-footer">
        <a class="btn btn-default" href="{{ path('brs_tte_facturas_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>    
        {{ form_end(form) }}   
</div>
{% endblock %}