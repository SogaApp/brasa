{% extends '::base_sin_menu.html.twig' %}
{% block title %}Pedido detalle nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Recursos</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">  
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Recurso:</label>
                <div class="col-sm-10">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNumeroIdentificacion"  name="txtNumeroIdentificacion"  type="text" class="form-control" value=""/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_recurso', { 'campoCodigo': 'txtNumeroIdentificacion', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>                          
            <div class="form-group form-group-sm">
                <label for="form_TxtPosicion" class="col-sm-2 control-label">Posicion:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.TxtPosicion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                                                                                             
        </div>
    </div>               
    <div class="modal-footer">        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}        
    </div>        
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>RECURSO</th>
                <th>POS</th>
                <th></th>
            </tr>
            {% for arPedidoDetalleRecursos in arPedidoDetalleRecursos %}
                <tr>
                    <td>{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk  }}<input type="hidden" name="LblCodigo[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}"></td>
                    <td>{{ arPedidoDetalleRecursos.recursoRel.nombreCorto | default('') }}</td>                     
                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtPosicion{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" value="{{ arPedidoDetalleRecursos.posicion  }}" size="3" style="width:30px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                        
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" /></td>
                </tr>
            {% endfor %}
        </table> 
        <div class="btn-toolbar" style="float: right">          
            <div class="btn-group">
                {{ form_widget(form.BtnDetalleActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>        
            <div class="btn-group">
                {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>        
        
    {{ form_end(form) }}
    
</div>
{% endblock %}