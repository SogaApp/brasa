{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <h3>Nuevo cliente</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_nit" class="col-sm-3 control-label">Nit:</label>
                    <div class="col-sm-9">
                        {% if form_errors(form.nit) %}
                            {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}
                            <div class="alert alert-danger" role="alert">{{ form_errors(form.nit) }}</div>
                        {% else %}
                            {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}
                        {% endif %}
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label for="form_digitoVerificacion" class="col-sm-3 control-label">Digito verificacion:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.dv, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_nombreCorto" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_afi_base_razonSocial') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}