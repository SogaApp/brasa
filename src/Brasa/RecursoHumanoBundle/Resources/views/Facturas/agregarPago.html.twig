{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <div class="container">                   
        <p class="description"><h3>Agregar pago</h3></p>      
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}            
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>EMPLEADO</th>                    
                    <th style="text-align: right">IBC</th>
                    <th style="text-align: right">T. A</th>
                    <th style="text-align: right">V. A</th>
                    <th style="text-align: right">AUX. TRANS</th>
                    <th style="text-align: right">ARP</th>
                    <th style="text-align: right">EPS</th>
                    <th style="text-align: right">PENSION</th>
                    <th style="text-align: right">CAJA</th>
                    <th style="text-align: right">CESANTIAS</th>
                    <th style="text-align: right">VACACIONES</th>
                    <th style="text-align: right">ADMON</th>
                    <th style="text-align: right">COSTO</th>
                    <th style="text-align: right">TOTAL</th>
                    <th></th>
                </tr>

                {% for arPagos in arPagos %}
                    <tr> 
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arPagos.codigoPagoPk }}">{{ arPagos.codigoPagoPk }}</td>  
                        <td>{{ arPagos.empleadoRel.nombreCorto }}</td>                    
                        <td style="text-align: right">{{ arPagos.VrIngresoBaseCotizacion | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrAdicionalTiempo | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrAdicionalValor | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrAuxilioTransporte | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrArp | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrEps | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrPension | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrCaja | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrCesantias | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrVacaciones | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrAdministracion | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrCosto | number_format(2, '.', ',') }}</td>
                        <td style="text-align: right">{{ arPagos.VrTotalCobrar | number_format(2, '.', ',') }}</td>
                        <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagos.codigoPagoPk }}" /></td>
                    </tr>
                {% endfor %}                                
            </table>
            {{ knp_pagination_render(arPagos) }}
            <div class="modal-footer">                
                {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div> 
            <br />
        {{ form_end(form) }}

</div>
{% endblock %}