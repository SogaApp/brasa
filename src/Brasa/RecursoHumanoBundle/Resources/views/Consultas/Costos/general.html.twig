{% extends '::base.html.twig' %}
{% block title %}Consulta costos general - Soga App{% endblock %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta costos general</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                       
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>NUMERO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>                
                <th>C. COSTO</th>
                <th>CONTRATO</th>
                <th>P. DESDE</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th style="text-align: right">IBC</th>
                <th style="text-align: right">AUX. TRANS</th>
                <th style="text-align: right">CESANTIAS</th>
                <th style="text-align: right">PENSION</th>
                <th style="text-align: right">SALUD</th>
                <th style="text-align: right">COSTO</th>
            </tr>
            {% set douTotalIBC = 0  %}            
            {% set douTotalSalud = 0  %}            
            {% set douTotalPension = 0  %}            
            {% set douTotalCesantias = 0  %}
            {% for arPagos in arPagos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arPagos.codigoPagoPk }}">{{ arPagos.codigoPagoPk }} </td>
                <td>{{ arPagos.numero  }}</td>
                <td>{{ arPagos.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arPagos.empleadoRel.nombreCorto  }}</td>
                <td>{{ arPagos.centroCostoRel.nombre  }}</td>
                <td>{{ arPagos.codigoContratoFk  }}</td>
                <td>{{ arPagos.fechaDesdePago |date("Y/m/d")  }}</td>
                <td>{{ arPagos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arPagos.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arPagos.vrIngresoBaseCotizacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrAuxilioTransporte | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrCesantias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrPension | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrEps | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrCosto | number_format(0, '.', ',') }}</td>
                {% set douTotalIBC = douTotalIBC + arPagos.vrIngresoBaseCotizacion %}                
                {% set douTotalPension = douTotalPension + arPagos.vrPension %}                
                {% set douTotalSalud = douTotalSalud + arPagos.vrEps %}                
                {% set douTotalCesantias = douTotalCesantias + arPagos.vrCesantias %}
            </tr>
            {% endfor %}
                <td colspan="9"></td>
                <td style="text-align: right">{{ douTotalIBC | number_format(0, '.', ',') }}</td>
                <td style="text-align: right"></td>
                <td style="text-align: right">{{ douTotalCesantias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalPension | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalSalud | number_format(0, '.', ',') }}</td>
                <td style="text-align: right"></td>            
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arPagos) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPagos.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                
                {{ form_widget(form.BtnPDF, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
