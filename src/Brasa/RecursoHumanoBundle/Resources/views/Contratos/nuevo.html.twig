{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo contrato</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_numero" class="col-sm-2 control-label">Numero:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>              
            <div class="form-group form-group-sm">
                <label for="form_vrSalario" class="col-sm-2 control-label">Salario:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vrSalario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label for="form_estadoActivo" class="col-sm-2 control-label">Vigente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.estadoActivo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>                   
    <div class="modal-footer">      
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_empleados_detalles', { 'codigoEmpleado': arEmpleado.codigoEmpleadoPk}) }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}