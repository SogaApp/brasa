{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Soporte pago detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}        
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagos, 'CÓDIGO', 'p.codigoSoportePagoPk') }}</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>RECURSO</th>
                <th>DIAS</th>
                <th>DESCANSO</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
                <th>CONTRATO</th>
                <th>SALARIO</th>
            </tr>
            {% for arSoportesPagos in arSoportesPagos %}
            <tr>
                <td>{{ arSoportesPagos.codigoSoportePagoPk  }}</td>
                <td>{{ arSoportesPagos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagos.fechaHasta |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagos.recursoRel.nombreCorto  }}</td>
                <td style="text-align: right">{{ arSoportesPagos.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasFestivasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>
                <td>{{ arSoportesPagos.codigoContratoFk }}</td>
                <td style="text-align: right">{{ arSoportesPagos.vrSalario | number_format(0, '.', ',') }}</td>
            </tr>

            {% endfor %}
        </table>
        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <br /><br /><br />
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagos, 'CÓDIGO', 'p.codigoSoportePagoPk') }}</th>
                <th>FECHA</th>
                <th>RECURSO</th>
                <th>TURNO</th>
                <th>DIAS</th>
                <th>DESCANSO</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
            </tr>
            {% for arSoportesPagosDetalles in arSoportesPagosDetalles %}
            <tr>
                <td>{{ arSoportesPagosDetalles.codigoSoportePagoDetallePk  }}</td>
                <td>{{ arSoportesPagosDetalles.fecha |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagosDetalles.recursoRel.nombreCorto  }}</td>
                <td>{{ arSoportesPagosDetalles.codigoTurnoFk  }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasFestivasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosDetalles.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>
            </tr>

            {% endfor %}
        </table>
        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
            <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_proceso_generar_soporte_pago') }}">Volver</a>            
        </div>
        <div class="btn-group" style="float: left">                
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagosDetalles.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagosDetalles) }}
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
    

</div>
{% endblock %}
