{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Detalles dotación</h3>
        </div>

        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                    {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_ad_archivos_lista', { 'codigoDocumento': 8,  'numero': arDotaciones.codigoDotacionPk }) }}', 'Archivos', 500, 700)" >Archivos</a>
            </div>
        </div>
        <br /><br />
        <div class="panel panel-default">
            <div class="panel-heading">Información de la dotación</div>
            <div class="panel-body">    
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CODIGO:</td>
                        <td class="td-in-well">{{ arDotaciones.codigoDotacionPk }}</td>
                        <td class="titulo">FECHA:</th>
                        <td class="td-in-well">{{ arDotaciones.fecha |date("Y/m/d") }}</td>
                        <td class="titulo">NÚMERO INTERNO REFERENCIA:</th>
                        <td class="td-in-well" align="right">{{ arDotaciones.codigoInternoReferencia}}</td>                        
                    </tr>
                    <tr>
                        <td class="titulo">IDENTIFICACIÓN:</td>
                        <td class="td-in-well">{{ arDotaciones.empleadoRel.numeroIdentificacion }}</td>
                        <td class="titulo">EMPLEADO:</td>
                        <td class="td-in-well">{{ arDotaciones.empleadoRel.nombreCorto }}</td>
                        <td class="titulo">CENTRO COSTOS:</th>
                        <td class="td-in-well" align="right">{{ arDotaciones.centroCostoRel.nombre}}</td>                                                
                    </tr>                    
                    <tr>
                        <td class="titulo" >COMENTARIOS: </td>
                        <td class="td-in-well" colspan="7">{{ arDotaciones.comentarios }}</td>
                    </tr>                    
                </table>
            </div>
        </div>
        <div class="panel panel-default">
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>CÓDIGO</th>
                    <th>ELEMENTO DOTACIÓN</th>
                    <th>CANTIDAD ASIGNADA</th>
                    <th>CANTIDAD DEVUELTA</th>
                    <th>SERIE</th>
                    <th>LOTE</th>
                    <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                </tr>
                {% for arDotacionDetalles in arDotacionDetalles %}
                <tr>
                    <td>
                        <input type="hidden" name="LblCodigoGuia[]" value="{{ arDotacionDetalles.codigoDotacionDetallePk }}">
                        <span class="badge">{{ arDotacionDetalles.codigoDotacionDetallePk }}</span>
                    </td>
                    <td>{{ arDotacionDetalles.dotacionElementoRel.dotacion }}</td>
                    <td>{{ arDotacionDetalles.cantidadAsignada }}</td>
                    <td>{{ arDotacionDetalles.cantidadDevuelta }}</td>
                    <td>{{ arDotacionDetalles.serie }}</td>
                    <td>{{ arDotacionDetalles.lote }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDotacionDetalles.codigoDotacionDetallePk }}" /></td>
                </tr>
                {% endfor %}
            </table>
        </div> 
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_dotacion_lista') }}" style="float:left">Volver</a>
            </div>
        </div>  
        <div class="btn-toolbar" style="float: right">                           
            <div class="btn-group">                
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_dotacion_detalle_nuevo', {'codigoDotacion': arDotaciones.codigoDotacionPk}) }}', 'AgregarNuevo', 600, 900)">Agregar dotación elemento</a>
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>             
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
