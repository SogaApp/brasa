{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacaciones detalle deducción nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva deducción</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>CÓDIGO</th>
            <th>NOMBRE</th>
            <th>VALOR</th>
            <th></th>
        </tr>
        
            {%for arCreditos in arCreditos %}
               <tr>
                <td>{{arCreditos.codigoCreditoPk}}</td>
                <td>{{arCreditos.creditoTipoRel.nombre}}</td>
                <td>{{arCreditos.saldoTotal | number_format(2, '.', ',') }}</td>            
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCreditos.codigoCreditoPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}