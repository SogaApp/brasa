{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <div class="container">                   
        <p class="description"><h3>Agregar concepto</h3></p>      
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="panel panel-default">
                <div class="panel-heading">Datos empleado</div>
                <div class="panel-body">
                    <div class="form-group form-group-sm">
                        <label for="CboEmpleado" class="col-sm-2 control-label">Empleado:</label>
                        <div class="col-sm-10">
                                {{ form_widget(form.empleadoRel, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>            
                </div>
            </div>             
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th style="text-align: right">HORAS</th>
                    <th style="text-align: right">VALOR</th>
                </tr>

                {% for arPagosConceptos in arPagosConceptos %}
                    <tr> 
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arPagosConceptos.codigoPagoConceptoPk }}">{{ arPagosConceptos.codigoPagoConceptoPk }}</td>  
                        <td>{{ arPagosConceptos.nombre}}</td>
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtHoras[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()" {% if arPagosConceptos.componePorcentaje == 0 %} readonly="true" {% endif %}/></td>                               
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtValor[]" value="0" size="15" style="text-align: right; width:150px" onkeypress="return validarNumeros(event)" onclick="this.select()" {% if arPagosConceptos.componeValor == 0 %} readonly="true" {% endif %}/></td>                                                       
                    </tr>
                {% endfor %}                                
            </table>

            <div class="modal-footer">
                <a class="btn btn-default" href="{{ path('brs_tte_despachos_lista') }}">Vovler</a>
                {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div> 
            <br />
        {{ form_end(form) }}

</div>
{% endblock %}