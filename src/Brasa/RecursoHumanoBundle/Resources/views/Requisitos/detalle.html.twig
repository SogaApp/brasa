{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Detalles del requisito</h3>
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-group">
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_ad_archivos_lista', { 'codigoDocumento': 4,  'numero': arRequisito.codigoRequisitoPk }) }}', 'Archivos', 500, 700)" >Documentos</a>                        
        </div>
        <br /> <br />
        <div class="panel panel-default">
            <div class="panel-heading">Información contrato</div>
            <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CÓDIGO:</td>
                    <td class="td-in-well">{{ arRequisito.codigoRequisitoPk }}</td>
                    <td class="titulo">FECHA:</td>
                    <td class="td-in-well">{{ arRequisito.fecha|date("Y/m/d") }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>                 
                <tr>
                    <td colspan="8">COMENTARIOS: {{ arRequisito.comentarios }}</td>
                </tr>
            </table>
            </div>
        </div>
        <a name="marcador"></a>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#detalle" data-toggle="tab">Detalle</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="detalle">
                <br />
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>CÓDIGO</th>
                        <th>CONCEPTO</th>
                    </tr>
                    {% for arRequisitosDetalles in arRequisitosDetalles %}
                        <tr>
                            <td><input type="hidden" name="LblCodigo[]" value="{{ arRequisitosDetalles.codigoRequisitoDetallePk }}">{{ arRequisitosDetalles.codigoRequisitoDetallePk }} </td>
                            <td>{{ arRequisitosDetalles.requisitoConceptoRel.nombre }}</a></td>
                        </tr>
                    {% endfor %}
                </table>
                <div class="btn-toolbar" style="float: right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_cambio_salario_nuevo', {'codigoContrato': arRequisito.codigoRequisitoPk, 'codigoCambioSalario': 0 }) }}', 'AgregarCambioSalario', 600, 900)" >Nuevo</a>
                    </div>
                </div>        
                
                {{ knp_pagination_render(arRequisitosDetalles) }}       
                
            </div>                                       
        </div>
        
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_requisito_lista') }}" style="float:left">Volver</a>
            </div>
        </div>
        <br /><br />
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
