{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
    <div class="page-header">
        <h3>Lista facturas</h3>
    </div>              
    <form action="{{ path('brs_tte_guias_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Fecha</th>
                <th>Vence</th>
                <th>Flete</th>
                <th>Manejo</th>
                <th>Otros</th>
                <th>Total</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {% for arFacturas in arFacturas %}

            <tr>
                <td><input type="hidden" name="LblCodigoFactura[]" value="{{ arFacturas.codigoFacturaPk }}">{{ arFacturas.codigoFacturaPk }} </td>
                <td>{{ arFacturas.numero  }}</td>
                <td>{{ arFacturas.fecha |date("Y/m/d")  }}</td>
                <td>{{ arFacturas.fechaVencimiento |date("Y/m/d")  }}</td>                
                <td style="text-align: right">{{ arFacturas.vrFlete | number_format(2, '.', ',')}}</td>
                <td style="text-align: right">{{ arFacturas.vrManejo | number_format(2, '.', ',')}}</td>
                <td style="text-align: right">{{ arFacturas.vrOtros | number_format(2, '.', ',')}}</td>
                <td style="text-align: center"><a href="{{ path('brs_tte_despachos_nuevo', { 'codigoDespacho': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a></td>                
                <td style="text-align: center"><a href="{{ path('brs_tte_despachos_detalle', { 'codigoDespacho': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturas.codigoFacturaPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                    
                <a class="btn btn-default" href="{{ path('brs_tte_facturas_nuevo', { 'codigoFactura': 0 }) }}" style="float:left">Nuevo</a>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAutorizar" >Exportar</button>       
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>

    <!-- Formulario de busqueda -->    
    <form class="form-horizontal" role="form" id="FrmBusqueda" action="{{ path('brs_tte_guias_lista') }}" method="POST" novalidate>
        <div class="well"> 
            <div class="form-group">
                <label for="TxtNumeroMovimiento" class="col-sm-2 control-label">Numero</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtNumeroMovimiento" name="TxtNumeroMovimiento" placeholder="Numero documento"/>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>                
            <!-- Fin formulario de busqueda -->
        </div>    
    </form>   
</div>
{% endblock %}
