{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
    <div class="page-header">
        <h3>Lista despachos</h3>
    </div>              
    <form action="{{ path('brs_log_guias_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Conductor</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {% for arDespachos in arDespachos %}

            <tr>
                <td><input type="hidden" name="LblCodigoMovimiento[]" value="{{ arDespachos.codigoDespachoPk }}">{{ arDespachos.codigoDespachoPk }} </td>
                <td>{{ arDespachos.fecha |date("Y/m/d")  }}</td>
                <td>{{ arDespachos.ciudadOrigenRel.nombre  }}</td>
                <td>{{ arDespachos.ciudadDestinoRel.nombre  }}</td>
                <td>{{ arDespachos.conductorRel.nombreCorto  }}</td>
                <td style="text-align: center"><a href="{{ path('brs_log_despachos_nuevo', { 'codigoDespacho': arDespachos.codigoDespachoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a></td>                
                <td style="text-align: center"><a href="{{ path('brs_log_despachos_detalle', { 'codigoDespacho': arDespachos.codigoDespachoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDespachos.codigoDespachoPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                    
                <a class="btn btn-default" href="{{ path('brs_log_despachos_nuevo', { 'codigoDespacho': 0 }) }}" style="float:left">Nuevo</a>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAutorizar" >Autorizar</button>       
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpDesActualizar" >Desautorizar</button>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpImprimir" >Imprimir</button>
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>

    <!-- Formulario de busqueda -->    
    <form class="form-horizontal" role="form" id="FrmBusqueda" action="{{ path('brs_log_guias_lista') }}" method="POST" novalidate>
        <div class="well">
            <div class="form-group">
                <label for="TxtCodigoMovimiento" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigoMovimiento" name="TxtCodigoMovimiento" placeholder="Codigo movimiento"/>
                </div>
            </div>  
            <div class="form-group">
                <label for="TxtNumeroMovimiento" class="col-sm-2 control-label">Numero</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtNumeroMovimiento" name="TxtNumeroMovimiento" placeholder="Numero documento"/>
                </div>
            </div>         
            <div class="form-group">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                                <input type="text" class="form-control" id="TxtNombreTercero" name="TxtNombreTercero" placeholder="Codigo tercero"/>
                                <span class="input-group-btn">
                                    <input type="text" class="btn btn-default" id="TxtCodigoTercero" name="TxtCodigoTercero" />
                                    <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_log_guias_lista') }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>
            <div class="form-group">
                <label for="TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtFechaDesde" name="TxtFechaDesde" placeholder="Fecha desde"/>
                </div>
            </div>
            <div class="form-group">
                <label for="TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtFechaHasta" name="TxtFechaHasta" placeholder="Fecha desde"/>
                </div>
            </div>    
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>                
            <!-- Fin formulario de busqueda -->
        </div>    
    </form>   
</div>
{% endblock %}
