{% extends '::base.html.twig' %}
{% block title %}Cotizacion nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Editar soporte pago</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">     
            <div class="form-group form-group-sm">
                <label for="form_dias" class="col-sm-3 control-label">Dias:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dias, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>             
            <div class="form-group form-group-sm">
                <label for="form_horas" class="col-sm-3 control-label">Horas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
        </div>
    </div>               
    <div class="modal-footer">               
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}