{% extends '::base.html.twig' %}
{% block title %}Proceso disciplinario nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo proceso disciplinario</h3>    
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arDisciplinario.empleadoRel.numeroIdentificacion |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arDisciplinario.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
               
            <div class="form-group form-group-sm">
                <label for="form_disciplinarioTipoRel" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.disciplinarioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-3 control-label">Causal:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.asunto, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica para los procesos de suspensión y llamado de atención'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_descargos" class="col-sm-3 control-label">Descargos:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.descargos, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Fecha Suspensión:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.suspension, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para la suspensión ejemplo: sabado 3 de marzo de 2015'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_disciplinario_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}