{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Generar pagos adicionales (Masivo-Detalle)</h3>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Empleados</div>
      <div class="panel-body">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}          
            <table class="table table-striped table-bordered table-condensed table-hover">
                <tr>
                    <th>ID</th>
                    <th>IDENTIFICACION</th>
                    <th>NOMBRE</th>
                    <th>SALARIO</th>
                    <th><p data-toggle="tooltip" data-placement="top" title="Valor del descuento">VALOR</p></th>
                </tr>
                {% for arEmpleados in arEmpleados %}
                <tr {% if arEmpleados.estadoActivo == 0 %}class="danger"{% endif %}>
                    <td>
                        <input type="hidden" name="LblCodigo[]" value="{{ arEmpleados.codigoEmpleadoPk }}">
                        <span class="badge">{{ arEmpleados.codigoEmpleadoPk }}</span>
                    </td>
                    <td>{{ arEmpleados.numeroIdentificacion}}</td>
                    <td>{{ arEmpleados.nombreCorto }}</td>
                    <td style="text-align: right">{{ arEmpleados.vrSalario | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtValor[]" value="0" size="10" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                </tr>
                {% endfor %}
            </table>
            <a href="#" class="btn btn-default">Empleados <span class="badge">{{ arEmpleados.getTotalItemCount }}</span></a>
            <div class="btn-toolbar" style="float: right">
                <div class="btn-group">
                    {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                </div>
            </div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
      </div>
    </div>
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default" href="{{ path('brs_rhu_pagos_adicionales_generarmasivo_lista') }}" style="float:left">Volver</a>
        </div>
    </div>
    <br /><br />

</div>
{% endblock %}
