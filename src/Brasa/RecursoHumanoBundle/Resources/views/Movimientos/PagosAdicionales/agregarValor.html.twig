{% extends '::base_sin_menu.html.twig' %}
{% block title %}Adicionales al pago agregar valor - Soga App{% endblock %}
{% block content %}
    <div class="container">
        <p class="description"><h3 >Agregar</h3></p>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="panel panel-default">
                <div class="panel-heading">Datos empleado</div>
                <div class="panel-body">
                    <div class="form-group form-group-sm">
                        <label for="empleadoRel" class="col-sm-2 control-label">Empleado:</label>
                        <div class="col-sm-10">
                                {{ form_widget(form.empleadoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="pagoConceptoRel" class="col-sm-2 control-label">Tipo:</label>
                        <div class="col-sm-10">
                                {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>                        
                    <div class="form-group form-group-sm">
                        <label for="TxtValor" class="col-sm-2 control-label">Valor:</label>
                        <div class="col-sm-10">
                                {{ form_widget(form.TxtValor, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>                        
                    <div class="form-group form-group-sm">
                        <label for="TxtDetalle" class="col-sm-2 control-label">Detalle:</label>
                        <div class="col-sm-10">
                                {{ form_widget(form.TxtDetalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                        </div>
                    </div>                         
                </div>
            </div>

            <div class="modal-footer">                
                {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            <br />
        {{ form_end(form) }}

</div>
{% endblock %}