{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista grupos seleccion</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_estadoAbierto" class="col-sm-2 control-label">Abierto:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoAbierto, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arGrupos, 'CÃ“DIGO', 'e.codigoSeleccionGrupoPk') }}</th>
                <th>FECHA</th>
                <th>NOMBRE</th>
                <th>CENTRO COSTO</th>
                <th>CANTIDAD SOLICITADA</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Abierto">ABIERTO</p></th>
                <th style="text-align: center"></th>
                <th></th>
                <th></th>
                
            </tr>
            {% for arGrupos in arGrupos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arGrupos.codigoSeleccionGrupoPk }}">{{ arGrupos.codigoSeleccionGrupoPk }} </td>
                <td>{{ arGrupos.fecha | date("Y/m/d")  }}</td>
                <td>{{ arGrupos.nombre  }}</td>                                
                <td>{{ arGrupos.centroCostoRel.nombre|default('SIN CENTRO COSTO')  }}</td> 
                <td>{{ arGrupos.cantidadSolicitida  }}</td>
                <td>{% if arGrupos.estadoAbierto == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_selecciongrupo_nuevo', { 'codigoSeleccionGrupo':  arGrupos.codigoSeleccionGrupoPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_selecciongrupo_detalle', { 'codigoSeleccionGrupo': arGrupos.codigoSeleccionGrupoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22 title="Detalles del registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGrupos.codigoSeleccionGrupoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        {{ knp_pagination_render(arGrupos) }}


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_selecciongrupo_nuevo', { 'codigoSeleccionGrupo': 0 }) }}" style="float:left">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEstadoAbierto, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
