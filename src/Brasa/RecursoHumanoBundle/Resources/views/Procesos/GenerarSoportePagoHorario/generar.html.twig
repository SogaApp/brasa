{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago horario - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Generar soporte pago horario</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                {{ form_widget(form.BtnCerrar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <br /><br />                    
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagosHorarios, 'CÃ“DIGO', 'p.codigoSoportePagoHorarioPk') }}</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>DIAS</th>
                <th>DESCANSO</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>                
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>                
            </tr>
            {% for arSoportesPagosHorarios in arSoportesPagosHorarios %}
            <tr>                
                <td>{{ arSoportesPagosHorarios.codigoSoportePagoHorarioPk  }}</td>
                <td>{{ arSoportesPagosHorarios.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagosHorarios.fechaHasta |date("Y/m/d")  }}</td>   
                <td style="text-align: right">{{ arSoportesPagosHorarios.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorarios.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
            </tr>
            
            {% endfor %}
        </table>  
        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagosHorarios.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagosHorarios) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>  
               
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
