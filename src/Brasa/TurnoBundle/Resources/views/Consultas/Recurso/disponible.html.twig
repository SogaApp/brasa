{% extends '::base.html.twig' %}
{% block title %}Detalle de programacion - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Recursos disponibles</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fecha) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>NOMBRE</th>
                <th>TURNO</th>
            </tr>
            {% for arRecurso in arRecurso %}
                <tr>
                    <td>{{ arRecurso.codigoRecursoPk  }}</td>                    
                    <td>{{ arRecurso.nombreCorto  }}</td>                    
                    <td>{{ arRecurso.nombreTurno  }}</td>                    
                </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge"></span></div>                        
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
