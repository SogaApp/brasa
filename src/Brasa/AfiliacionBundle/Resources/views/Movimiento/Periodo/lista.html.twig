{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista periodos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arPeriodos, 'CÃ“DIGO', 'p.codigoPeriodoPk') }}</th>
                <th>NIT</th>
                <th>CLIENTE</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th></th>
                <th></th>
                <th></th>                
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arPeriodos in arPeriodos %}
            <tr>
                <td>{{ arPeriodos.codigoPeriodoPk  }}</td>
                <td>{{ arPeriodos.clienteRel.nit  }}</td>
                <td>{{ arPeriodos.clienteRel.nombreCorto  }}</td>
                <td>{{ arPeriodos.fechaDesde |date('Y/m/d') }}</td>
                <td>{{ arPeriodos.fechaHasta |date('Y/m/d') }}</td>
                {% if arPeriodos.estadoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerar" value="{{ arPeriodos.codigoPeriodoPk }}">Generar cobro</button></td>                    
                    <td></td>                    
                    <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_periodo_nuevo', {'codigoPeriodo': arPeriodos.codigoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                
                    <td></td>
                {% else %}
                    {% if arPeriodos.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacer" value="{{ arPeriodos.codigoPeriodoPk }}">Deshacer cobro</button></td>                                                
                    {% else %}                        
                        <td></td>                        
                    {% endif %}
                    <td></td>                                                                        
                {% endif %}                
                {% if arPeriodos.estadoPagoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerarPago" value="{{ arPeriodos.codigoPeriodoPk }}">Generar pago</button></td>
                {% else %}
                    {% if arPeriodos.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacerPago" value="{{ arPeriodos.codigoPeriodoPk }}">Deshacer pago</button></td>
                    {% else %}                        
                        <td></td>                        
                    {% endif %}                        
                {% endif %} 
                {% if arPeriodos.estadoCerrado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arPeriodos.codigoPeriodoPk }}">Cerrar</button></td>
                {% else %}                        
                    <td></td>                        
                {% endif %}                     
                <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_periodo_detalle', { 'codigoPeriodo': arPeriodos.codigoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                            
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPeriodos.codigoPeriodoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPeriodos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPeriodos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_periodo_nuevo', {'codigoPeriodo': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
