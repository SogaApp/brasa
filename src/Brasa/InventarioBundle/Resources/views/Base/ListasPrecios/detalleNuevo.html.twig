<form class="well" id="FrmNuevo" action="{{path('maestros_inventario_listas_precios_detalle_nuevo', { 'codigoListaPreciosPk':  codigoListaPreciosPk, 'codigoListaPreciosDetallePk':  0 })}}" method="post"> 
    <script>
        $('#myModal').modal('toggle');
    </script>
{% import 'zikmontFrontEndBundle:Plantillas:macros.html.twig' as utilidades %}
    <div class="modal hide" id="myModal">    
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h3>{%if arListaPreciosDetalle is not null%}Editar lista precios detalle{%else%}Crear lista precios detalle{%endif%}</h3>
        </div>    
        <div class="modal-body">                             
            <div class="well">      
                <table>
                    {% if arListaPreciosDetalle is defined and arListaPreciosDetalle is not null %}
                        <tr>
                            <td><strong>Codigo:</strong><br/></td>
                            <td><input type="text" class="span4" readonly="true" name="TxtCodigoListaPreciosDetalle" {% if arListaPreciosDetalle is defined and arListaPreciosDetalle is not null %} value="{{arListaPreciosDetalle.codigoListaPreciosDetallePk}}" readonly="true" {% endif %}/></td>              
                        <tr> 
                    {% endif %}
                        <tr>
                            <strong>Item:</strong><br>
                            {% if arListaPreciosDetalle is defined and arListaPreciosDetalle is not null %} {%set Item =  [arListaPreciosDetalle.codigoItemFk,arListaPreciosDetalle.itemRel.descripcion]|join('-')  %} {% else %} {%set Item = ''%} {% endif %}

                            {{ utilidades.textboxitem(Item,5,true,true,'TxtCodigoItem') }}
                        </tr>                            
                        <tr>
                            <td><strong>Precio:</strong><br/></td>
                            <td><input type="text" class="span4" name="TxtPrecio" {% if arListaPreciosDetalle is defined and arListaPreciosDetalle is not null %} value="{{arListaPreciosDetalle.precio}}" {% endif %} placeholder="Precio" onkeypress="return validarNumeros(event)" style="text-align: right" required/></td>              
                        <tr>                                         
                        <tr>
                            <td><strong>Factor:</strong><br/></td>
                            <td><input type="text" class="span4" name="TxtFactor" {% if arListaPreciosDetalle is defined and arListaPreciosDetalle is not null %} value="{{arListaPreciosDetalle.precio}}" {%else%} value="1" {% endif %} placeholder="Precio" onkeypress="return validarNumeros(event)" style="text-align: right" required/></td>              
                        <tr>                            
                </table>            
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancelar</a>                
            <button id="link_guardar" class="btn btn-primary" type="submit" name="OpSubmit" value="OpGuardar">Guardar</button>
        </div>  
    </div>
</form>   
