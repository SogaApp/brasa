{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Generar soporte pago</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label  class="col-sm-2 control-label">Grupo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.recursoGrupoRel , { 'attr': {'class': 'form-control'} }) }}
                    </div> 
                    <label  class="col-sm-2 control-label">Cerrado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoCerrado , { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                   
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>GRUPO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>RECURSOS</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Dias periodo">D.P</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Dias festivos">D.F</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Dias adicionales">D.A</p></th>
                <th>DES FIJO</th>
                <th>TOTAL</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arSoportePagoPeriodos in arSoportePagoPeriodos %}
            <tr>
                <td>{{ arSoportePagoPeriodos.codigoSoportePagoPeriodoPk  }}</td>
                <td>{{ arSoportePagoPeriodos.recursoGrupoRel.nombre |default('') }}</td>
                <td>{{ arSoportePagoPeriodos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportePagoPeriodos.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arSoportePagoPeriodos.recursos | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportePagoPeriodos.diasPeriodo | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arSoportePagoPeriodos.festivos | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arSoportePagoPeriodos.diasAdicionales | number_format(0, '.', ',') }}</td>                
                <td>{% if arSoportePagoPeriodos.descansoFestivoFijo == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: right">{{ arSoportePagoPeriodos.vrDevengado | number_format(0, '.', ',') }}</td>
                {% if arSoportePagoPeriodos.estadoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerar" value="{{ arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }}">Generar</button></td>
                    <td></td>                    
                    <td style="text-align: center"><a href="{{ path('brs_tur_proceso_generar_soporte_pago_nuevo', {'codigoSoportePagoPeriodo': arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                
                    <td style="text-align: center"><a href="{{ path('brs_tur_proceso_generar_soporte_pago_detalle', { 'codigoSoportePagoPeriodo': arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                            
                {% else %}
                    {% if arSoportePagoPeriodos.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacer" value="{{ arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }}">Deshacer</button></td>
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }}">Cerrar</button></td>
                    {% else %}                        
                        <td></td>
                        <td></td>                        
                    {% endif %}
                    <td></td>                                                    
                    <td style="text-align: center"><a href="{{ path('brs_tur_proceso_generar_soporte_pago_detalle', { 'codigoSoportePagoPeriodo': arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                            
                {% endif %}                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSoportePagoPeriodos.codigoSoportePagoPeriodoPk }}" /></td>                
            </tr>

            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_proceso_generar_soporte_pago_nuevo', {'codigoSoportePagoPeriodo': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>            
        </div>        
        {{ form_rest(form) }}
        {{ form_end(form) }}

</div>
{% endblock %}
