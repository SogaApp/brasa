{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista periodos detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>CÃ“DIGO</th>
                <th>SUCURSAL</th>
                <th>GENERADO</th>
                <th></th>
            </tr>
            {% for arSsoPeriodoDetalles in arSsoPeriodoDetalles %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arSsoPeriodoDetalles.codigoPeriodoDetallePk }}">{{ arSsoPeriodoDetalles.codigoPeriodoDetallePk }} </td>
                <td>{{ arSsoPeriodoDetalles.SsoSucursalRel.nombre  }}</td>
                <td {% if arSsoPeriodoDetalles.estadoGenerado == 1 %}class="success"{% endif %}>{% if arSsoPeriodoDetalles.estadoGenerado == 1 %} SI {% else %} NO {% endif %}</td>                                                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSsoPeriodoDetalles.codigoPeriodoDetallePk }}" /></td>
            </tr>
            {% endfor %}                        
        </table>                       
        {{ knp_pagination_render(arSsoPeriodoDetalles) }}    


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}              
            </div>
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
