{% extends '::base.html.twig' %}
{% block title %}Consulta programacion detalle - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista detalles de programacion</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arCliente.nit |default('') }}"/>
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">                                      
                              <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arCliente.nombreCorto |default('') }}" readOnly="ReadOnly" />
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>                 
                <div class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Recurso:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              <input id="txtNumeroIdentificacion"  name="txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arRecurso.numeroIdentificacion |default('') }}"/>
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">                                      
                              <input id="txtNombreCortoRecurso"  name="txtNombreCortoRecurso"  type="text" class="form-control" value="{{ arRecurso.nombreCorto |default('') }}" readOnly="ReadOnly" />
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_recurso', { 'campoCodigo': 'txtNumeroIdentificacion', 'campoNombre': 'txtNombreCortoRecurso' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">  
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.centroCostoRel , { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                              
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>RECURSO</th>                               
                <th>PUESTO</th>                
                <th>1</th>
                <th>2</th>
                <th>3</th>
                <th>4</th>
                <th>5</th>
                <th>6</th>
                <th>7</th>
                <th>8</th>
                <th>9</th>
                <th>10</th>
                <th>11</th>
                <th>12</th>
                <th>13</th>
                <th>14</th>
                <th>15</th>
                <th>16</th>
                <th>17</th>
                <th>18</th>
                <th>19</th>
                <th>20</th>
                <th>21</th>
                <th>22</th>
                <th>23</th>
                <th>24</th>
                <th>25</th>
                <th>26</th>
                <th>27</th>
                <th>28</th>
                <th>29</th>
                <th>30</th>
                <th>31</th>
                <th>HORAS</th>
                <th>P.D</th>
                <th></th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% set intCodigoCliente = '' %}
            {% for arProgramacionDetalle in arProgramacionDetalle %}
               {% if intCodigoCliente != arProgramacionDetalle.programacionRel.codigoClienteFk %}
                    <tr> 
                        <td id="suptipo" colspan="38">{{ arProgramacionDetalle.programacionRel.clienteRel.nombreCorto | default('') }}</td>
                    </tr>
                    {% set intCodigoCliente = arProgramacionDetalle.programacionRel.codigoClienteFk %}
                {% endif %} 
                <tr>
                    <td>{{ arProgramacionDetalle.codigoProgramacionDetallePk  }}<input type="hidden" name="LblCodigo[]" value="{{ arProgramacionDetalle.codigoProgramacionDetallePk }}"></td>                                        
                    <td>{{ arProgramacionDetalle.recursoRel.nombreCorto | default('') }}</td>                                                             
                    <td>{{ arProgramacionDetalle.puestoRel.nombre | default('') }}</td>                                                                 
                    <td>{{ arProgramacionDetalle.dia1  }}</td>
                    <td>{{ arProgramacionDetalle.dia2  }}</td>
                    <td>{{ arProgramacionDetalle.dia3  }}</td>
                    <td>{{ arProgramacionDetalle.dia4  }}</td>
                    <td>{{ arProgramacionDetalle.dia5  }}</td>
                    <td>{{ arProgramacionDetalle.dia6  }}</td>
                    <td>{{ arProgramacionDetalle.dia7  }}</td>
                    <td>{{ arProgramacionDetalle.dia8  }}</td>
                    <td>{{ arProgramacionDetalle.dia9  }}</td>
                    <td>{{ arProgramacionDetalle.dia10  }}</td>
                    <td>{{ arProgramacionDetalle.dia11  }}</td>
                    <td>{{ arProgramacionDetalle.dia12  }}</td>
                    <td>{{ arProgramacionDetalle.dia13  }}</td>
                    <td>{{ arProgramacionDetalle.dia14  }}</td>
                    <td>{{ arProgramacionDetalle.dia15  }}</td>
                    <td>{{ arProgramacionDetalle.dia16  }}</td>
                    <td>{{ arProgramacionDetalle.dia17  }}</td>
                    <td>{{ arProgramacionDetalle.dia18  }}</td>
                    <td>{{ arProgramacionDetalle.dia19  }}</td>
                    <td>{{ arProgramacionDetalle.dia20  }}</td>
                    <td>{{ arProgramacionDetalle.dia21  }}</td>
                    <td>{{ arProgramacionDetalle.dia22  }}</td>
                    <td>{{ arProgramacionDetalle.dia23  }}</td>
                    <td>{{ arProgramacionDetalle.dia24  }}</td>
                    <td>{{ arProgramacionDetalle.dia25  }}</td>
                    <td>{{ arProgramacionDetalle.dia26  }}</td>
                    <td>{{ arProgramacionDetalle.dia27  }}</td>
                    <td>{{ arProgramacionDetalle.dia28  }}</td>
                    <td>{{ arProgramacionDetalle.dia29  }}</td>
                    <td>{{ arProgramacionDetalle.dia30  }}</td>
                    <td>{{ arProgramacionDetalle.dia31  }}</td>                     
                    <td style="text-align: right">{{ arProgramacionDetalle.horas | number_format(0, '.', ',') }}</td> 
                    <td>{{ arProgramacionDetalle.codigoPedidoDetalleFk }}</td>
                    <td style="text-align: center"><a href="{{ path('brs_tur_programacion_detalle', { 'codigoProgramacion': arProgramacionDetalle.codigoProgramacionFk }) }}" target="_blanck"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                    
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arProgramacionDetalle.codigoProgramacionDetallePk }}" /></td>
                </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arProgramacionDetalle.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arProgramacionDetalle) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
