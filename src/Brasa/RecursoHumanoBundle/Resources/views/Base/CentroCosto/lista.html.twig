{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista centros de costos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>PERIODO</th>
                <th>U. PAGO</th>
                <th>ABIERTO</th>
                <th></th>
            </tr>
            {% for arCentrosCostos in arCentrosCostos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}">{{ arCentrosCostos.codigoCentroCostoPk }} </td>
                <td>{{ arCentrosCostos.nombre  }}</td>
                <td>{{ arCentrosCostos.periodoPagoRel.nombre  }}</td>
                <td>{{ arCentrosCostos.fechaUltimoPagoProgramado |date("Y/m/d")  }}</td>
                <td>{% if arCentrosCostos.pagoAbierto == 1 %} SI {% else %} NO {% endif %}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_tte_guias_nuevo', { 'codigoGuia': 0 }) }}" style="float:left">Nuevo</a>                                                                
                {{ form_widget(form.Eliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}        
</div>
{% endblock %}
