{% extends '::base.html.twig' %}
{% block content %}

<div class="container">          
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nueva Guia</h3>
        <div class="well">
            <div class="form-group">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                <div class="row">
                  <div class="col-sm-12">
                    <div class="input-group">
                        {{ form_widget(form.terceroRel, { 'attr': {'class': 'form-control'} }) }}
                      <span class="input-group-btn">

                        <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', {'campoCodigo': 'form_codigoTerceroFk', 'campoNombre': 'TxtNombreTercero'}) }}', 'BuscarTercero', 600, 900)">Buscar</a>
                      </span>
                    </div><!-- /input-group -->
                  </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
                </div>
            </div>
        </div>
        <div class="well">
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
        </div>   

        <div class="modal-footer">
            <a class="btn btn-default" href="{{ path('brs_tte_facturas_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary'} }) }}
        </div>    
        {{ form_end(form) }}    
</div>
{% endblock %}