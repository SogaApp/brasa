{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva incapacidad</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion incapacidad</div>
        <div class="panel-body">
            {% if arEmpleado is not empty %}
                    <div style="display: none;">
            {% else %}
                <div>
            {% endif %}                       
                <div class="form-group form-group-sm">
                    <label for="form_empleadoRel" class="col-sm-2 control-label">Empleado:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.empleadoRel, { 'attr': {'class': 'form-control', 'visible': 'false'} }) }}
                    </div>
                </div>                                
            </div>
      
                        
            <div class="form-group form-group-sm">
                <label for="form_pagoAdicionalSubtipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.pagoAdicionalSubtipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>     
            <div class="form-group form-group-sm">
                <label for="form_incapacidadDiagnosticoRel" class="col-sm-2 control-label">Diagnostico:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.incapacidadDiagnosticoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_numeroEps" class="col-sm-2 control-label">Numero eps:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.numeroEps, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_fechaRecogida" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta) }}
                </div>
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}