{% extends '::base.html.twig' %}
{% block title %}Cotizacion detalle - Soga App{% endblock %}
{% block content %}
    <script>
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    </script>
    <div class="container">
        <div class="page-header">
            <h3>Detalles del usuario</h3>
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <!-- Encabezado Movimiento -->
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CODIGO:</td>
                        <td class="td-in-well">{{ arUsuario.id }}</td>
                        <td class="titulo">USUARIO</td>
                        <td class="td-in-well">{{ arUsuario.nombreCorto }}</td>
                    </tr>                   
                </table>
            </div>
        </div>

        <!-- Fin Encabezado Movimiento -->

        <ul class="nav nav-tabs">
            <li class="active"><a href="#documentos" data-toggle="tab">Documentos</a></li>
            <li><a href="#especiales" data-toggle="tab">Especiales</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="documentos">
                <!-- Menu Encabezado Movimiento -->
                <div id="documentos" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>COD</th>
                        </tr>
                        {% for arPermisosDocumentos in arPermisosDocumentos %}
                            <tr>
                                <td>{{ arPermisosDocumentos.codigoPermisoDocumentoPk  }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
            <div class="tab-pane" id="otros">
                <!-- Menu Encabezado Movimiento -->
                <div id="otros" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>CODIGO</th>
                            <th>PERMISO</th>
                            <th></th>
                            <th></th>
                        </tr>
                        {% for arPermisosEspeciales in arPermisosEspeciales %}
                            <tr>
                                <td>{{ arPermisosEspeciales.codigoPermisoEspecialPk  }}</td>                                
                                <td><input type="checkbox" name="ChkSeleccionarPermisoEspecial[]" value="{{ arPermisosEspeciales.codigoPermisoEspecialPk }}" /></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>


        {{ form_rest(form) }}
        {{ form_end(form) }}
        <a  class="btn btn-default btn-sm" href="{{ path('brs_seg_admin_usuario_lista') }}">Volver</a>
    </div>
{% endblock %}
