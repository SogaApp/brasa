{% extends '::base.html.twig' %}
 
{% block body %}
    <div class="container">
    <div class="page-header">    
        <h3>Listado Entidades de Salud</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>Id</th>
            <th>{{ knp_pagination_sortable(arSalud, 'Nombre', 'nit') }}</th> 
            <th>Nit</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th></th>
            <th></th>
        </tr>
        
            {%for arSalud in arSalud %}
               <tr>
                <td>{{arSalud.codigoEntidadSaludPk}}</td>
                <td>{{arSalud.nombre}}</td>
                <td>{{arSalud.nit}}</td>
                <td>{{arSalud.direccion}}</td>
                <td>{{arSalud.telefono}}</td>
                <td><a href="{{ path('brs_rhu_base_salud_editar',{'codigoEntidadSaludPk': arSalud.codigoEntidadSaludPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSalud.codigoEntidadSaludPk }}" /></td>
            {%endfor%}
            </tr>
            <tr>          
                <td colspan="7" align="right" ><a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_salud_nuevo') }}">Nuevo</a>
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td> 
            </tr>    
        
    </table>
    {{ knp_pagination_render(arSalud) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}