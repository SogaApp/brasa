{% extends '::base.html.twig' %}

{% block content %}
<div class="container">    
    {{ form_start(formCargo, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formCargo) }}
    <h3>Nuevo cargo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCargo.nombre, { 'attr': {'onkeypress': 'txNombres();', 'class': 'form-control'} }) }}
                </div>
            </div>
        
        
                
             <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_cargo_listar') }}">Cancelar</a>
            {{ form_widget(formCargo.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formCargo) }}
</div>
</div>      
{% endblock %}
