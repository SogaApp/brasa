{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Medios magneticos</h3>
        </div>

        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        
        <div class="panel panel-default">
            <div class="panel-heading">Información a generar</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_fechaProceso" class="col-sm-2 control-label">Fecha Proceso:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.fechaProceso, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>      
            </div>
        </div>
        <table  class="table table-striped table-bordered  table-condensed table-hover">
            <tr>
                <th>CÓDIGO FORMATO</th>
                <th>FORMATO</th>
                <th></th>
            </tr>
            {% for arFormatos in arFormatos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arFormatos.codigoMedioMagneticoExogenaPk }}">{{ arFormatos.codigoFormato }} </td>
                <td>{{ arFormatos.formato }}</td>              
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFormatos.codigoFormato }}" /></td>
            </tr>
            {% endfor %}
        </table>           
        <!-- Fin-->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnGenerarArchivo, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>    
        
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
