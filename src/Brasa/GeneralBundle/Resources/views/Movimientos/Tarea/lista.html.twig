{% extends '::base.html.twig' %}
{% block title %}Tarea lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista tereas</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                                    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        
                    </div>
                    <label for="form_estadoTerminado" class="col-sm-2 control-label">Terminado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoTerminado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div> 
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        
                    </div>
                    <label for="form_estadoAnulado" class="col-sm-2 control-label">Anulado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>                
                <th>FECHA</th>
                <th>HORA</th> 
                <th>ASUNTO</th>
                <th>USUARIO</th>
                <th>FECHA TERMINA</th>
                <th>U.TERMINA</th>   
                <th>TER</th>
                <th>FECHA ANULA</th>
                <th>U.ANULA</th>   
                <th>ANU</th>
                <th>COMENTARIOS</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arTareas in arTareas %}
            <tr>                
                <td>{{ arTareas.codigoTareaPk  }}</td>  
                <td>{{ arTareas.fecha |date("Y/m/d")  }}</td> 
                <td>{{ arTareas.hora |date("H:i")  }}</td> 
                <td>{{ arTareas.asunto }}</td>  
                <td>{{ arTareas.usuarioCreaFk  }}</td>
                <td>{% if arTareas.estadoTerminado == 1 %} {{ arTareas.fechaTermina |date("Y/m/d H:i")  }} {% endif %}</td>
                <td>{{ arTareas.usuarioTerminaFk  }}</td>                                 
                <td>{% if arTareas.estadoTerminado == 1 %} SI {% else %} NO {% endif %}</td>              
                <td>{% if arTareas.estadoAnulado == 1 %} {{ arTareas.fechaAnula |date("Y/m/d H:i")  }} {% endif %}</td>
                <td>{{ arTareas.usuarioAnulaFk  }}</td>                                 
                <td>{% if arTareas.estadoAnulado == 1 %} SI {% else %} NO {% endif %}</td>                              
                <td>{{ arTareas.comentarios  }}</td>
                <td style="text-align: center">{% if arTareas.estadoTerminado == 0 and arTareas.estadoAnulado == 0 %}<a href="{{ path('brs_gen_mov_tarea_nuevo', {'codigoTarea': arTareas.codigoTareaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a>{% endif %}</td>                
                <td>{% if arTareas.estadoTerminado == 0 and arTareas.estadoAnulado == 0 %}<button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arTareas.codigoTareaPk }}">Cerrar</button>{% endif %}</td>
                <td>{% if arTareas.estadoTerminado == 0 and arTareas.estadoAnulado == 0 %}<button class="btn btn-default btn-xs" type="submit" name="OpAnular" value="{{ arTareas.codigoTareaPk }}">Anular</button>{% endif %}</td>                
            </tr>
            
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTareas.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arTareas) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_gen_mov_tarea_nuevo', {'codigoTarea': 0}) }}">Nuevo</a>                                                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
