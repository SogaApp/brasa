{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta programaciones pagos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_codigoProgramacionPago" class="col-sm-2 control-label">Código Pago:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.codigoPago, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_codigoProgramacionPagoDetalle" class="col-sm-2 control-label">Código programación pago:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.codigoProgramacionPago, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>                     
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarProgramacionesPago, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO PAGO</th>
                <th>CÓDIGO PROGRAMACIÓN</th>
                <th>CENTRO COSTO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>                
                <th>DESDE</th>
                <th>HASTA</th>
                <th>TIPO PAGO</th>
                <th style="text-align: right">DÍAS PERIODO</th>
                <th style="text-align: right">VR. BASE COTIZACIÓN</th>
                <th style="text-align: right">VR. SALARIO EMPLEADO</th>
                <th style="text-align: right">VR. SALARIO PERIODO</th>
                <th style="text-align: right">VR. DEVENGADO</th>
                <th style="text-align: right">VR. DEDUCCIONES</th>
                <th style="text-align: right">VR. ADICIONAL TIEMPO</th>
                <th style="text-align: right">VR. ADICIONAL VALOR</th>
                <th style="text-align: right">VR. AUXILIO TRANSPORTE</th>
                <th style="text-align: right">VR. ARP</th>
                <th style="text-align: right">VR. EPS</th>
                <th style="text-align: right">VR. PENSIÓN</th>
                <th style="text-align: right">VR. CAJA</th>
                <th style="text-align: right">VR. CESANTIAS</th>
                <th style="text-align: right">VR. VACACIONES</th>
                <th style="text-align: right">VR. ADMINISTRACIÓN</th>
                <th style="text-align: right">VR. NETO</th>
                <th style="text-align: right">VR. TOTAL PAGAR</th>
            </tr>
            {% set douTotalDevengado = 0  %}
            {% set douTotalDeducciones = 0  %}
            {% set douTotalCreditos = 0  %}
            {% set douTotalNeto = 0  %}
            {% for arProgramacionesPago in arProgramacionesPago %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arProgramacionesPago.codigoPagoPk }}">{{ arProgramacionesPago.codigoPagoPk }} </td>
                <td>{{ arProgramacionesPago.codigoProgramacionPagoFk  }}</td>
                <td>{{ arProgramacionesPago.programacionPagoRel.centroCostoRel.nombre  }}</td>
                <td>{{ arProgramacionesPago.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arProgramacionesPago.empleadoRel.nombreCorto  }}</td>                
                <td>{{ arProgramacionesPago.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arProgramacionesPago.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arProgramacionesPago.vrSalario | number_format(2, '.', ',') }}</td>
                
                
                <td style="text-align: right">{{ arProgramacionesPago.vrDevengado | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arProgramacionesPago.vrDeducciones | number_format(2, '.', ',') }}</td>
                
                <td style="text-align: right">{{ arProgramacionesPago.vrNeto | number_format(2, '.', ',') }}</td>
                {% set douTotalDevengado = douTotalDevengado + arProgramacionesPago.vrDevengado %}
                {% set douTotalDeducciones = douTotalDeducciones + arProgramacionesPago.vrDeducciones %}
                
                {% set douTotalNeto = douTotalNeto + arProgramacionesPago.vrNeto %}
            </tr>
            {% endfor %}
                <td colspan="12"></td>
                <td style="text-align: right">{{ douTotalDevengado | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalDeducciones | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalCreditos | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ douTotalNeto | number_format(2, '.', ',') }}</td>
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arProgramacionesPago) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arProgramacionesPago.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                   
                {{ form_widget(form.BtnExcelProgramacionesPago, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnPDFProgramacionesPago, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}   
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
