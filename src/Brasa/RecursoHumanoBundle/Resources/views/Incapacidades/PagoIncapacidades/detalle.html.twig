{% extends '::base.html.twig' %}
{% block content %}
    <script>
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    </script>
    <div class="container">
        <div class="page-header">
            <h3>Detalle pago Incapacidades</h3>
        </div>

        <!-- Encabezado Movimiento -->
        <div class="panel panel-default">
            <div class="panel-heading">Información pago incapacidades</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CÓDIGO:</td>
                        <td class="td-in-well">{{ arIncapacidadPago.codigoIncapacidadPagoPk}}</td>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                    </tr>
                    <tr>
                        <td class="titulo">ENTIDAD:</td>
                        <td class="td-in-well">{{ arIncapacidadPago.entidadSaludRel.nombre }}</td>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                    </tr>
                    <tr>
                    <td class="titulo" >TOTAL:</td>
                    <td align="right">{{ arIncapacidadPago.vrTotal | number_format(2, '.', ',')}}</td>
                    <td></td>
                    <td></td>
                </tr>
                </table>
            </div>
        </div>

        <!-- Fin Encabezado Movimiento -->
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">                
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                                                
            </div>
        </div>

        <br /><br />
        <ul class="nav nav-tabs">
            <li class="active"><a href="#examenes" data-toggle="tab">Exámenes</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="examenes">
                <!-- Menu Encabezado Movimiento -->
                <div id="examenes" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>CÓDIGO</th>
                            <th>IDENTIFICACIÓN</th>
                            <th>NOMBRE</th>                
                            <th>PRECIO</th>                
                            <th></th>
                        </tr>
                        {% for arIncapacidadPagoDetalle in arIncapacidadPagoDetalle %}
                            <tr>
                                <td>{{ arIncapacidadPagoDetalle.codigoPagoExamenDetallePk  }}</td>
                                <td>{{ arIncapacidadPagoDetalle.examenRel.identificacion  }}</td>
                                <td>{{ arIncapacidadPagoDetalle.examenRel.nombreCorto  }}</td>                
                                <td class="td-in-well" align="right">{{ arIncapacidadPagoDetalle.vrPrecio | number_format(2, '.', ',') }}</td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arIncapacidadPagoDetalle.codigoPagoExamenDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
            <div class="btn-toolbar" style="float: right">              
                <div class="btn-group">
                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_incapacidades_pagos_detalle_nuevo', {'codigoIncapacidadPago': arIncapacidadPago.codigoIncapacidadPagoPk}) }}', 'AgregarIncapacidadPagoDetalle', 600, 900)">Nuevo</a>
                </div>
                <div class="btn-group">
                    {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}               
                </div>
            </div> 
        </div>            


        {{ form_rest(form) }}
        {{ form_end(form) }}
        <a  class="btn btn-default btn-sm" href="{{ path('brs_rhu_incapacidades_pagos_lista') }}">Volver</a>
    </div>
{% endblock %}
