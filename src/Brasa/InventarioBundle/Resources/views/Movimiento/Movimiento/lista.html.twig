{% extends '::base.html.twig' %}
{% block title %}Movimientos lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista movimientos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>FECHA</th>
                <th>NUMERO</th>                
                <th></th>
                <th></th>
                <th align="center"><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arMovimientos in arMovimientos %}
            <tr>                                             
                <td>{{ arMovimientos.codigoMovimientoPk  }}</td>             
                <td>{{ arMovimientos.fecha | date('Y/m/d')  }}</td>
                <td>{{ arMovimientos.numero  }}</td>
                <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_inv_movimiento_movimiento_nuevo', {'codigoDocumento': arDocumento.codigoDocumentoPk, 'codigoMovimiento': 0 }) }}', 'AgregarMovimiento', 600, 900)" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_inv_movimiento_movimiento_detalle', { 'codigoMovimiento': arMovimientos.codigoMovimientoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22 title="Detalles del registro"></a></td>
                <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arMovimientos.codigoMovimientoPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>
        <div class="btn-group">
            <a  class="btn btn-default btn-sm" href="{{ path('brs_inv_movimiento_movimiento_ingreso') }}">Volver</a>
        </div>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arMovimientos.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arMovimientos) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_inv_movimiento_movimiento_nuevo', {'codigoDocumento': arDocumento.codigoDocumentoPk, 'codigoMovimiento': 0 }) }}', 'AgregarMovimiento', 600, 900)">Nuevo</a>                                           
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div> 
                 
    </div>
    
    
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
