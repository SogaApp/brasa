{% extends '::base.html.twig' %}
 
{% block content %}
    <div class="container">
    <div class="page-header">    
        <h3>Listado entidades para examenes medicos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>Id</th>
            <th>{{ knp_pagination_sortable(arEntidadesExamen, 'Nombre', 'nit') }}</th> 
            <th>Nit</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th></th>
            <th></th>
        </tr>
        
            {%for arEntidadesExamen in arEntidadesExamen %}
               <tr>
                <td>{{arEntidadesExamen.codigoEntidadExamenPk}}</td>
                <td>{{arEntidadesExamen.nombre}}</td>
                <td>{{arEntidadesExamen.nit}}</td>
                <td>{{arEntidadesExamen.direccion}}</td>
                <td>{{arEntidadesExamen.telefono}}</td>
