{% extends '::base.html.twig' %}
{% block title %}Documentos lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista documentos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                               
                    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                                                                         
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>NOMBRE</th>
                <th></th>                
            </tr>
            {% for arDocumentos in arDocumentos %}
            <tr>                                             
                <td>{{ arDocumentos.codigoDocumentoPk  }}</td>             
                <td>{{ arDocumentos.nombre  }}</td>             
                <td style="text-align: center"><a href="{{ path('brs_inv_movimiento_movimiento_lista', { 'codigoDocumento': arDocumentos.codigoDocumentoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                
            </tr>
            
            {% endfor %}
        </table> 
        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arDocumentos) }}       
    </div>
    
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
