{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva vacación</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">            
            <div class="form-group form-group-sm">
                <label for="form_vrPagar" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_vrPagar" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>  
            <div class="form-group form-group-sm">
                <label for="form_estadoDisfrutadas" class="col-sm-2 control-label">Disfrutadas:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.estadoDisfrutadas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
                
        </div>
    </div>
    {% if duoRegistrosCreditos != "0" %}             
    <div class="panel panel-default">
        <div class="panel-heading">Créditos tipo vacación</div>
        
            <table  class="table table-striped table-bordered table-condensed table-hover">
                <tr>
                    <th>CÓDIGO</th>
                    <th>TIPO</th>
                    <th>VALOR</th>
                </tr>
                {% for arCreditosTipoVacacion in arCreditosTipoVacacion %}
                <tr>
                    <td>{{ arCreditosTipoVacacion.codigoCreditoPk  }}</td>
                    <td>{{ arCreditosTipoVacacion.creditoTipoRel.nombre  }}</td>
                    <td style="text-align: right">{{ arCreditosTipoVacacion.VrPagar | number_format(2, '.', ',') }}</td>

                </tr>
                {% endfor %}
            </table>
        
    </div>
    {% endif %}        
    <div class="modal-footer">      
            <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}