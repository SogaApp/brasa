{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">    
    <!-- Formulario de busqueda -->            
    <form class="form-horizontal" role="form" id="FrmBusqueda" action="{{ path('brs_log_despachos_agregar_guia', {'codigoDespacho': arDespacho.codigoDespachoPk}) }}" method="POST" novalidate>
        <div class="well">
            <div class="form-group">
                <label for="TxtNumero" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigo" name="TxtNumero" {% if Ultima_Codigo is defined %} value="{{Ultimo_Codigo}}" {% endif%} onkeypress="return validarNumeros(event)" onclick="this.select()"  size="15" 
                           placeholder="numero">
                </div>
            </div>
                
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>             
        </div>    
    </form>                
    <p class="description"><h3>Agregar guias sin despachar</h3></p>      
<form id="FrmListado" action="{{ path('brs_log_despachos_agregar_guia', {'codigoDespacho': arDespacho.codigoDespachoPk}) }}" method="post">        
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Soporte</th>
            <th>Destino</th>
            <th>Unidades</th>                
            <th>P. Real</th>
            <th></th>
        </tr>

            {% for arGuias in arGuias %}
        <tr> 
            <td><input type="hidden" name="LblCodigoGuia[]" value="{{ arGuias.codigoGuiaPk }}">{{ arGuias.codigoGuiaPk }}</td>  
            <td>{{ arGuias.fechaIngreso |date("Y/m/d")  }}</td>
            <td>{{ arGuias.documentoCliente }}</td>
            <td>{{ arGuias.ciudadDestinoRel.nombre }}</td>
            <td style="text-align: right">{{ arGuias.ctUnidades | number_format(2, '.', ',') }}</td>
            <td style="text-align: right">{{ arGuias.ctPesoReal | number_format(2, '.', ',') }}</td>
            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuias.codigoGuiaPk }}" /></td>
        </tr>
            {% endfor %}                                
    </table>

    <div class="divDerecho">
        <button class="btn btn-primary btn-mini" type="submit" name="OpSubmit" value="OpAgregar" id="register_submit">Agregar Seleccionados</button><br>            
    </div>
    <br />
</form>        

</div>
{% endblock %}