{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Generar pago de nomina</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}

        <table  class="table table-striped table-bordered  table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>CENTRO COSTOS</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>DIAS</th>                
                <th>P. ADIC</th>
                <th>INCAP.</th>
                <th></th>
                <th></th>
            </tr>
            {% for arProgramacionPago in arProgramacionPago %}
            <tr {% if date(arProgramacionPago.fechaHasta) < date() %}class="danger"{% endif %}>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arProgramacionPago.codigoProgramacionPagoPk }}">{{ arProgramacionPago.codigoProgramacionPagoPk }} </td>
                <td>{{ arProgramacionPago.centroCostoRel.nombre  }}</td>                
                <td>{{ arProgramacionPago.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arProgramacionPago.fechaHasta |date("Y/m/d")  }}</td>                
                <td>{{ arProgramacionPago.dias  }}</td>    
                <td style="text-align: center"><a href="{{ path('brs_rhu_pagos_adicionales_detalle', { 'codigoCentroCosto': arProgramacionPago.codigoCentroCostoFk }) }}">Ver</a></td>                
                <td style="text-align: center"><a href="{{ path('brs_rhu_incapacidades_detalle', { 'codigoCentroCosto': arProgramacionPago.codigoCentroCostoFk }) }}">Ver</a></td>                
                <td style="text-align: center"><a href="{{ path('brs_rhu_utilidades_pagos_generar_pago_resumen', { 'codigoCentroCosto': arProgramacionPago.codigoCentroCostoFk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arProgramacionPago.codigoProgramacionPagoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnNoGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}        

</div>
{% endblock %}
