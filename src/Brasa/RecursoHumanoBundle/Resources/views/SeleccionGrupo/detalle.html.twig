{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Grupo de seleccion</h3>
    </div>

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion grupo</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CODIGO:</td>
                    <td class="td-in-well">{{ arGrupo.codigoSeleccionGrupoPk }}</td>
                    <td class="titulo">FECHA:</td>
                    <td class="td-in-well">{{ arGrupo.fecha | date('Y/m/d') }}</td>
                </tr>
                <tr>
                    <td class="titulo">NOMBRE:</td>
                    <td class="td-in-well">{{ arGrupo.nombre }}</td>
                    <td class="titulo">FECHA PRUEBAS:</td>
                    <td class="td-in-well">{{ arGrupo.fechaPruebas | date('Y/m/d') }}</td>
                </tr>                
            </table>
      </div>
    </div>

    <!-- Fin Encabezado Movimiento -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">                
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                                                
            </div>
        </div>
            
    <br /><br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#selecciones" data-toggle="tab">Selecciones</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="selecciones">
                <!-- Menu Encabezado Movimiento -->
            <div id="detalles" style="width: 100%"><br>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>CODIGO</th>
                <th>TIPO</th>
                <th>IDENTIFICACION</th>
                <th>NOMBRE</th>
                <th>CENTRO COSTO</th>
                <th>PRUEBAS</th>
                <th>TELEFONO</th>
                <th>CELULAR</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Pruebas presentadas">P.P</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Aprobado">AP</p></th>                
                <th><p data-toggle="tooltip" data-placement="top" title="Referencias verificadas">R.V</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Abierto">AB</p></th>
                <th style="text-align: center"></th>
                <th></th>
                <th></th>
            </tr>
            {% for arSeleccion in arSeleccion %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arSeleccion.codigoSeleccionPk }}">{{ arSeleccion.codigoSeleccionPk }} </td>
                <td>{{ arSeleccion.seleccionTipoRel.nombre  }}</td>
                <td>{{ arSeleccion.numeroIdentificacion  }}</td>
                <td>{{ arSeleccion.nombreCorto  }}</td>
                <td>{{ arSeleccion.centroCostoRel.nombre  }}</td>
                <td>{{ arSeleccion.fechaPruebas |date("Y/m/d H:i")  }}</td>
                <td>{{ arSeleccion.telefono }}</td>
                <td>{{ arSeleccion.celular }}</td>
                <td>{% if arSeleccion.presentaPruebas == 1 %} SI {% else %} NO {% endif %}</td>                
                <td>{% if arSeleccion.estadoAprobado == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arSeleccion.referenciasVerificadas == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arSeleccion.estadoAbierto == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_seleccion_nuevo', { 'codigoSeleccion':  arSeleccion.codigoSeleccionPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20></a></td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_seleccion_detalle', { 'codigoSeleccion': arSeleccion.codigoSeleccionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSeleccion.codigoSeleccionPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

                    <!-- Botones Menu Items -->
                    <div class="btn-toolbar" style="float:right">
                        <div class="btn-group">                            
                            {{ form_widget(form.BtnEliminarSeleccion, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
                        </div>
                    </div>
                    <!-- Fin Botones Menu Items -->
                </div>
        </div>
    </div>            
            
            
        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('brs_rhu_selecciongrupo_lista') }}">Volver</a>
</div>
{% endblock %}
