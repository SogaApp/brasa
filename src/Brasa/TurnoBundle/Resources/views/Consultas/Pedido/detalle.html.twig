{% extends '::base.html.twig' %}
{% block title %}Consutla pedido detalle - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Consulta pedidos detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>CLIENTE</th>
                <th>NUMERO</th>
                <th>PUESTO</th>
                <th></th>
                <th>TURNO</th>
                <th>MODALIDAD</th>
                <th>PERIODO</th>
                <th>PLANTILLA</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>CANT</th>
                <th>CANT.RE</th>
                <th>LU</th>
                <th>MA</th>
                <th>MI</th>
                <th>JU</th>
                <th>VI</th>
                <th>SA</th>
                <th>DO</th>
                <th>FE</th>
                <th>HORAS</th>
                <th>H.D</th>
                <th>H.N</th>
                <th>DIAS</th>
                <th>VALOR</th>
            </tr>
            {% for arPedidosDetalles in arPedidosDetalles %}
                <tr>
                    <td>{{ arPedidosDetalles.codigoPedidoDetallePk  }}<input type="hidden" name="LblCodigo[]" value="{{ arPedidosDetalles.codigoPedidoDetallePk }}"></td>
                    <td>{{ arPedidosDetalles.pedidoRel.clienteRel.nombreCorto }}</td> 
                    <td>{{ arPedidosDetalles.pedidoRel.numero }}</td> 
                    <td>{{ arPedidosDetalles.codigoPuestoFk }}</td> 
                    <td>{{ arPedidosDetalles.puestoRel.nombre | default('') }}</td> 
                    <td>{{ arPedidosDetalles.conceptoServicioRel.nombre  }}</td>                    
                    <td>{{ arPedidosDetalles.modalidadServicioRel.nombre  }}</td>                    
                    <td>{{ arPedidosDetalles.periodoRel.nombre  }}</td>
                    <td>{{ arPedidosDetalles.plantillaRel.nombre | default('')  }}</td>                                            
                    <td>{{ arPedidosDetalles.diaDesde }}</td>    
                    <td>{{ arPedidosDetalles.diaHasta }}</td>    
                    <td>{{ arPedidosDetalles.cantidad  }}</td>
                    <td>{{ arPedidosDetalles.cantidadRecurso  }}</td>
                    <td>{% if arPedidosDetalles.lunes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.martes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.miercoles == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.jueves == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.viernes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.sabado == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.domingo == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arPedidosDetalles.festivo == 1 %} SI {% else %} NO {% endif %}</td>                    
                    <td style="text-align: right">{{ arPedidosDetalles.horas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arPedidosDetalles.horasDiurnas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arPedidosDetalles.horasNocturnas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arPedidosDetalles.dias | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arPedidosDetalles.vrTotal | number_format(0, '.', ',') }}</td> 
                </tr>
            {% endfor %}
        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidosDetalles.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPedidosDetalles) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
