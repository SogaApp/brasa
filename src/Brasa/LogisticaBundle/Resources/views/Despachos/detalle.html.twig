{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Despacho {{ arDespacho.codigoDespachoPk }}</h3>
            {% if arDespacho.estadoAnulado == 1 %} <span class="label label-danger">Anulado</span> {% endif %}            
    </div>

    <!-- Encabezado Movimiento -->
    <div class="well">
        <table width="100%" border="1">
            <tr>
                <td class="td-label">Numero:</td>
                <td class="td-in-well">{{ arDespacho.codigoDespachoPk }}</td>

                <td class="td-label">Fecha:</td>
                <td class="td-in-well">{{ arDespacho.fecha|date("Y/m/d H:i:s") }}</td>

                <td class="td-label">Rte Fuente:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">Flete:</td>
                <td class="td-in-well-numerico" align="right">$ </td>
            </tr>

            <tr>
                <td class="td-label">Origen:</td>
                <td class="td-in-well">{{ arDespacho.ciudadOrigenRel.nombre }}</td>

                <td class="td-label">Fecha:</td>
                <td class="td-in-well"></td>

                <td class="td-label">Rte CREE:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">(-)Anticipo:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

            </tr>

            <tr>
                <td class="td-label">Destino:</td>
                <td class="td-in-well">{{ arDespacho.ciudadDestinoRel.nombre }}</td>

                <td class="td-label">Fecha:</td>
                <td class="td-in-well"></td>

                <td class="td-label">Retenciones:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">(-)Ind. Ccio y Rte Fte:</td>
                <td class="td-in-well-numerico" align="right">$ </td>


            </tr>

            <tr>

                <td class="td-label">:</td>
                <td class="td-in-well" ></td>

                <td class="td-label">Fletes:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">Rte Iva:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">(+)Flete adicional:</td>
                <td class="td-in-well-numerico" align="right">$ </td>


            </tr>

            <tr>
                <td class="td-label"></td>
                <td class="td-in-well" ></td>

                <td class="td-label">Descuentos Fro:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">Total:</td>
                <td class="td-in-well-numerico" align="right">$ </td>

                <td class="td-label">Total Neto:</td>
                <td class="td-in-well-numerico" align="right">$ </td>
            </tr>
            <tr>
                <td colspan="8">Comentarios:{{ arDespacho.comentarios }}</td>
            </tr>
        </table>
    </div>
    <!-- Fin Encabezado Movimiento -->
    <form action="{{ path('brs_log_despachos_detalle', {'codigoDespacho': arDespacho.codigoDespachoPk}) }}" method="post" novalidate>
        <div class="btn-group">
            <a  class="btn btn-default" href="{{ path('brs_log_despachos_nuevo', { 'codigoDespacho': 0 }) }}">Nuevo</a>
            <button class="btn btn-default " type="submit" name="OpSubmit" value="OpGenerar" {% if arDespacho.estadoGenerado == 1 %} disabled {% endif %}>Generar</button>                        
            <button class="btn btn-default " type="submit" name="OpSubmit" value="OpImprimir" {% if arDespacho.estadoGenerado == 0 %} disabled {% endif %}>Imprimir</button>
            <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAnular" {% if arDespacho.estadoGenerado == 0 or arDespacho.estadoAnulado == 1%} disabled {% endif %} onclick="javascript:if (!confirm('Esta seguro que desea anular el documento?')) return false;">Anular</button>                            
        </div>
    </form>
    <br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Guias</a></li>
        <li><a href="#conceptos" data-toggle="tab">Conceptos</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <form action="{{ path('brs_log_despachos_detalle', {'codigoDespacho': arDespacho.codigoDespachoPk}) }}" method="post" novalidate>
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 99.5%">
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>{{ knp_pagination_sortable(arGuias, 'ID', 'guias.codigoGuiaPk') }}</th>                            
                            <th>Fecha</th>
                            <th>Soporte</th>
                            <th>Und</th>
                            <th>P. Real</th>                            
                            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                        </tr>
                        {% for arGuias in arGuias %}
                        <tr>
                            
                            <td>
                                <input type="hidden" name="LblCodigoGuia[]" value="{{ arGuias.codigoGuiaPk }}">
                                <span class="badge">{{ arGuias.codigoGuiaPk }}</span>
                            </td>
                            <td>{{ arGuias.fechaIngreso |date("Y/m/d")  }}</td>
                            <td>{{ arGuias.documentoCliente }}</td>
                            <td style="text-align: right">{{ arGuias.ctUnidades | number_format(2, '.', ',') }}</td>
                            <td style="text-align: right">{{ arGuias.ctPesoReal | number_format(2, '.', ',') }}</td>
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuias.codigoGuiaPk }}" /></td>
                        </tr>
                        {% endfor %}                        
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(arGuias) }}
                    </div>
                    <!-- Botones Menu Items -->
                    <div class="btn-toolbar" style="float:left">
                        <div class="btn-group">
                            <a class="btn btn-default" href="{{ path('brs_log_despachos_lista') }}" style="float:left">Volver</a>
                        </div>
                    </div>

                    <div class="btn-toolbar divDerecho">
                            
                        <div class="btn-group">                                                                
                            <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_log_despachos_agregar_guia', {'codigoDespacho': arDespacho.codigoDespachoPk}) }}', 'AgregarGuia', 600, 900)" {% if arDespacho.estadoGenerado == 1 %} disabled {% endif %}>Agregar guia</a>                                                                                                    
                        </div>
                            
                        <div class="btn-group">                            
                            <button class="btn btn-danger" type="submit" name="OpSubmit" value="OpRetirar" {% if arDespacho.estadoGenerado == 1 %} disabled {% endif %}>Retirar</button>                            
                        </div>
                    </div>
                    <!-- Fin Botones Menu Items -->

                    <br/><br/>
                    <hr/>
                </div>
            </form>
        </div>
        <div class="tab-pane" id="conceptos">

        </div>
    </div>

</div>    
{% endblock %}
