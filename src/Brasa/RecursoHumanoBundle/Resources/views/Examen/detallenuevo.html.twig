{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo examen</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            
            <th>ID</th>
            <th>NOMBRE</th> 
            <th></th>
        </tr>
        
            {%for arExamenTipos in arExamenTipos %}
               <tr>
                <td>{{arExamenTipos.codigoExamenTipoPk}}</td>
                <td>{{arExamenTipos.nombre}}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arExamenTipos.codigoExamenTipoPk }}" /></td>
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_examen_detalle', {'codigoExamen': arExamen.codigoExamenPk}) }}">Cancelar</a>
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}