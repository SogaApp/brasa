{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo proceso disciplinario</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_disciplinarioTipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.disciplinarioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-2 control-label">Causal:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.asunto, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica para los procesos de suspensión y llamado de atención'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_descargos" class="col-sm-2 control-label">Descargos:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.descargos, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Fecha Suspensión:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.suspension, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para la suspensión ejemplo: sabado 3 de marzo de 2015'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
        </div>
    </div>               
    <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>FECHA</th>
                <th>PROCESO</th>
                <th>CAUSAL</th>
                <th>DESCARGOS</th>
                <th>FECHA DE SUSPENSIÓN</th>
            </tr>
            {% for arDisciplinarios in arDisciplinarios %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arDisciplinarios.codigoDisciplinarioPk }}">{{ arDisciplinarios.codigoDisciplinarioPk }} </td>
                <td>{{ arDisciplinarios.fecha |date("Y/m/d")  }}</td>
                <td>{{ arDisciplinarios.disciplinarioTipoRel.nombre  }}</td>                                
                <td>{{ arDisciplinarios.asunto|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.descargos|default('NO APLICA')  }}</td>
                <td>{{ arDisciplinarios.suspension|default('NO APLICA')  }}</td>
            </tr>
            {% endfor %}
        </table>
    {{ form_end(form) }}
</div>
{% endblock %}