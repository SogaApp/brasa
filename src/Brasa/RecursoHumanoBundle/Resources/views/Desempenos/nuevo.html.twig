{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva gestión de desempeño</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">      
            {% if codigoDesempeno == 0%}            
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-3 control-label">Identificacion:</label>
                <div class="col-sm-9">
                    <input id="txtid"  name="numeroIdentificacion"  type="text" class="form-control" value="" />
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <label for="form_dependenciaEvaluado" class="col-sm-3 control-label">Área o dependencia del evaluado:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.dependenciaEvaluado, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_dependenciaEvalua" class="col-sm-3 control-label">Área o dependencia del que evalua:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.dependenciaEvalua, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_jefeEvalua" class="col-sm-3 control-label">Nombre del jefe que evalua:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.jefeEvalua, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group">
                <label for="form_cargoJefeEvalua" class="col-sm-3 control-label">Cargo del jefe que evalua:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.cargoJefeEvalua, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_fecha" class="col-sm-3 control-label">Fecha:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.fecha, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>    
        </div>
    </div>
           
    <div class="modal-footer">              
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}    
</div>
{% endblock %}