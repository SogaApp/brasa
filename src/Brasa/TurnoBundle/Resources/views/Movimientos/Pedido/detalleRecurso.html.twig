{% extends '::base.html.twig' %}
{% block title %}Pedido detalle/detalle - Soga App{% endblock %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Detalle/detalle pedido</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Información</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CODIGO:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.codigoPedidoDetallePk }}</td>
                    <td class="titulo">PUESTO:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.puestoRel.nombre |default('') }}</td>
                </tr>                
                <tr>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                    <td class="titulo">SERVICIO:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.conceptoServicioRel.nombre |default('') }}</td>
                </tr>
                <tr>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                    <td class="titulo">MODALIDAD:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.modalidadServicioRel.nombre |default('') }}</td>
                </tr>                
                <tr>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                    <td class="titulo">PERIODO:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.periodoRel.nombre |default('') }}</td>
                </tr>
                <tr>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                    <td class="titulo">PLANTILLA:</td>
                    <td class="td-in-well">{{ arPedidoDetalle.plantillaRel.nombre |default('') }}</td>
                </tr>                
            </table>                    
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Información</div>
      <div class="panel-body">  
                <div class="form-group form-group-sm">
                    <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.fechaIniciaPlantilla) }}
                    </div>
                </div>   
                <div class="form-group form-group-sm">
                    <label for="form_plantillaRel" class="col-sm-2 control-label">Plantilla:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.plantillaRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGuardarPedidoDetalle, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                     
      </div>
    </div>                    
                    
    <!-- Fin Encabezado Movimiento -->

    <ul class="nav nav-tabs">
        <li class="active"><a href="#recursos" data-toggle="tab">Recursos</a></li>        
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="recursos">
            <div id="recursos" style="width: 100%"><br>
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>COD</th>
                        <th>RECURSO</th>
                        <th>POS</th>
                        <th></th>
                    </tr>
                    {% for arPedidoDetalleRecursos in arPedidoDetalleRecursos %}
                        <tr>
                            <td>{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk  }}<input type="hidden" name="LblCodigo[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}"></td>
                            <td>{{ arPedidoDetalleRecursos.recursoRel.nombreCorto | default('') }}</td>                     
                            <td style="text-align: right"><input class="input-grid" type="text" name="TxtPosicion{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" value="{{ arPedidoDetalleRecursos.posicion  }}" size="3" style="width:30px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                        
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedidoDetalleRecursos.codigoPedidoDetalleRecursoPk }}" /></td>
                        </tr>
                    {% endfor %}
                </table> 
                <div class="btn-toolbar" style="float: right">                              
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_pedido_detalle_recurso_nuevo', {'codigoPedidoDetalle': arPedidoDetalle.codigoPedidoDetallePk }) }}', 'AgregarNuevoDetalle', 600, 1200)">Nuevo</a>                        
                    </div>
                    <div class="btn-group">
                        {{ form_widget(form.BtnDetalleActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                    </div>        
                    <div class="btn-group">
                        {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                    </div>
                </div> 
            </div>
        </div>


        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_pedido_detalle', { 'codigoPedido': arPedidoDetalle.codigoPedidoFk }) }}">Volver</a>
</div>
{% endblock %}
