{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
    <div class="page-header">
        <h1>Lista Movimientos: <input name="idocumento" type="hidden" value="{{arDocumento.codigoDocumentoPK}}" /><small><label id="lblNombreDocumento">{{arDocumento.nombreDocumento}}</label></small></h1>
    </div>              
    <form action="{{ path('brs_inv_movimientos_lista', {'codigoDocumento': arDocumento.codigoDocumentoPK}) }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>NÃºmero</th>
                <th>Fecha</th>
                <th>Soporte</th>
                <th>Nit</th>            
                <th>Cliente</th>            
                <th>Total</th>
                <th>Estado</th>
                <th>Ver</th>
                <th></th>
            </tr>

            {% for movimiento in arMovimientos %}

            <tr>
                <td><input type="hidden" name="LblCodigoMovimiento[]" value="{{ movimiento.codigoMovimientoPk }}">{{ movimiento.codigoMovimientoPk }} </td>
                <td>{{ movimiento.numeroMovimiento | number_format(0)}}</td>
                <td>{{ movimiento.fecha |date("Y/m/d")  }}</td>
                <td>{{ movimiento.soporte }}</td>
                <td>{{ movimiento.codigoTerceroFk }}</td>  
                <td>{{ movimiento.terceroRel.nombreCorto }}</td>  
                <td style="text-align: right">{{ movimiento.vrSubtotal | number_format(2, '.', ',')}}</td>            
                <td>                
                    {% if movimiento.estadoAutorizado == 1 %} <span class="label label-info">Aut</span> {% endif %}
                    {% if movimiento.estadoImpreso == 1 %} <span class="label label-info">Imp</span> {% endif %}                     
                    {% if movimiento.estadoAnulado == 1 %} <span class="label label-important">Anu</span> {% endif %}                     
                </td>                
                <td style="text-align: center"><a href="{{ path('brs_inv_movimientos_detalle', { 'codigoMovimiento': movimiento.codigoMovimientoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ movimiento.codigoMovimientoPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                    
                <a class="btn btn-default" href="{{ path('brs_inv_movimientos_nuevo', { 'codigoDocumento': arDocumento.codigoDocumentoPk, 'codigoMovimiento': 0 }) }}" style="float:left">Nuevo</a>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAutorizar" >Autorizar</button>       
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpDesActualizar" >Desautorizar</button>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpImprimir" >Imprimir</button>
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>

    <!-- Formulario de busqueda -->    
    <form class="form-horizontal" role="form" id="FrmBusqueda" action="{{ path('brs_inv_movimientos_nuevo', { 'codigoDocumento': arDocumento.codigoDocumentoPK, 'codigoMovimiento':0 }) }}" method="POST" novalidate>
        <div class="well">
            <div class="form-group">
                <label for="TxtCodigoMovimiento" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigoMovimiento" name="TxtCodigoMovimiento" placeholder="Codigo movimiento"/>
                </div>
            </div>  
            <div class="form-group">
                <label for="TxtNumeroMovimiento" class="col-sm-2 control-label">Numero</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtNumeroMovimiento" name="TxtNumeroMovimiento" placeholder="Numero documento"/>
                </div>
            </div>         
            <div class="form-group">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                                <input type="text" class="form-control" id="TxtNombreTercero" name="TxtNombreTercero" placeholder="Codigo tercero"/>
                                <span class="input-group-btn">
                                    <input type="text" class="btn btn-default" id="TxtCodigoTercero" name="TxtCodigoTercero" />
                                    <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brasa_general_inicio') }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>
            <div class="form-group">
                <label for="TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtFechaDesde" name="TxtFechaDesde" placeholder="Fecha desde"/>
                </div>
            </div>
            <div class="form-group">
                <label for="TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtFechaHasta" name="TxtFechaHasta" placeholder="Fecha desde"/>
                </div>
            </div>    
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>                
            <!-- Fin formulario de busqueda -->
        </div>    
    </form>   
</div>
{% endblock %}
