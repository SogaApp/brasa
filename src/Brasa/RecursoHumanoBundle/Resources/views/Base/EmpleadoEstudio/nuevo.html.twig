{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo proceso estudio</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_empleadoEstudioTipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.empleadoEstudioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-2 control-label">Institución:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.institucion, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_descargos" class="col-sm-2 control-label">Años aprobados:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.aprobados, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Ciudad:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Titulo obtenido:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.titulo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}