{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista liquidaciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body"> 
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                   
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>        
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>CÓDIGO</th>
                        <th>IDENTIFICACIÓN</th>
                        <th>EMPLEADO</th>
                        <th>DESDE</th>
                        <th>HASTA</th>                                                                        
                        <th></th>                        
                        <th></th>
                    </tr>
                    {% for arLiquidaciones in arLiquidaciones %}
                        <tr>
                            <td><input type="hidden" name="LblCodigo[]" value="{{ arLiquidaciones.codigoLiquidacionPk }}">{{ arLiquidaciones.codigoLiquidacionPk }} </td>
                            <td>{{ arLiquidaciones.empleadoRel.numeroIdentificacion|default('SIN EMPLEADO')  }}</td>                            
                            <td>{{ arLiquidaciones.empleadoRel.nombreCorto|default('SIN EMPLEADO')  }}</td>                            
                            <td>{{ arLiquidaciones.fechaDesde |date("Y/m/d")  }}</td>
                            <td>{{ arLiquidaciones.fechaHasta |date("Y/m/d")  }}</td>
                            <td style="text-align: center"><a href="{{ path('brs_rhu_liquidaciones_detalle', { 'codigoLiquidacion': arLiquidaciones.codigoLiquidacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                            <td><input type="checkbox" name="ChkSeleccionarContrato[]" value="{{ arLiquidaciones.codigoLiquidacionPk }}" /></td>
                        </tr>
                    {% endfor %}
                </table>                       
           
        <div class="btn-toolbar" style="float: left">
            {{ knp_pagination_render(arLiquidaciones) }} 
        </div>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">                           
            <div class="btn-group">                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_empleados_nuevo', { 'codigoEmpleado': 0, 'codigoSeleccion': 0 }) }}" style="float:left">Nuevo</a>                                                                                
            </div>
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
