                        {{ form_widget(form.disciplinarioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-2 control-label">Causal:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.asunto, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica para los procesos de suspensi贸n y llamado de atenci贸n'} }) }}
                </div>
            </div>
