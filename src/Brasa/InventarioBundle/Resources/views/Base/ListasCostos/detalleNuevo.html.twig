<form class="well" id="FrmNuevo" action="{{path('maestros_inventario_listas_costos_detalle_nuevo', { 'codigoListaCostosPk':  codigoListaCostosPk, 'codigoListaCostosDetallePk':  0 })}}" method="post"> 
    <script>
        $('#myModal').modal('toggle');
    </script>
{% import 'zikmontFrontEndBundle:Plantillas:macros.html.twig' as utilidades %}
    <div class="modal hide" id="myModal">    
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h3>{%if arListaCostosDetalle is not null%}Editar lista costos detalle{%else%}Crear lista costos detalle{%endif%}</h3>
        </div>    
        <div class="modal-body">                             
            <div class="well">      
                <table>
                    {% if arListaCostosDetalle is defined and arListaCostosDetalle is not null %}
                        <tr>
                            <td><strong>Codigo:</strong><br/></td>
                            <td><input type="text" class="span4" readonly="true" name="TxtCodigoListaCostosDetalle" {% if arListaCostosDetalle is defined and arListaCostosDetalle is not null %} value="{{arListaCostosDetalle.codigoListaCostosDetallePk}}" readonly="true" {% endif %}/></td>              
                        <tr> 
                    {% endif %}
                        <tr>
                            <strong>Item:</strong><br>
                            {% if arListaCostosDetalle is defined and arListaCostosDetalle is not null %} {%set Item =  [arListaCostosDetalle.codigoItemFk,arListaCostosDetalle.itemRel.descripcion]|join('-')  %} {% else %} {%set Item = ''%} {% endif %}

                            {{ utilidades.textboxitem(Item,5,true,true,'TxtCodigoItem') }}
                        </tr>                            
                        <tr>
                            <td><strong>Costo:</strong><br/></td>
                            <td><input type="text" class="span4" name="TxtCosto" {% if arListaCostosDetalle is defined and arListaCostosDetalle is not null %} value="{{arListaCostosDetalle.costo}}" {% endif %} placeholder="Costo" onkeypress="return validarNumeros(event)" style="text-align: right" required/></td>              
                        <tr>                                         
                        <tr>
                            <td><strong>Factor:</strong><br/></td>
                            <td><input type="text" class="span4" name="TxtFactor" {% if arListaCostosDetalle is defined and arListaCostosDetalle is not null %} value="{{arListaCostosDetalle.costo}}" {%else%} value="1" {% endif %} placeholder="Factor" onkeypress="return validarNumeros(event)" style="text-align: right" required/></td>              
                        <tr>                            
                </table>            
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancelar</a>                
            <button id="link_guardar" class="btn btn-primary" type="submit" name="OpSubmit" value="OpGuardar">Guardar</button>
        </div>  
    </div>
</form>   
