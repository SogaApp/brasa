{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
        <div class="page-header">
            <h3>Periodos pendientes por pagar</h3>
        </div>    
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                 
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                                 
            </div>
        </div>       

        <table  class="table table-striped table-bordered  table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>COD</th>
                <th>CENTRO COSTOS</th>
                <th>PERIDOO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>DIAS</th>
                <th style="text-align: right">NETO PAGAR</th>
                <th></th>
            </tr>
            {% for arProgramacionPagoPendientes in arProgramacionPagoPendientes %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arProgramacionPagoPendientes.codigoProgramacionPagoPk }}">{{ arProgramacionPagoPendientes.codigoProgramacionPagoPk }} </td>
                <td>{{ arProgramacionPagoPendientes.codigoCentroCostoFk  }}</td>
                <td>{{ arProgramacionPagoPendientes.centroCostoRel.nombre  }}</td>
                <td>{{ arProgramacionPagoPendientes.centroCostoRel.periodoPagoRel.nombre  }}</td>
                <td>{{ arProgramacionPagoPendientes.fechaDesde |date("Y/m/d")  }}</td>
                <td {% if date(arProgramacionPagoPendientes.fechaHasta) < date() %}class="danger"{% endif %}>{{ arProgramacionPagoPendientes.fechaHasta |date("Y/m/d")  }}</td>
                <td>{{ arProgramacionPagoPendientes.dias  }}</td>
                <td style="text-align: right">{{ arProgramacionPagoPendientes.VrNeto | number_format(2, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionarPagar[]" value="{{ arProgramacionPagoPendientes.codigoProgramacionPagoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                {{ form_widget(form.BtnDeshacer, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnPagar, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}
    <br /><br /><br /><br />
</div>
{% endblock %}
