{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo pago</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Abono</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_creditoTipoRel" class="col-sm-2 control-label">Credito:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.codigoCreditoFk, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_vrPagar" class="col-sm-2 control-label">Valor Abono:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vrCuota, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            
                            
        </div>
    </div>                   
    <div class="modal-footer">      
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_creditos_lista') }}">Cancelar</a>        
            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}