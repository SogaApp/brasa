{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Detalle turno</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
        </div>
    </div>
    <br /><br />
    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informaci√≥n</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CODIGO:</td>
                    <td class="td-in-well">{{ arTurno.codigoTurnoPk }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>
                <tr>
                    <td class="titulo">NOMBRE:</td>
                    <td class="td-in-well">{{ arTurno.nombre }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>                                               
            </table>
      </div>
    </div>

    <!-- Fin Encabezado Movimiento -->

    <ul class="nav nav-tabs">
        <li class="active"><a href="#tipos" data-toggle="tab">Detalle</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="tipos">
                <!-- Menu Encabezado Movimiento -->
            <div id="detalles" style="width: 100%"><br>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>CONCEPTO</th>
                <th>CANTIDAD</th>
                <th></th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arTurnoDetalle in arTurnoDetalle %}
                <tr>
                    <td>{{ arTurnoDetalle.codigoTurnoDetallePk  }}<input type="hidden" name="LblCodigo[]" value="{{ arTurnoDetalle.codigoTurnoDetallePk }}"></td>                                                                                 
                    <td>{{ arTurnoDetalle.pagoConceptoRel.nombre }}</td>
                    <td style="text-align: right">{{ arTurnoDetalle.cantidad | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_tur_base_turno_detalle_nuevo', {'codigoTurno': arTurno.codigoTurnoPk, 'codigoTurnoDetalle': arTurnoDetalle.codigoTurnoDetallePk }) }}', 'AgregarNuevoDetalle', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                                    
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arTurnoDetalle.codigoTurnoDetallePk }}" /></td>
                </tr>
            {% endfor %}
        </table>
            </div>
        </div>
        <div class="btn-toolbar" style="float: right">
        <div class="btn-group">            
            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_base_turno_detalle_nuevo', {'codigoTurno': arTurno.codigoTurnoPk, 'codigoTurnoDetalle': 0 }) }}', 'AgregarNuevoDetalle', 600, 900)">Nuevo</a>                        
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    </div>


        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_base_turno_lista') }}">Volver</a>
</div>
{% endblock %}
