{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Contabilizar pagos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÃ“DIGO</th>
                <th>PAGO</th>
                <th>NUMERO</th>
                <th>IDENTIFICACION</th>
                <th>EMPLEADO</th>
                <th>CUENTA</th>
                <th style="text-align: right">VR. PAGO</th>                
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arPagosBancoDetalle in arPagosBancoDetalle %}
            <tr>
                <td>{{ arPagosBancoDetalle.codigoPagoBancoDetallePk  }}</td>
                <td>{{ arPagosBancoDetalle.codigoPagoFk  }}</td>
                <td>{{ arPagosBancoDetalle.pagoRel.numero  }}</td>
                <td>{{ arPagosBancoDetalle.numeroIdentificacion  }}</td>
                <td>{{ arPagosBancoDetalle.nombreCorto  }}</td>
                <td>{{ arPagosBancoDetalle.cuenta  }}</td>
                <td class="td-in-well" align="right">{{ arPagosBancoDetalle.vrPago | number_format(2, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagosBancoDetalle.codigoPagoBancoDetallePk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arPagosBancoDetalle) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Pagos <span class="badge">{{ arPagosBancoDetalle.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnContabilizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                               
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
