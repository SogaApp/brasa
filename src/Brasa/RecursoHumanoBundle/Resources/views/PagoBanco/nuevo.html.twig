{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo pago banco</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_descripcion" class="col-sm-2 control-label">Descripción:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_cuentaRel" class="col-sm-2 control-label">Cuenta:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cuentaRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaTrasmision" class="col-sm-2 control-label">Fecha transmisión:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaTrasmision, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_secuencia" class="col-sm-2 control-label">Secuencia:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.secuencia, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicacion" class="col-sm-2 control-label">Fecha aplicación:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaAplicacion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
        </div>
    </div>               
    <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}