{% extends '::base.html.twig' %}

{% block content %}
<div class="container">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo tercero</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.nit, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Digito verificación:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.digitoVerificacion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Clasificación tributaria:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.clasificacionTributariaRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Forma pago cliente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.formaPagoClienteRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Forma pago proveedor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.formaPagoProveedorRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Actividad económica:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.codigoActividadEconomica, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>        
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombres:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.nombres, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Primer apellido:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.apellido1, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Segundo apellido:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.apellido2, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Asesor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.asesorRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Negocio transporte:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.negociacionRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Plazo cliente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.plazoPagoCliente, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Plazo proveedor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.plazoPagoProveedor, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Dirección:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.direccion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Teléfono:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.celular, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Fax:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fax, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Retención fuente ventas:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.retencionFuenteVentas, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Retención fuente ventas sin base:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.retencionFuenteVentasSinBase, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Porcentaje cree:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.porcentajeCREE, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Autoretenedor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.autoretenedor, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Contacto cliente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.contactoCliente, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Celular contacto cliente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.celularContactoCliente, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Contacto proveedor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.contactoProveedor, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Celular contacto proveedor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.celularContactoProveedor, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
                
        </div>
    </div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_gen_base_terceros') }}">Cancelar</a>
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>    
{% endblock %}
