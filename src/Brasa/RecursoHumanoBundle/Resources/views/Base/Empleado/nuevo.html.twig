{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo empleado</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_tipoIdentificacionRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.tipoIdentificacionRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>             
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.numeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_nombreCorto" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                 
            <div class="form-group form-group-sm">
                <label for="form_centroCostoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                             
            <div class="form-group form-group-sm">
                <label for="form_vrSalario" class="col-sm-2 control-label">Salario:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vrSalario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>                   
    <div class="modal-footer">      
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_empleados_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}