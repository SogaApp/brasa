{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo contrato</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_contratoTipoRel" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.contratoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_tipoTiempoRel" class="col-sm-2 control-label">Centro costo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.tipoTiempoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>      
            <div class="form-group form-group-sm">
                <label for="form_clasificacionRiesgoRel" class="col-sm-2 control-label">Clasificacion riesgo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.clasificacionRiesgoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_tipoPensionRel" class="col-sm-2 control-label">Tipo pension:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.tipoPensionRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_numero" class="col-sm-2 control-label">Numero soporte:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_cargoRel" class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_cargoDescripcion" class="col-sm-2 control-label">Descripcion cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cargoDescripcion, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Fecha inicio:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde) }}
                </div>
            </div>        
            <div class="form-group form-group-sm">
                <label for="form_vrSalario" class="col-sm-2 control-label">Salario:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vrSalario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                   
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>                   
    <div class="modal-footer">              
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}