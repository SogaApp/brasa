{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Detalle cliente</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">                      
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
        </div>
    </div>
    <br /><br />
    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informaci√≥n</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CODIGO:</td>
                    <td class="td-in-well">{{ arCliente.codigoClientePk }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>
                <tr>
                    <td class="titulo">CLIENTE:</td>
                    <td class="td-in-well">{{ arCliente.nombreCorto }}</td>
                    <td class="titulo"></td>
                    <td align="right"></td>
                </tr>                
            </table>
      </div>
    </div>

    <!-- Fin Encabezado Movimiento -->

    <ul class="nav nav-tabs">
        <li class="active"><a href="#puestos" data-toggle="tab">Puestos</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="puestos">
                <!-- Menu Encabezado Movimiento -->
            <div id="puestos" style="width: 100%"><br>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>                                
                <th>NOMBRE</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arPuestos in arPuestos %}
                <tr>
                    <td>{{ arPuestos.codigoPuestoPk  }}<input type="hidden" name="LblCodigo[]" value="{{ arPuestos.codigoPuestoPk }}"></td>                    
                        <td>{{ arPuestos.nombre  }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPuestos.codigoPuestoPk }}" /></td>
                </tr>
            {% endfor %}
        </table>
            </div>
        </div>
        <div class="btn-toolbar" style="float: right">
        <div class="btn-group">            
            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_base_cliente_puesto_nuevo', {'codigoCliente': arCliente.codigoClientePk, 'codigoPlantillaDetalle': 0 }) }}', 'AgregarNuevoDetalle', 600, 900)">Nuevo</a>            
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminarPuesto, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    </div>


        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_base_cliente_lista') }}">Volver</a>
</div>
{% endblock %}
