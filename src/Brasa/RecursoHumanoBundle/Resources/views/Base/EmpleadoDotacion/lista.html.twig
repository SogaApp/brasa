{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista dotaciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arEmpleadoDotaciones, 'CODIGO', 'd.codigoEmpleadoDotacionPk') }}</th>
                <th>FECHA</th>
                <th>CENTRO CENTRO</th>                
                <th>IDENTIFICACIÓN</th>
                <th>{{ knp_pagination_sortable(arEmpleadoDotaciones, 'EMPLEADO', 'e.nombreCorto') }}</th>                
                <th>NÚMERO INTERNO REFERENCIA</th>
                <th style="text-align: center"></th>
                <th></th>
                <th></th>
            </tr>
            {% for arEmpleadoDotaciones in arEmpleadoDotaciones %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arEmpleadoDotaciones.codigoEmpleadoDotacionPk }}">{{ arEmpleadoDotaciones.codigoEmpleadoDotacionPk }} </td>
                <td>{{ arEmpleadoDotaciones.fecha |date("Y/m/d")  }}</td>
                <td>{{ arEmpleadoDotaciones.empleadoRel.centroCostoRel.nombre  }}</td>
                <td>{{ arEmpleadoDotaciones.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arEmpleadoDotaciones.empleadoRel.nombreCorto  }}</td>
                <td>{{ arEmpleadoDotaciones.codigoInternoReferencia  }}</td>
                <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_rhu_base_empleado_dotacion_nuevo', {'codigoEmpleado':  arEmpleadoDotaciones.codigoEmpleadoFk, 'codigoEmpleadoDotacion': arEmpleadoDotaciones.codigoEmpleadoDotacionPk }) }}', 'AgregarIncapacidad', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_base_empleado_dotacion_detalle', { 'codigoEmpleadoDotacion': arEmpleadoDotaciones.codigoEmpleadoDotacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEmpleadoDotaciones.codigoEmpleadoDotacionPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        {{ knp_pagination_render(arEmpleadoDotaciones) }}


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_base_empleado_dotacion_nuevo_dotacion') }}', 'AgregarContrato', 600, 900)">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
