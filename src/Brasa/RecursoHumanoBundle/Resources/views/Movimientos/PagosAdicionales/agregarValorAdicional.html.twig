{% extends '::base.html.twig' %}
{% block title %}Adicionales al pago agregar valor - Soga App{% endblock %}
{% block content %}
    <div class="container">
        <p class="description"><h3 >Agregar {% if tipo == 1 %}bonificación{% endif %}{% if tipo == 2 %}descuento{% endif %}{% if tipo == 3 %}comisión{% endif %}</h3></p>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="panel panel-default">
                <div class="panel-heading">Datos empleado</div>
                <div class="panel-body">
                    
                <div class="form-group form-group-sm">
                    <label for="txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                    <div class="col-sm-9">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              <input id="txtNumeroIdentificacion"  name="txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arEmpleado.numeroIdentificacion |default('') }}"/>
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">                                      
                              <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arEmpleado.nombreCorto |default('') }}" readOnly="ReadOnly" />
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                    
                    
                <div class="form-group form-group-sm">
                    <label for="pagoConceptoRel" class="col-sm-3 control-label">Tipo:</label>
                    <div class="col-sm-9">
                            {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                        
                <div class="form-group form-group-sm">
                    <label for="TxtValor" class="col-sm-3 control-label">Valor:</label>
                    <div class="col-sm-9">
                            {{ form_widget(form.TxtValor, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                        
                <div class="form-group form-group-sm">
                    <label for="TxtDetalle" class="col-sm-3 control-label">Detalle:</label>
                    <div class="col-sm-9">
                            {{ form_widget(form.TxtDetalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>                         
                </div>
            </div>

            <div class="modal-footer">                
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_lista') }}">Cancelar</a>
                {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            <br />
        {{ form_end(form) }}

</div>
{% endblock %}