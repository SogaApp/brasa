{% extends '::base.html.twig' %}
{% block content %}

<div class="container">          
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo despacho</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion despacho</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="CboDespachoTipo" class="col-sm-2 control-label">Tipo servicio:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.despachoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="CboCiudadOrigen" class="col-sm-2 control-label">Origen:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.ciudadOrigenRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="CboCiudadDestino" class="col-sm-2 control-label">Destino:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.ciudadDestinoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label for="CboRutas" class="col-sm-2 control-label">Ruta:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.rutaRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="CboConductor" class="col-sm-2 control-label">Conductor:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.conductorRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label for="CboVehiculo" class="col-sm-2 control-label">Vehiculo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.vehiculoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
        </div>
    </div>        
    <div class="panel panel-default">
        <div class="panel-heading">Liquidacion</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">
                <label for="form_vrFlete" class="col-sm-2 control-label">Flete:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrFlete, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_vrAnticipo" class="col-sm-2 control-label">Anticipo:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrAnticipo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion adicional</div>
        <div class="panel-body">
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
        </div>
    </div>    
    <div class="modal-footer">
        <a class="btn btn-default" href="{{ path('brs_tte_despachos_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>    
        {{ form_end(form) }}
</div>
</div>
{% endblock %}