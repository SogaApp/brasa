{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Periodo fecha pago nuevo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">    
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>
                <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Dia habil:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.diaHabil, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>
                <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Inicio dos ultimos digitos nit :</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dosUltimosDigitosInicioNit, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>
                    <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Fin dos ultimos digitos nit :</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dosUltimosDigitosFinNit, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>
                    <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">AÃ±o :</label>
                <div class="col-sm-9">
                    {{ form_widget(form.anio, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_afi_base_periodo_fecha_pago') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}