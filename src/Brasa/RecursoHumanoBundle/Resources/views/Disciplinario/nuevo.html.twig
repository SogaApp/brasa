                <div class="col-sm-10">
                            {{ form_widget(form.descargos, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos'} }) }}
                </div>
            </div>
                <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Fecha Suspensi贸n:</label>
