{% extends '::base.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Soporte pago detalle</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}

        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">NUMERO:</td>
                        <td class="td-in-well">{{ arSoportePagoPeriodo.codigoSoportePagoPeriodoPk }}</td>
                        <td class="titulo">DIAS PERIODO:</td>
                        <td align="right">{{ arSoportePagoPeriodo.diasPeriodo}}</td>
                    </tr>
                    <tr>
                        <td class="titulo">GRUPO:</td>
                        <td class="td-in-well">{{ arSoportePagoPeriodo.recursoGrupoRel.nombre |default('') }}</td>
                        <td class="titulo">DIAS FESTIVOS</td>
                        <td align="right">{{ arSoportePagoPeriodo.festivos}}</td>
                    </tr>
                    <tr>
                        <td class="titulo">FECHA DESDE:</td>
                        <td class="td-in-well">{{ arSoportePagoPeriodo.fechaDesde |date("Y/m/d") }}</td>
                        <td class="titulo" >DIAS ADICIONALES:</td>
                        <td align="right">{{ arSoportePagoPeriodo.diasAdicionales}}</td>
                    </tr>
                    <tr>
                        <td class="titulo">FECHA HASTA:</td>
                        <td class="td-in-well">{{ arSoportePagoPeriodo.fechaHasta |date("Y/m/d") }}</td>
                        <td class="titulo" >DESCANSO FESTIVO FIJO:</td>
                        <td>{% if arSoportePagoPeriodo.descansoFestivoFijo == 1 %}SI{% else %}NO{% endif %}</td>
                    </tr>
                    <tr>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo" >FESTIVOS REALES:</td>
                        <td align="right">{{ arSoportePagoPeriodo.diaFestivoReal}}</td>
                    </tr>                    
                    <tr>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo" >DOMINGOS REALES:</td>
                        <td align="right">{{ arSoportePagoPeriodo.diaDomingoReal}}</td>
                    </tr>                     
                </table>
            </div>
        </div>
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">           
                {{ form_widget(form.BtnLiquidar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>     
        <br/><br/>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <td colspan="3"></td>
                <td colspan="7" style="text-align: center">NOVEDADES</td>
                <td colspan="2" style="text-align: center">NOMINA</td>
                <td colspan="6" style="text-align: center">HORAS</td>
                <td colspan="4" style="text-align: center">TIEMPO ADICIONAL</td>
                <td colspan="5"></td>
            </tr>
            <tr>                
                <th colspan="2">RECURSO</th>
                <th>D</th>
                <th>DSC</th>
                <th>NOV</th>
                <th>ING</th>
                <th>RET</th>
                <th>INC</th>
                <th>LIC</th>
                <th>VAC</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas pago">HP</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas">H</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas descanso">HDS</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas novedad">HNV</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas diurnas">HD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas nocturnas">HN</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas festivas diurnas">HFD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas festivas nocturnas">HFN</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias diurnas">HEOD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras ordinarias nocturnas">HEON</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas diurnas">HEFD</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas nocturnas">HEFN</p></th>
                <th>CONT</th>
                <th>SALARIO</th>
                <th>DEVENGA</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arSoportesPagos in arSoportesPagos %}
            <tr>                                
                <td>({{ arSoportesPagos.codigoRecursoFk  }}){{ arSoportesPagos.recursoRel.numeroIdentificacion  }}</td>
                <td>{{ arSoportesPagos.recursoRel.nombreCorto  }}</td>
                <td style="text-align: right">{{ arSoportesPagos.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.novedad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.ingreso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.retiro | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.incapacidad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.licencia | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.vacacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasPago | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasDescanso | number_format(2, '.', ',') }}</td>
                <td style="text-align: right" {% if arSoportesPagos.horasNovedad > 0 %} class="danger" {% endif %}>{{ arSoportesPagos.horasNovedad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasNocturnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                <td>{{ arSoportesPagos.codigoContratoFk }}</td>
                <td style="text-align: right">{{ arSoportesPagos.vrSalario | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.vrDevengado | number_format(0, '.', ',') }}</td>
                <td><a href="javascript:abrirVentana3('{{ path('brs_tur_proceso_generar_soporte_pago_editar', {'codigoSoportePago': arSoportesPagos.codigoSoportePagoPk }) }}', 'Editar', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Ver"></a></td>
                <td><a href="javascript:abrirVentana3('{{ path('brs_tur_proceso_generar_soporte_pago_detalle_ver', {'codigoSoportePago': arSoportesPagos.codigoSoportePagoPk }) }}', 'VerDetalleSoportePago', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_090_table.png') }}" width=20 height=20 title="Ver"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSoportesPagos.codigoSoportePagoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_proceso_generar_soporte_pago') }}">Volver</a>
            </div>
            <!-- Botones Menu Items -->
            <div class="btn-group">
                    <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportesPagos.getTotalItemCount }}</span></div>
            </div>
        </div>


        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arSoportesPagos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnLiquidarCompensacion, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnLiquidarCompensacion2, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>            
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Botones Menu Items -->


        {{ form_rest(form) }}
    {{ form_end(form) }}


</div>
{% endblock %}
