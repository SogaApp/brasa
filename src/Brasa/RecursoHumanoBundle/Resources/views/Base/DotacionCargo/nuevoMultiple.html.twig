{% extends '::base.html.twig' %}
{% block title %}Dotacion cargo nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo dotacion del cargo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                        
        </div>
    </div>
                
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>            
            <th>CÓDIGO</th>
            <th>DOTACION</th>
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
        </tr>        
            {%for arDotacionesElemento in arDotacionesElemento %}
               <tr>
                <td>{{arDotacionesElemento.codigoDotacionElementoPk }}</td>
                <td>{{arDotacionesElemento.dotacion }}</td>
                <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDotacionesElemento.codigoDotacionElementoPk }}" /></td>
            {%endfor%}
            </tr>            
        </table>        
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_dotacion_cargo_lista') }}">Cancelar</a>
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
    {{ form_end(form) }}
</div>    
{% endblock %}
