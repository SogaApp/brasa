{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva prueba</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion prueba</div>
        <div class="panel-body">    
            <div class="form-group form-group-sm">
                <label for="form_seleccionPruebaTipoRel" class="col-sm-2 control-label">Tipo prueba:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.seleccionPruebaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_resultado" class="col-sm-2 control-label">Resultado:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.resultado, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>               
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>             
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}