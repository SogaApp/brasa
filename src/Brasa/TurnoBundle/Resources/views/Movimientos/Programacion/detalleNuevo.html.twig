{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo detalle programacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body"> 
            <div class="form-group form-group-sm">
                <label for="form_dia1" class="col-sm-3 control-label">Dia1:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dia1, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_dia1" class="col-sm-3 control-label">Dia2:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.dia2, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                                                               
        </div>
    </div>               
    <div class="modal-footer">        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}