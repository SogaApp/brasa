{% extends '::base.html.twig' %}
{% block title %}Proceso disciplinario nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo proceso disciplinario</h3>    
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arDisciplinario.empleadoRel.numeroIdentificacion |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arDisciplinario.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
               
            <div class="form-group form-group-sm">
                <label for="form_disciplinarioTipoRel" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.disciplinarioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_causal" class="col-sm-3 control-label">Causal o motivo:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.asunto, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_descargos" class="col-sm-3 control-label">Descargos:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.descargos, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos y es la descipcion completa del descargo'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicaProceso" class="col-sm-3 control-label">Fecha proceso:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.fechaAplicaProceso, { 'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: sabado 3 de marzo de 2015','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicaHastaProceso" class="col-sm-3 control-label">Fecha proceso hasta:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.fechaAplicaHastaProceso, { 'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: sabado 3 de marzo de 2015','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_diasSuspencion" class="col-sm-3 control-label">Días de sanción:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.diasSuspencion, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos y es la descipcion completa del descargo'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_fechaIngresoTrabajo" class="col-sm-3 control-label">Fecha ingreso trabajo:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.fechaIngresoTrabajo, { 'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: sabado 3 de marzo de 2015','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_puesto" class="col-sm-3 control-label">Puesto:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.puesto, { 'attr': {'class': 'form-control', 'placeholder': 'Aplica solo para el proceso de Descargos y es la descipcion completa del descargo','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_zona" class="col-sm-3 control-label">Zona:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.zona, { 'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: norte, sur','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_operacion" class="col-sm-3 control-label">Operación:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.operacion, { 'attr': {'class': 'form-control', 'placeholder': 'Ejemplo: Medellin, Bogota entre otros ','style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_reentrenamiento" class="col-sm-3 control-label">Reentrenamiento:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.reentrenamiento, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_disciplinario_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}