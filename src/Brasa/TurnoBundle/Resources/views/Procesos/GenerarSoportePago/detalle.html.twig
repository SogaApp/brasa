{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Generar soporte pago</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arSoportesPagos, 'CÃ“DIGO', 'p.codigoSoportePagoPk') }}</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>RECURSO</th>
                <th>HD</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>                
            </tr>
            {% for arSoportesPagos in arSoportesPagos %}
            <tr>                
                <td>{{ arSoportesPagos.codigoSoportePagoPk  }}</td>
                <td>{{ arSoportesPagos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagos.fechaHasta |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagos.recursoRel.nombreCorto  }}</td>    
                <td style="text-align: right">{{ arSoportesPagos.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasOrdinariasNocturnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagos.horasExtrasFestivasNocturnas | number_format(0, '.', ',') }}</td>                
            </tr>
            
            {% endfor %}
        </table>                    
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
