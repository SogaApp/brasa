{% extends '::base.html.twig' %}

{% block content %}
<div class="container">    
    {{ form_start(formConfiguracionGeneral, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formConfiguracionGeneral) }}
    <h3>Configuración general</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre empresa:</label>
                <div class="col-sm-10">
                        {{ form_widget(formConfiguracionGeneral.nombreEmpresa, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-10">
                        {{ form_widget(formConfiguracionGeneral.nit, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Dv:</label>
                <div class="col-sm-10">
                        {{ form_widget(formConfiguracionGeneral.digitoVerificacion, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Número cuenta:</label>
                <div class="col-sm-10">
                        {{ form_widget(formConfiguracionGeneral.cuenta, { 'attr': {'onKeypress': 'ValidaSoloNumeros();','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Tipo cuenta:</label>
                <div class="col-sm-10">
                        {{ form_widget(formConfiguracionGeneral.conceptoTipoCuenta, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
    
</div>
</div>
    <div class="modal-footer">
            {{ form_widget(formConfiguracionGeneral.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formConfiguracionGeneral) }}
</div>    
{% endblock %}