{% extends '::base.html.twig' %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Detalles de las vacaciones</h3>
        </div>

        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                    {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                    {{ form_widget(form.BtnLiquidar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}            
            </div>
        </div>
        <br /><br />
        <div class="panel panel-default">
            <div class="panel-heading">Información de las vacaciones</div>
            <div class="panel-body">    
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CODIGO:</td>
                        <td class="td-in-well">{{ arVacaciones.codigoVacacionPk }}</td>
                        <td class="titulo">FECHA:</th>
                        <td class="td-in-well">{{ arVacaciones.fecha |date("Y/m/d") }}</td>
                        <td class="titulo">SALARIO:</th>
                        <td class="td-in-well" align="right">{{ arVacaciones.empleadoRel.vrSalario | number_format(2, '.', ',')}}</td>                        
                    </tr>
                    <tr>
                        <td class="titulo">EMPLEADO:</td>
                        <td class="td-in-well">{{ arVacaciones.empleadoRel.nombreCorto }}</td>
                        <td class="titulo">IDENTIFICACIÓN:</th>
                        <td class="td-in-well">{{ arVacaciones.empleadoRel.numeroIdentificacion }}</td>
                        <td class="titulo">IBC:</th>
                        <td class="td-in-well" align="right">{{ arVacaciones.vrIbc | number_format(2, '.', ',')}}</td>                                                
                    </tr>                    
                    <tr>
                        <td class="titulo">PERIODO DESDE</td>
                        <td class="td-in-well">{{ arVacaciones.fechaDesdePeriodo |date("Y/m/d") }}</td>
                        <td class="titulo">DÍAS VACACIONES</td>
                        <td class="td-in-well">{{ arVacaciones.diasVacaciones }}</td>
                        <td class="titulo">VR. SALUD</td>
                        <td class="td-label" align="right">{{ arVacaciones.vrSalud | number_format(2, '.', ',')}}</td>
                    </tr>
                    <tr>
                        <td class="titulo">PERIODO HASTA</td>
                        <td class="td-in-well">{{ arVacaciones.fechaHastaPeriodo |date("Y/m/d") }}</td>
                        <td class="titulo">DÍAS PAGADOS</td>
                        <td class="td-in-well">{{ arVacaciones.diasVacacionesPagadas }}</td>
                        <td class="titulo">VR. PENSIÓN</td>
                        <td class="td-label" align="right">{{ arVacaciones.vrPension | number_format(2, '.', ',')}}</td>
                    </tr>
                    <tr>
                        <td class="titulo">DISFRUTADO DESDE</td>
                        <td class="td-in-well">{{ arVacaciones.fechaDesde |date("Y/m/d") }}</td>
                        <td class="titulo">DÍAS DISFRUTADOS</td>
                        <td class="td-in-well">{{ arVacaciones.diasVacacionesDisfrute }}</td>
                        <td class="titulo">VR. OTRAS DEDUCCIONES:</td>
                        <td class="td-in-well" align="right">{{ arVacaciones.vrDeduccion | number_format(2, '.', ',')}}</td>                                                
                    </tr>
                    <tr>
                        <td class="titulo">DISFRUTADO HASTA</td>
                        <td class="td-in-well">{{ arVacaciones.fechaHasta |date("Y/m/d") }}</td>
                        <td class="titulo">PAGADO:</td>
                        <td> {% if arVacaciones.estadoPagado == 1 %}SI{% else %} NO {% endif %}</td>
                        <td class="titulo">VR. VACACIONES:</td>
                        <td class="td-in-well" align="right">{{ arVacaciones.vrVacacion | number_format(2, '.', ',')}}</td>                                                
                    </tr>
                    <tr>
                        <td class="titulo">CENTRO COSTO</td>
                        <td class="td-in-well" colspan="7">{{ arVacaciones.centroCostoRel.nombre }}</td>
                        
                    </tr>
                    <tr>
                        <td class="titulo" >COMENTARIOS: </td>
                        <td class="td-in-well" colspan="7">{{ arVacaciones.comentarios }}</td>
                    </tr>                    
                </table>
            </div>
        </div>
        <div class="panel panel-default">
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>CÓDIGO</th>
                    <th>TIPO</th>
                    <th style="text-align: right">VALOR</th>
                    <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                </tr>
                {% for arVacacionDeducciones in arVacacionDeducciones %}
                <tr>
                    <td>
                        <input type="hidden" name="LblCodigoGuia[]" value="{{ arVacacionDeducciones.codigoVacacionCreditoPk }}">
                        <span class="badge">{{ arVacacionDeducciones.codigoVacacionCreditoPk }}</span>
                    </td>
                    <td>{{ arVacacionDeducciones.creditoRel.creditoTipoRel.nombre }}</td>           
                    <td style="text-align: right">{{ arVacacionDeducciones.vrDeduccion | number_format(2, '.', ',') }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arVacacionDeducciones.codigoVacacionCreditoPk }}" /></td>
                </tr>
                {% endfor %}
            </table>
        </div> 
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_vacaciones_lista') }}" style="float:left">Volver</a>
            </div>
        </div>  
        <div class="btn-toolbar" style="float: right">                           
            <div class="btn-group">                
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_vacaciones_detalle_nuevo', {'codigoVacacion': arVacaciones.codigoVacacionPk}) }}', 'AgregarNuevo', 600, 900)">Agregar deducción</a>
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminarDeduccion, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>             
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
