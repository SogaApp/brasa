{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Pago {{ arPago.codigoPagoPk }}</h3>
    </div>

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion programacion pago</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="td-label">Numero:</td>
                    <td class="td-in-well">{{ arPago.codigoPagoPk }}</td>
                    <td class="td-label">Fecha:</td>
                    <td class="td-in-well">{{ arPago.fechaHasta|date("Y/m/d") }}</td>
                    <td class="td-label">Salario:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arPago.empleadoRel.VrSalario | number_format(2, '.', ',') }}</td>
                    <td class="td-label">Salario periodo:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arPago.VrSalario | number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td class="td-label">Empleado:</td>
                    <td class="td-in-well">{{ arPago.empleadoRel.nombreCorto }}</td>
                    <td class="td-label">Desde:</td>
                    <td class="td-in-well">{{ arPago.fechaDesde|date("Y/m/d") }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Total devengado:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arPago.VrDevengado | number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td class="td-label">C. Costo</td>
                    <td class="td-in-well" >{{ arPago.centroCostoRel.nombre }}</td>
                    <td class="td-label">Hasta:</td>
                    <td class="td-in-well">{{ arPago.fechaHasta|date("Y/m/d") }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Total deducciones:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arPago.VrDeducciones | number_format(2, '.', ',')}}</td>
                </tr>
                <tr>
                    <td class="td-label">Programacion:</td>
                    <td class="td-in-well" >{{ arPago.codigoProgramacionPagoFk }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                    <td class="td-label"></td>
                    <td class="td-in-well-numerico" align="right"></td>
                    <td class="td-label">Total neto:</td>
                    <td class="td-in-well-numerico" align="right">$ {{ arPago.VrNeto | number_format(2, '.', ',')}}</td>
                </tr>                  
                <tr>
                    <td colspan="8">Comentarios:</td>
                </tr>
            </table>
      </div>
    </div>

    <!-- Fin Encabezado Movimiento -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-group">
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            {{ form_widget(form.BtnReliquidar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    <br /><br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
        <li><a href="#conceptos" data-toggle="tab">Conceptos</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>ID</th>
                            <th>CONCEPTO</th>
                            <th>DETALLE</th>
                            <th style="text-align: right">VR. DIA</th>
                            <th style="text-align: right">PORCENTAJE</th>
                            <th style="text-align: right">HORAS</th>
                            <th style="text-align: right">VR. HORA</th>
                            <th style="text-align: right">VR. PAGO</th>
                            <th style="text-align: right">OP</th>
                            <th style="text-align: right">VR. NETO</th>
                            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                        </tr>
                        {% for arPagoDetalles in arPagoDetalles %}
                        <tr>
                            <td>
                                <input type="hidden" name="LblCodigoGuia[]" value="{{ arPagoDetalles.codigoPagoDetallePk }}">
                                <span class="badge">{{ arPagoDetalles.codigoPagoDetallePk }}</span>
                            </td>
                            <td>{{ arPagoDetalles.pagoConceptoRel.nombre }}</td>
                            <td>{{ arPagoDetalles.detalle }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.vrDia | number_format(2, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.porcentajeAplicado | number_format(2, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.numeroHoras | number_format(1, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.vrHora | number_format(2, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.vrPago | number_format(2, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.operacion | number_format(0, '.', ',') }}</td>
                            <td style="text-align: right">{{ arPagoDetalles.vrPagoOperado | number_format(2, '.', ',') }}</td>
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagoDetalles.codigoPagoDetallePk }}" /></td>
                        </tr>
                        {% endfor %}
                    </table>

                    <!-- Botones Menu Items -->
                    <div class="btn-toolbar" style="float:left">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_lista') }}" style="float:left">Volver</a>
                        </div>
                    </div>
                    <!-- Fin Botones Menu Items -->

                    <br/><br/>
                    <hr/>
                </div>

        </div>
        <div class="tab-pane" id="conceptos">

        </div>
    </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
