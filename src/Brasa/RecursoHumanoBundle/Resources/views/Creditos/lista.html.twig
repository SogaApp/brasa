{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Creditos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}

        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Empleado</th>
                <th>Pagar</th>
                <th>Cuota</th>
                <th>N. Cuo</th>
                <th>C. Act</th>
                <th></th>
            </tr>
            {% for arCredito in arCredito %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCredito.codigoCreditoPk }}">{{ arCredito.codigoCreditoPk }} </td>
                <td>{{ arCredito.fecha |date("Y/m/d")  }}</td>
                <td>{{ arCredito.empleadoRel.nombreCorto  }}</td>
                <td style="text-align: right">{{ arCredito.vrPagar | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCredito.vrCuota | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arCredito.numeroCuotas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arCredito.numeroCuotaActual | number_format(0, '.', ',') }}</td>

                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCredito.codigoCreditoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.Generar, { 'attr': {'class': 'btn btn-danger btn-mini'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
