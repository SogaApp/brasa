{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Centros de costos - pagos adicionales</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}

        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Centro costos</th>
                <th></th>                
                <th></th>
            </tr>
            {% for arCentrosCostos in arCentrosCostos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}">{{ arCentrosCostos.codigoCentroCostoPk }} </td>
                <td>{{ arCentrosCostos.nombre  }}</td>                
                <td style="text-align: center"><a href="{{ path('brs_rhu_pagos_adicionales_detalle', { 'codigoCentroCosto': arCentrosCostos.codigoCentroCostoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.Generar, { 'attr': {'class': 'btn btn-danger btn-mini'} }) }}                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}        

</div>
{% endblock %}
