{% extends '::base.html.twig' %}
{% block title %}Contabilizar pagos - Soga App{% endblock %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Contabilizar pagos (Provision)</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÃ“DIGO</th>
                <th>NUMERO</th>
                <th>TIPO</th>                
                <th>IDENTIFICACION</th>                
                <th>EMPLEADO</th>                
                <th>C. COSTO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th style="text-align: right">IBP</th>
                <th style="text-align: right">IBC</th>
                <th style="text-align: right">CESANTIAS</th>
                <th style="text-align: right">INTERESES</th>
                <th style="text-align: right">VACACIONES</th>
                <th style="text-align: right">PRIMAS</th>
                <th style="text-align: right">PENSION</th>
                <th style="text-align: right">SALUD</th>
                <th style="text-align: right">CAJA</th>
                <th style="text-align: right">RIESGOS</th>
                <th style="text-align: right">SENA</th>
                <th style="text-align: right">ICBF</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arPagos in arPagos %}
            <tr>
                <td>{{ arPagos.codigoPagoPk }} </td>
                <td>{{ arPagos.numero  }}</td>
                <td>{{ arPagos.pagoTipoRel.nombre  }}</td>
                <td>{{ arPagos.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arPagos.empleadoRel.nombreCorto  }}</td>
                <td>{{ arPagos.centroCostoRel.nombre  }}</td>                
                <td>{{ arPagos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arPagos.fechaHasta |date("Y/m/d")  }}</td>
                <td style="text-align: right">{{ arPagos.vrIngresoBasePrestacion | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arPagos.vrIngresoBaseCotizacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrCesantias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrInteresesCesantias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrVacaciones | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrPrimas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrPensionEmpleador | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrEpsEmpleador | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrCaja | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrArp | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrSena | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagos.vrIcbf | number_format(0, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagos.codigoPagoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arPagos) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Pagos <span class="badge">{{ arPagos.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                               
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnContabilizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                               
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
