{% extends '::base.html.twig' %}
{% block title %}Seguridad social empleados - Soga App{% endblock %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista empleados</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>CÃ“DIGO</th>
                <th>IDENTIFICACION</th>
                <th>NOMBRE</th>
                <th>CONTRATO</th>
                <th>DIAS</th>
                <th>SALARIO</th>
                <th></th>
            </tr>
            {% for arPeriodoEmpleados in arPeriodoEmpleados %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arPeriodoEmpleados.codigoPeriodoEmpleadoPk }}">{{ arPeriodoEmpleados.codigoPeriodoEmpleadoPk }} </td>
                <td>{{ arPeriodoEmpleados.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arPeriodoEmpleados.empleadoRel.nombreCorto  }}</td>
                <td>{{ arPeriodoEmpleados.codigoContratoFk  }}</td>
                <td style="text-align: right">{{ arPeriodoEmpleados.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arPeriodoEmpleados.vrSalario | number_format(0, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPeriodoEmpleados.codigoPeriodoEmpleadoPk }}" /></td>
            </tr>
            {% endfor %}                        
        </table>                       
        {{ knp_pagination_render(arPeriodoEmpleados) }}    


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_ss_periodo_detalle', { 'codigoPeriodo': arPeriodoDetalle.codigoPeriodoFk }) }}" style="float:left">Volver</a>
            </div>
        </div>
            
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
