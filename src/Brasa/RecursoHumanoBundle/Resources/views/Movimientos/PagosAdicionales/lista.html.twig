{% extends '::base.html.twig' %}
{% block title %}Adicionales al pago - Soga App{% endblock %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Adicionales al pago  (permanentes)</h3>            
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                
                <div     class="form-group form-group-sm">
                    <label for="txtNumeroIdentificacion" class="col-sm-2 control-label">Empleado:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.txtNumeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.txtNombreCorto, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado', { 'codigo': 'form_txtNumeroIdentificacion', 'nombre': 'form_txtNombreCorto' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group form-group-sm">
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_aplicarDiaLaborado" class="col-sm-2 control-label">Aplica día laborado:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.aplicarDiaLaborado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_pagoConceptoRel" class="col-sm-2 control-label">Concepto:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>CÓDIGO</th>
                <th>CONCEPTO</th>
                <th>DETALLE</th>
                <th>CENTRO COSTO</th>
                <th>IDENTIFICACIÓN</th>
                <th>EMPLEADO</th>
                <th>CANTIDAD</th>
                <th>VALOR</th>
                <th>PERMANENTE</th>
                <th>APLICA DIA L.</th>
                <th></th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arPagosAdicionales in arPagosAdicionales %}
                {% if arPagosAdicionales.empleadoRel.codigoCentroCostoFk == null %}{% set class = 'danger' %}{% else %}{% set class = '' %}{% endif %}    
            <tr>
                <td class="{{ class }}">
                    <input type="hidden" name="LblCodigoGuia[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}">
                    <span class="badge">{{ arPagosAdicionales.codigoPagoAdicionalPk }}</span>
                </td>
                <td class="{{ class }}">{{ arPagosAdicionales.pagoConceptoRel.nombre}}</td>                        
                <td class="{{ class }}">{{ arPagosAdicionales.detalle }}</td>
                <td class="{{ class }}">{{ arPagosAdicionales.empleadoRel.centroCostoRel.nombre | default('Sin definir') }}</td>
                <td class="{{ class }}">{{ arPagosAdicionales.empleadoRel.numeroIdentificacion }}</td>
                <td class="{{ class }}">{{ arPagosAdicionales.empleadoRel.nombreCorto|default('Sin nombre') }}</td>
                <td class="{{ class }}" style="text-align: right">{{ arPagosAdicionales.cantidad | number_format(1, '.', ',') }}</td>                            
                <td class="{{ class }}" style="text-align: right">{{ arPagosAdicionales.valor | number_format(2, '.', ',') }}</td>                                                        
                <td class="{{ class }}">{% if arPagosAdicionales.permanente == 1 %} SI {% else %} NO {% endif %}</td>                        
                <td class="{{ class }}">{% if arPagosAdicionales.aplicaDiaLaborado == 1 %} SI {% else %} NO {% endif %}</td>                        
                {% if  arPagosAdicionales.tipoAdicional != 4 %}
                    <td class="{{ class }}" style="text-align: center"><a href="{{ path('brs_rhu_pagos_adicionales_agregar_valoradicionaleditar', { 'tipo': arPagosAdicionales.tipoAdicional, 'codigoPagoAdicional': arPagosAdicionales.codigoPagoAdicionalPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                                
                {% else %}
                    <td class="{{ class }}" style="text-align: center"><a href="{{ path('brs_rhu_pagos_adicionales_agregar_tiempoadicionaleditar', { 'tipo': arPagosAdicionales.tipoAdicional, 'codigoPagoAdicional': arPagosAdicionales.codigoPagoAdicionalPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                            
                {% endif %}
                <td class="{{ class }}" style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Adicionales al pago <span class="badge">{{ arPagosAdicionales.getTotalItemCount }}</span></div>                        
            </div>
            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPagosAdicionales) }}       
            </div>
        </div>

        <div class="btn-toolbar" style="float:right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>    
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_agregar_tiempoadicional' ) }}" >Tiempo suplementario</a>
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_agregar_valoradicional', { 'tipo': 1 }) }}" >Bonificacion</a>                        
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_agregar_valoradicional', { 'tipo': 3 }) }}" >Comision</a>                                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_agregar_valoradicional', { 'tipo': 2 }) }}" >Descuento</a>
             </div>
             <div class="btn-group">
                {{ form_widget(form.BtnAplicaDiaLaborado, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}                                                
                {{ form_widget(form.BtnRetirarConcepto, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                        
            </div>
        </div>    
    {{ form_end(form) }}
</div>
{% endblock %}
