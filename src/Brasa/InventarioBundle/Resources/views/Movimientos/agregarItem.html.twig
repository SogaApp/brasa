{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">    
    <!-- Formulario de busqueda -->            
    <form class="form-horizontal" role="form" id="FrmBusqueda" action="{{ path('brs_inv_movimientos_agregar_item', {'codigoMovimiento': arMovimiento.codigoMovimientoPk}) }}" method="POST" novalidate>
        <div class="well">
            <div class="form-group">
                <label for="TxtCodigo" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigo" name="TxtCodigo" {% if Ultima_Codigo is defined %} value="{{Ultimo_Codigo}}" {% endif%} onkeypress="return validarNumeros(event)" onclick="this.select()"  size="15" 
                           placeholder="Codigo">
                </div>
            </div>
            <div class="form-group">
                <label for="TxtDescripcionItem" class="col-sm-2 control-label">Descripcion</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtDescripcionItem" name="TxtDescripcionItem" {% if Ultima_Descripcion is defined %} value="{{Ultima_Descripcion}}" {% endif%} onclick="this.select()" size="15" autofocus="true" 
                           placeholder="Descripcion">
                </div>
            </div>                
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>             
        </div>    
    </form>                
    <p class="description"><h3>Agregar item a un movimiento</h3></p>      
<form id="FrmListado" action="{{ path('brs_inv_movimientos_agregar_item', {'codigoMovimiento': arMovimiento.codigoMovimientoPk}) }}" method="post">        
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>Item</th>
            <th>Descripcion</th>
            <th>U.M</th>
            <th>Iva</th>                
            <th>Existencia</th>
            <th>Remisiones</th>
            <th>Disponible</th>
            <th>Cantidad</th>
        </tr>

            {% for item in arItems %}
        <tr> 
            <td><input type="hidden" name="LblCodigoItem[]" value="{{ item.codigoItemPk }}">{{ item.codigoItemPk }}</td>  
            <td>{{ item.descripcion }}</td>
            <td>{{ item.unidadMedidaRel.nombre }}</td>
            <td style="text-align: right">{{ item.porcentajeIva }}</td>
            <td style="text-align: right">{{ item.cantidadExistencia | number_format(0, '.', ',') }}</td>
            <td style="text-align: right">{{ item.cantidadRemisionada | number_format(0, '.', ',') }}</td>
            <td style="text-align: right">{{ item.cantidadDisponible | number_format(0, '.', ',') }}</td>
            <td><input class="input-grid" type="text" name="TxtCantidad[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()" /></td>                               
        </tr>
            {% endfor %}                                
    </table>

    <div class="divDerecho">
        <button class="btn btn-primary btn-mini" type="submit" name="OpSubmit" value="OpAgregar" id="register_submit">Agregar Seleccionados</button><br>            
    </div>
    <br />
</form>        

</div>
{% endblock %}