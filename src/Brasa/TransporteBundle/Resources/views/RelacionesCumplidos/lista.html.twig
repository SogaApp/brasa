{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
    <div class="page-header">
        <h3>Relaciones de cumplidos</h3>
    </div>       
    <!-- Formulario de busqueda -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            {{ form_errors(form) }}         
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigoRelacionCumplidos" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtCodigoRelacionCumplidos, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                 
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                      {{ form_widget(form.ChkMostrarDescargadas) }} Descargadas
                    </label>
                </div>                                         
            </div>             
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.Buscar, { 'attr': {'class': 'btn btn-default', 'style':'float:right'} }) }}
                </div>
            </div>                               
            {{ form_rest(form) }}          
        </div>
    </div>                                  
    {{ form_end(form) }}    
    <form action="{{ path('brs_tte_despachos_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Fecha</th>
                <th>Ruta</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Placa</th>
                <th>Conductor</th>
                <th>Flete</th>
                <th>Anticipo</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {% for arDespachos in arDespachos %}

            <tr>
                <td><input type="hidden" name="LblCodigoMovimiento[]" value="{{ arDespachos.codigoDespachoPk }}">{{ arDespachos.codigoDespachoPk }} </td>
                <td>{{ arDespachos.despachoTipoRel.nombre  }}</td>
                <td>{{ arDespachos.fecha |date("Y/m/d")  }}</td>
                <td>{{ arDespachos.rutaRel.nombre  }}</td>
                <td>{{ arDespachos.ciudadOrigenRel.nombre  }}</td>
                <td>{{ arDespachos.ciudadDestinoRel.nombre  }}</td>
                <td>{{ arDespachos.codigoVehiculoFk  }}</td>
                <td>{{ arDespachos.conductorRel.nombreCorto  }}</td>
                <td style="text-align: right">{{ arDespachos.vrFlete | number_format(2, '.', ',')}}</td>
                <td style="text-align: right">{{ arDespachos.vrAnticipo | number_format(2, '.', ',')}}</td>
                <td style="text-align: center"><a href="{{ path('brs_tte_despachos_nuevo', { 'codigoDespacho': arDespachos.codigoDespachoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a></td>                
                <td style="text-align: center"><a href="{{ path('brs_tte_despachos_detalle', { 'codigoDespacho': arDespachos.codigoDespachoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDespachos.codigoDespachoPk }}" /></td>            
            </tr>

            {% endfor %}            

        </table>        

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                    
                <a class="btn btn-default" href="{{ path('brs_tte_despachos_nuevo', { 'codigoDespacho': 0 }) }}" style="float:left">Nuevo</a>
                <button class="btn btn-default" type="submit" name="OpSubmit" value="OpAutorizar" >Exportar</button>       
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>                   
        </div>                            
        <!-- Fin Botones Menu Items -->         
    </form> 
    <br /><br />
    <hr/>  
</div>
{% endblock %}
