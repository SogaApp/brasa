{% extends '::base_sin_menu.html.twig' %}
{% block content %}
{% block javascripts %} 
    <script>
            function enviarValores(codigo,nombre) {
                var txtCodigo = "TxtCodigoItem";
                var txtNombre = "TxtDescripcion";                
                               
                window.opener.document.getElementById(txtCodigo).value=codigo;
		window.opener.document.getElementById(txtNombre).value=nombre;
		self.close();
            }
    </script>
{% endblock %}
<div class="container"> 
    <div class="well">        
        <form class="form-horizontal" role="form"  id="FrmBusqueda" action="{{ path('brs_gen_buscar_tercero') }}" method="POST" novalidate>
            <div class="form-group">
                <label for="TxtCodigo" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtCodigo" name="TxtCodigo" {% if Ultima_Codigo is defined %} value="{{Ultimo_Codigo}}" {% endif%} onkeypress="return validarNumeros(event)" onclick="this.select()"  size="15" 
                           placeholder="Codigo">
                </div>
            </div>
            <div class="form-group">
                <label for="TxtNombre" class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="TxtNombre" name="TxtNombre" {% if Ultima_Descripcion is defined %} value="{{Ultima_Descripcion}}" {% endif%} onclick="this.select()" size="15" autofocus="true" 
                           placeholder="Nombre">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary" name="OpSubmit" value="OpBuscar">Buscar</button>
                </div>
            </div>
        </form>    
    </div>
    <form id="FrmListado" action="{{ path('brs_gen_buscar_tercero') }}" method="post">        
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th></th>
            </tr>

            {% for item in arItem %}
            <tr> 
                <td><input type="hidden" name="LblCodigoItem[]" value="{{ item.codigoItemPk }}">{{ item.codigoItemPk }}</td>  
                <td>{{ item.Descripcion }}</td>                 
                <td style="text-align: center"><a href="#"><image src="{{asset('imagenes/bootstrap/glyphicons_206_ok_2.png')}}" title="Seleccionar" onclick="enviarValores('{{ item.codigoItemPk }}','{{ item.Descripcion }}')"/></a></td>
            </tr>
            {% endfor %}                                
        </table>
    </form>        
</div>
{% endblock %}