{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Pagos adicionales centro costo </h3>            
    </div>

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion centro costo</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="td-label">Numero:</td>
                    <td class="td-in-well">{{ arCentroCosto.codigoCentroCostoPk }}</td>
                    <td class="td-label">Ultimo periodo:</td>
                    <td class="td-in-well">{{ arCentroCosto.fechaUltimoPagoProgramado |date("Y/m/d") }}</td>
                </tr>
                <tr>
                    <td class="td-label">Nombre:</td>
                    <td class="td-in-well">{{ arCentroCosto.nombre }}</td>
                    <td class="td-label"></td>
                    <td class="td-in-well"></td>
                </tr>
                <tr>
                    <td colspan="8">Comentarios:</td>
                </tr>
            </table>
      </div>
    </div>    

    <!-- Fin Encabezado Movimiento -->

    <br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#suplementario" data-toggle="tab">Suplementario</a></li>
        <li><a href="#incapacidades" data-toggle="tab">Incapacidades</a></li>
    </ul>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="tab-content">
        <div class="tab-pane active" id="suplementario">                        
            <br />
            <div id="suplementario" style="width: 100%">                    
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>ID</th>
                        <th>NUMERO</th>
                        <th>CONCEPTO</th>
                        <th>EMPLEADO</th>
                        <th>CANT</th>
                        <th>VALOR</th>
                        <th>PERMANENTE</th>
                        <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                    </tr>
                    {% for arPagosAdicionales in arPagosAdicionales %}
                    <tr>
                        <td>
                            <input type="hidden" name="LblCodigoGuia[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}">
                            <span class="badge">{{ arPagosAdicionales.codigoPagoAdicionalPk }}</span>
                        </td>
                        <td>{{ arPagosAdicionales.codigoPagoAdicionalPk}}</td>
                        <td>{{ arPagosAdicionales.pagoConceptoRel.nombre }}</td>
                        <td>{{ arPagosAdicionales.empleadoRel.nombreCorto }}</td>
                        <td style="text-align: right">{{ arPagosAdicionales.cantidad | number_format(1, '.', ',') }}</td>                            
                        <td style="text-align: right">{{ arPagosAdicionales.valor | number_format(2, '.', ',') }}</td>                                                        
                        <td>{% if arPagosAdicionales.permanente == 1 %} SI {% else %} NO {% endif %}</td>                        
                        <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPagosAdicionales.codigoPagoAdicionalPk }}" /></td>
                    </tr>
                    {% endfor %}
                </table>

                <!-- Botones Menu Items -->
                <div class="btn-toolbar" style="float:left">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_lista') }}" style="float:left">Volver</a>
                    </div>
                </div>

                <div class="btn-toolbar" style="float:right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_concepto', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk}) }}', 'AgregarGuia', 600, 900)" >Agregar</a>
                        {{ form_widget(form.BtnConceptoPermanente, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}                                                
                        {{ form_widget(form.BtnRetirarConcepto, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                        
                    </div>
                </div>
                <!-- Fin Botones Menu Items -->

                <br/><br/>
                <hr/>
            </div>            
        </div>
        <div class="tab-pane" id="incapacidades">
            <br />
            <div id="incapacidades" style="width: 100%">                    
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        <th>ID</th>
                        <th>TIPO</th>
                        <th>FECHA</th>
                        <th>DESDE</th>
                        <th>HASTA</th>
                        <th>SOPORTE</th>
                        <th>EMPLEADO</th>
                        <th>DIAS</th>
                        <th>D. PENDIENTES</th>
                        <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                    </tr>
                    {% for arIncapacidades in arIncapacidades %}
                    <tr>
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arIncapacidades.codigoIncapacidadPk }}">{{ arIncapacidades.codigoIncapacidadPk }} </td>
                        <td>{{ arIncapacidades.incapacidadTipoRel.nombre  }}</td>
                        <td>{{ arIncapacidades.fecha |date("Y/m/d")  }}</td>
                        <td>{{ arIncapacidades.fechaDesde |date("Y/m/d")  }}</td>
                        <td>{{ arIncapacidades.fechaHasta |date("Y/m/d")  }}</td>
                        <td>{{ arIncapacidades.numeroEps  }}</td>
                        <td>{{ arIncapacidades.empleadoRel.nombreCorto  }}</td>
                        <td style="text-align: right">{{ arIncapacidades.cantidad | number_format(0, '.', ',') }}</td>
                        <td style="text-align: right">{{ arIncapacidades.cantidadPendiente | number_format(0, '.', ',') }}</td>
                        <td><input type="checkbox" name="ChkSeleccionarIncapacidad[]" value="{{ arIncapacidades.codigoIncapacidadPk }}" /></td>
                    </tr>
                    {% endfor %}
                </table>

                <!-- Botones Menu Items -->
                <div class="btn-toolbar" style="float:left">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_lista') }}" style="float:left">Volver</a>
                    </div>
                </div>

                <div class="btn-toolbar" style="float:right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_pagos_adicionales_agregar_incapacidad', {'codigoCentroCosto': arCentroCosto.codigoCentroCostoPk}) }}', 'AgregarGuia', 600, 900)" >Agregar</a>
                        {{ form_widget(form.BtnRetirarIncapacidad, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                        
                    </div>
                </div>
                <!-- Fin Botones Menu Items -->

                <br/><br/>
                <hr/>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
