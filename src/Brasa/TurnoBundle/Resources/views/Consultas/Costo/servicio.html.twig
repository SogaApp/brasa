{% extends '::base.html.twig' %}
{% block title %}Consulta costos servicio - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Consulta costo servicio</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
            <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>        
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Mes:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtMes, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">                                          
                    </div>                    
                </div>                               
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
            <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>COD</th>
                <th>AÃ‘O</th>                
                <th>MES</th>
                <th>CLIENTE</th>
                <th>PUESTO</th>
                <th>CONCEPTO</th>
                <th>MODALIDAD</th>
                <th>PERIODO</th>
                <th>DES</th>
                <th>HAS</th>
                <th>D</th>
                <th>H</th>
                <th>H.P</th>
                <th>CANT</th>
                <th>COSTO</th>
                <th>PRECIO</th>
            </tr>            
            {% for arCierreMesServicio in arCierreMesServicio %}
                <tr>
                    <td>{{ arCierreMesServicio.codigoCierreMesServicioPk  }}<input type="hidden" name="LblCodigo[]" value="{{ arCierreMesServicio.codigoCierreMesServicioPk }}"></td>                                        
                    <td>{{ arCierreMesServicio.anio }}</td>
                    <td>{{ arCierreMesServicio.mes }}</td>
                    <td>{{ arCierreMesServicio.clienteRel.nombreCorto |default('') }}</td>
                    <td>{{ arCierreMesServicio.puestoRel.nombre |default('') }}</td>
                    <td>{{ arCierreMesServicio.conceptoServicioRel.nombre |default('') }}</td>
                    <td>{{ arCierreMesServicio.modalidadServicioRel.nombre |default('') }}</td>
                    <td>{{ arCierreMesServicio.periodoRel.nombre |default('') }}</td>
                    <td>{{ arCierreMesServicio.diaDesde }}</td>
                    <td>{{ arCierreMesServicio.diaHasta }}</td>
                    <td style="text-align: right">{{ arCierreMesServicio.dias | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arCierreMesServicio.horas | number_format(1, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arCierreMesServicio.horasProgramadas | number_format(1, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arCierreMesServicio.cantidad | number_format(0, '.', ',') }}</td>                     
                    <td style="text-align: right">{{ arCierreMesServicio.vrCostoRecurso | number_format(0, '.', ',') }}</td>                     
                    <td style="text-align: right">{{ arCierreMesServicio.vrTotal | number_format(0, '.', ',') }}</td>                     
                    <td style="text-align: center"><a href="javascript:abrirVentana3('{{ path('brs_tur_consulta_costo_servicio_ver_detalle', {'codigoCostoServicio': arCierreMesServicio.codigoCierreMesServicioPk }) }}', 'VerCostoRecursoDetalle', 600, 1200)"><img src="{{ asset('imagenes/bootstrap/glyphicons_090_table.png') }}" width=20 height=20 title="Ver"></a></td>                    
                </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCierreMesServicio.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arCierreMesServicio) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
