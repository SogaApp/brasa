{% extends '::base.html.twig' %}
{% block content %}
<script>
    $('#myTab a').click(function(e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Incapacidades centro costo {{ arCentroCosto.codigoCentroCostoPk }}</h3>            
    </div>

    <!-- Encabezado Movimiento -->
    <div class="panel panel-default">
      <div class="panel-heading">Informacion centro costo</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="td-label">Numero:</td>
                    <td class="td-in-well">{{ arCentroCosto.codigoCentroCostoPk }}</td>

                    <td class="td-label">Fecha:</td>
                    <td class="td-in-well"></td>

                </tr>


                <tr>
                    <td class="td-label"></td>
                    <td class="td-in-well" ></td>

                    <td class="td-label">Hasta:</td>
                    <td class="td-in-well"></td>
                </tr>
                <tr>
                    <td colspan="8">Comentarios:</td>
                </tr>
            </table>
      </div>
    </div>    

    <!-- Fin Encabezado Movimiento -->

    <br />
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
        <li><a href="#conceptos" data-toggle="tab">Conceptos</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="detalles">
            <form action="{{ path('brs_tte_despachos_detalle', {'codigoDespacho': arCentroCosto.codigoCentroCostoPk}) }}" method="post" novalidate>
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 100%">                    
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Empleado</th>
                            <th>Dias</th>
                            <th>D. pendientes</th>
                            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                        </tr>
                        {% for arIncapacidades in arIncapacidades %}
                        <tr>
                            <td><input type="hidden" name="LblCodigo[]" value="{{ arIncapacidades.codigoIncapacidadPk }}">{{ arIncapacidades.codigoIncapacidadPk }} </td>
                            <td>{{ arIncapacidades.fecha |date("Y/m/d")  }}</td>
                            <td>{{ arIncapacidades.empleadoRel.nombreCorto  }}</td>
                            <td style="text-align: right">{{ arIncapacidades.cantidad | number_format(0, '.', ',') }}</td>
                            <td style="text-align: right">{{ arIncapacidades.cantidadPendiente | number_format(0, '.', ',') }}</td>
                            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arIncapacidades.codigoIncapacidadPk }}" /></td>
                        </tr>
                        {% endfor %}
                    </table>

                    <!-- Botones Menu Items -->
                    <div class="btn-toolbar" style="float:left">
                        <div class="btn-group">
                            <a class="btn btn-default" href="{{ path('brs_rhu_pagos_adicionales_lista') }}" style="float:left">Volver</a>
                        </div>
                    </div>

                    <div class="btn-toolbar divDerecho">
                        <div class="btn-group">
                            <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_tte_despachos_agregar_guia', {'codigoDespacho': arCentroCosto.codigoCentroCostoPk}) }}', 'AgregarGuia', 600, 900)" >Agregar</a>
                        </div>

                        <div class="btn-group">
                            <button class="btn btn-danger" type="submit" name="OpSubmit" value="OpRetirar" >Retirar</button>
                        </div>
                    </div>
                    <!-- Fin Botones Menu Items -->

                    <br/><br/>
                    <hr/>
                </div>
            </form>
        </div>
        <div class="tab-pane" id="conceptos">

        </div>
    </div>

</div>
{% endblock %}
