{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista recogidas</h3>
    </div>
    <!-- Formulario de busqueda -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            {{ form_errors(form) }}         
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigoRecogida" class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtCodigoRecogida, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>       
            <div class="form-group form-group-sm">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                                {{ form_widget(form.TxtNombreTercero, { 'attr': {'class': 'form-control'} }) }}
                                <span class="input-group-btn">
                                    {{ form_widget(form.TxtCodigoTercero, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', {'campoCodigo': 'form_TxtCodigoTercero', 'campoNombre': 'form_TxtNombreTercero'}) }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>        
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                 
            <div class="form-group form-group-sm">  
                <label for="form_TxtFechaHasta" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <label class="checkbox-inline">
                      {{ form_widget(form.ChkMostrarAnuladas) }} Anuladas
                    </label>
                </div>                                         
            </div>            
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.Buscar, { 'attr': {'class': 'btn btn-default', 'style':'float:right'} }) }}
                </div>
            </div>                               
            {{ form_rest(form) }}          
        </div>
    </div>                                  
    {{ form_end(form) }}    
    <form action="{{ path('brs_tte_recogidas_lista') }}" method="post" novalidate>
        <table  class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>                                
                <th>Fecha</th>
                <th>Nit</th>
                <th>Cliente</th>               
                <th>Unidades</th>
                <th>P. Real</th>
                <th>P. Volumen</th>
                <th>Declarado</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            {% for arRecogidas in arRecogidas %}

            <tr>
                <td><input type="hidden" name="LblCodigoRecogida[]" value="{{ arRecogidas.codigoRecogidaPk }}">{{ arRecogidas.codigoRecogidaPk }} </td>                                
                <td>{{ arRecogidas.fechaAnuncio |date("Y/m/d")  }}</td>
                <td>{{ arRecogidas.terceroRel.nit  }}</td>
                <td>{{ arRecogidas.terceroRel.nombreCorto  }}</td>                
                <td style="text-align: right">{{ arRecogidas.ctUnidades | number_format(0, '.', ',')}}</td>
                <td style="text-align: right">{{ arRecogidas.ctPesoReal | number_format(0, '.', ',')}}</td>
                <td style="text-align: right">{{ arRecogidas.ctPesoVolumen | number_format(0, '.', ',')}}</td>                                
                <td style="text-align: right">{{ arRecogidas.VrDeclarado | number_format(0, '.', ',')}}</td>                                
                <td style="text-align: center"><a href="{{ path('brs_tte_recogidas_nuevo', { 'codigoRecogida': arRecogidas.codigoRecogidaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a></td>
                <td style="text-align: center"><a href="{{ path('brs_tte_recogidas_detalle', { 'codigoRecogida': arRecogidas.codigoRecogidaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecogidas.codigoRecogidaPk }}" /></td>
            </tr>

            {% endfor %}

        </table>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('brs_tte_recogidas_nuevo', { 'codigoRecogida': 0 }) }}" style="float:left">Nuevo</a>                                                                
                <button class="btn btn-danger btn-mini" type="submit" name="OpSubmit" value="OpEliminar" >Eliminar</button>

            </div>
        </div>
        <!-- Fin Botones Menu Items -->
    </form>
    <br /><br />
    <hr/>

</div>
{% endblock %}
