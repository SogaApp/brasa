<form class="well" id="FrmNuevo" action="{{path('maestros_inventario_listas_costos_nuevo', { 'codigoListaCostosPk':  0 })}}" method="post"> 
    <script>
        $('#myModal').modal('toggle');
        </script>

        <div class="modal hide" id="myModal">    
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
                <h3>{%if arListaCostos is not null%}Editar lista costos{%else%}Crear lista costos{%endif%}</h3>
            </div>    
            <div class="modal-body">                             
                <div class="well">      
                    <table>
                        {% if arListaCostos is defined and arListaCostos is not null %}
                            <tr>
                                <td><strong>Codigo:</strong><br/></td>
                                <td><input type="text" class="span4" readonly="true" name="TxtCodigoListaCostos" {% if arListaCostos is defined and arListaCostos is not null %} value="{{arListaCostos.codigoListaCostosPk}}" readonly="true" {% endif %}/></td>              
                            <tr> 
                        {% endif %}
                                <tr>
                                    <td><strong>Nombre:</strong><br/></td>
                                    <td><input type="text" class="span4" name="TxtNombre" {% if arListaCostos is defined and arListaCostos is not null %} value="{{arListaCostos.nombre}}" {% endif %} placeholder="Nombre" required autofocus/></td>              
                                <tr>                                        
                            </table>            
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a href="#" class="btn" data-dismiss="modal">Cancelar</a>                
                        <button id="link_guardar" class="btn btn-primary" type="submit" name="OpSubmit" value="OpGuardar">Guardar</button>
                    </div>  
                </div>
            </form> 
