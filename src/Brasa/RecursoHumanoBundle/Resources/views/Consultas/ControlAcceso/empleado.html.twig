{% extends '::base.html.twig' %}
{% block title %}Consulta control acceso empleados - Soga App{% endblock %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta control acceso empleados</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumeroIdentificacion" class="col-sm-2 control-label">Identificación:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNumeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>                     
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>                
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>NRO</th>
                    <th>IDENTIFICACION</th>
                    <th>EMPLEADO</th>
                    <th>FECHA</th>
                    <th>HORA ENTRADA</th>
                    <th>HORA SALIDA</th>
                    <th>DURACIÓN VISITA</th>
                    <th>COMENTARIOS</th>
                </tr>
            {% set contador = 1  %}
            {% for arControlAccesosEmpleados in arControlAccesosEmpleados %}
            <tr>
                <td>{{ contador  }}</td>
                <td>{{ arControlAccesosEmpleados.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arControlAccesosEmpleados.empleadoRel.nombreCorto  }}</td>
                <td>{{ arControlAccesosEmpleados.fechaEntrada|date('Y-m-d')  }}</td>
                <td>{{ arControlAccesosEmpleados.fechaEntrada|date('H:i:s')  }}</td>
                <td>{% if arControlAccesosEmpleados.fechaSalida == null %} SIN SALIDA {% else %}{{ arControlAccesosEmpleados.fechaSalida|date('H:i:s')  }}{% endif%}</td>
                <td>{{ arControlAccesosEmpleados.duracionRegistro|default('SIN SALIDA') }}</td>
                <td>{{ arControlAccesosEmpleados.comentarios  }}</td>
            </tr>
            {% set contador = contador + 1  %}
            {% endfor %}
            </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arControlAccesosEmpleados) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arControlAccesosEmpleados.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
