            </div>                
            <div class="form-group form-group-sm">
                <label for="form_bancoRel" class="col-sm-2 control-label">Banco:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.bancoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_auxilioTransporte" class="col-sm-2 control-label">Auxilio transporte:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.auxilioTransporte, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_pagadoEntidadSalud" class="col-sm-2 control-label">Pagado por entidad salud:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.pagadoEntidadSalud, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion seguridad social</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_entidadSaludRel" class="col-sm-2 control-label">Salud:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.entidadSaludRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                               
            <div class="form-group form-group-sm">
                <label for="form_entidadPensionRel" class="col-sm-2 control-label">Pesion:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.entidadPensionRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_clasificacionRiesgoRel" class="col-sm-2 control-label">Clasificacion riesgo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.clasificacionRiesgoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>                
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_empleados_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}