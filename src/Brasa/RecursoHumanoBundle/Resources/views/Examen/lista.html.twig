{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista examenes</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_estadoAprobado" class="col-sm-2 control-label">Aprobado:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arExamenes, 'ID', 'e.codigoExamenPk') }}</th>
                <th>ENTIDAD</th>
                <th>CENTRO COSTO</th>
                <th>FECHA</th>
                <th>IDENTIFICACION</th>
                <th>NOMBRE</th>
                <th>APROBADO</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arExamenes in arExamenes %}
            <tr>
                <td>{{ arExamenes.codigoExamenPk  }}</td>
                <td>{{ arExamenes.entidadExamenRel.nombre|default('SIN ENTIDAD')  }}</td>
                <td>{{ arExamenes.centroCostoRel.nombre }}</td>
                <td>{{ arExamenes.fecha | date("Y/m/d")}}</td>
                <td>{{ arExamenes.identificacion }}</td>
                <td>{{ arExamenes.nombreCorto }}</td>
                <td>{% if arExamenes.estadoAprobado == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: center"><a href="{{ path('brs_rhu_examen_nuevo', { 'codigoExamen': arExamenes.codigoExamenPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20></a></td>
                {% if  arExamenes.codigoEntidadExamenFk == "" %}
                <td style="text-align: center"><a href="" onClick="alert('Por favor asigne la entidad del examen para ingresar al detalle!')"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                {% else %}
                <td style="text-align: center"><a href="{{ path('brs_rhu_examen_detalle', { 'codigoExamen':  arExamenes.codigoExamenPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                {% endif %}
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arExamenes.codigoExamenPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>
        {{ knp_pagination_render(arExamenes) }}


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_examen_nuevo', { 'codigoExamen': 0}) }}', 'AgregarExamen', 600, 900)"  style="float:left">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnAprobar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
