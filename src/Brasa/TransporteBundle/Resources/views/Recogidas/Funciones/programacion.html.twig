{% extends '::base.html.twig' %}
{% block content %}
<div class="container">    
{{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}    
    <div class="page-header">
        <h3>Programacion recogidas</h3>
    </div>            
    <table  class="table table-striped table-bordered table-condensed">
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Conductos</th>
            <th>Vehiculo</th>
            <th>Unidades</th>
            <th>P. Real</th>
            <th>P. Vol</th>
            <th>Flete pagado</th>
            <th></th>
        </tr>

            {% for arPlanesRecogidas in arPlanesRecogidas %}

        <tr>
            <td><input type="hidden" name="LblCodigoPlanRecogida[]" value="{{ arPlanesRecogidas.codigoPlanRecogidaPk }}">{{ arPlanesRecogidas.codigoPlanRecogidaPk }} </td>                
            <td>{{ arPlanesRecogidas.fecha |date("Y/m/d")  }}</td>
            <td>{{ arPlanesRecogidas.conductorRel.nombreCorto}}</td>
            <td>{{ arPlanesRecogidas.vehiculoRel.Placa}}</td>
            <td style="text-align: right">{{ arPlanesRecogidas.ctUnidades | number_format(0, '.', ',')}}</td>
            <td style="text-align: right">{{ arPlanesRecogidas.ctPesoReal | number_format(0, '.', ',')}}</td>
            <td style="text-align: right">{{ arPlanesRecogidas.ctPesoVolumen | number_format(0, '.', ',')}}</td>
            <td style="text-align: right">{{ arPlanesRecogidas.vrFletePagado | number_format(2, '.', ',')}}</td>
            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPlanesRecogidas.codigoPlanRecogidaPk }}" /></td>                
        </tr>

            {% endfor %}

    </table>

    <!-- Botones Menu Items -->
    <div class="btn-toolbar" style="float: right">            
        <div class="btn-group">  
            <a class="btn btn-default" href="{{ path('brs_tte_recogidas_planrecogida_nuevo', { 'codigoPlanRecogida': 0 }) }}" style="float:left">Nuevo</a>                                                                                                
        </div>
    </div>
    <!-- Fin Botones Menu Items -->

    <br /><br />

    <div class="page-header">
        <h3>Pendientes por asigar</h3>
    </div>            
    <table  class="table table-striped table-bordered table-condensed">
        <tr>
            <th>ID</th>                                
            <th>Fecha</th>
            <th>Nit</th>
            <th>Cliente</th>               
            <th>Unidades</th>
            <th>P. Real</th>
            <th>P. Volumen</th>
            <th>Declarado</th>
        </tr>

            {% for arRecogidas in arRecogidas %}

        <tr>
            <td><input type="hidden" name="LblCodigoRecogida[]" value="{{ arRecogidas.codigoRecogidaPk }}">{{ arRecogidas.codigoRecogidaPk }} </td>                                
            <td>{{ arRecogidas.fechaAnuncio |date("Y/m/d H:i")  }}</td>
            <td>{{ arRecogidas.terceroRel.nit  }}</td>
            <td>{{ arRecogidas.terceroRel.nombreCorto  }}</td>                
            <td style="text-align: right">{{ arRecogidas.ctUnidades | number_format(0, '.', ',')}}</td>
            <td style="text-align: right">{{ arRecogidas.ctPesoReal | number_format(0, '.', ',')}}</td>
            <td style="text-align: right">{{ arRecogidas.ctPesoVolumen | number_format(0, '.', ',')}}</td>                                
            <td style="text-align: right">{{ arRecogidas.VrDeclarado | number_format(0, '.', ',')}}</td>                                
        </tr>

            {% endfor %}

    </table>    
{{ form_end(form) }}    
</div>
{% endblock %}
