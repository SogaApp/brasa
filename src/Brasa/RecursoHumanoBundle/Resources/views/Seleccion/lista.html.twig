{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista selecciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>  
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>   
                <div class="form-group form-group-sm">  
                    <label for="form_estadoAprobado" class="col-sm-2 control-label">Aprobado:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.estadoAprobado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>{{ knp_pagination_sortable(arSelecciones, 'ID', 'e.codigoSeleccionPk') }}</th>
                <th>TIPO</th>
                <th>IDENTIFICACION</th>
                <th>{{ knp_pagination_sortable(arSelecciones, 'NOMBRE', 'e.nombreCorto') }}</th>                                                
                <th>CENTRO COSTO</th>
                <th>PRUEBAS</th>
                <th>TELEFONO</th>
                <th>CELULAR</th>
                <th>AP</th>                
                <th style="text-align: center"></th>                
                <th></th>
                <th></th>
            </tr>
            {% for arSelecciones in arSelecciones %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arSelecciones.codigoSeleccionPk }}">{{ arSelecciones.codigoSeleccionPk }} </td>
                <td>{{ arSelecciones.seleccionTipoRel.nombre  }}</td>
                <td>{{ arSelecciones.numeroIdentificacion  }}</td>
                <td>{{ arSelecciones.nombreCorto  }}</td>
                <td>{{ arSelecciones.centroCostoRel.nombre  }}</td>
                <td>{{ arSelecciones.fechaPruebas |date("Y/m/d H:i")  }}</td>
                <td>{{ arSelecciones.telefono }}</td>                                               
                <td>{{ arSelecciones.celular }}</td>                                               
                <td>{% if arSelecciones.estadoAprobado == 1 %} SI {% else %} NO {% endif %}</td>                                
                <td style="text-align: center"><a href="{{ path('brs_rhu_seleccion_nuevo', { 'codigoSeleccion':  arSelecciones.codigoSeleccionPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20></a></td>                                
                <td style="text-align: center"><a href="{{ path('brs_rhu_seleccion_detalle', { 'codigoSeleccion': arSelecciones.codigoSeleccionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSelecciones.codigoSeleccionPk }}" /></td>
            </tr>
            {% endfor %}                        
        </table>                       
        {{ knp_pagination_render(arSelecciones) }}    


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_seleccion_nuevo', { 'codigoSeleccion': 0 }) }}" style="float:left">Nuevo</a>                                                                                
            </div>
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
