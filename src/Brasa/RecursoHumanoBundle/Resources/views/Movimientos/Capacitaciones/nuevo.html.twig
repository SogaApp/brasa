{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva capacitacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">      
            <div class="form-group form-group-sm">
                <label for="form_capacitacionTipo" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.capacitacionTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_fecha" class="col-sm-3 control-label">Fecha:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fecha) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_tema" class="col-sm-3 control-label">Tema:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.tema, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>
           
    <div class="modal-footer">              
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}    
</div>
{% endblock %}