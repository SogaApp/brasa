{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Lista selecciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>COD</th>
                <th>AÃ‘O</th>
                <th>MES</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>GENERADO</th>
                <th></th>
            </tr>
            {% for arSSPeriodos in arSSPeriodos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arSSPeriodos.codigoPeriodoPk }}">{{ arSSPeriodos.codigoPeriodoPk }} </td>
                <td>{{ arSSPeriodos.anio  }}</td>
                <td>{{ arSSPeriodos.mes  }}</td>
                <td>{{ arSSPeriodos.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSSPeriodos.fechaHasta |date("Y/m/d")  }}</td>
                <td {% if arSSPeriodos.estadoGenerado == 1 %}class="success"{% endif %}>{% if arSSPeriodos.estadoGenerado == 1 %} SI {% else %} NO {% endif %}</td>                                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSSPeriodos.codigoPeriodoPk }}" /></td>
            </tr>
            {% endfor %}                        
        </table>                       
        {{ knp_pagination_render(arSSPeriodos) }}    


        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}              
            </div>
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}   
    
</div>
{% endblock %}
