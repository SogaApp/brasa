{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva Guia</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion cliente</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="CboTiposServicio" class="col-sm-2 control-label">Tipo servicio:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.tipoServicioRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="CboTiposPago" class="col-sm-2 control-label">Tipo pago:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.tipoPagoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                            {{ form_widget(form.terceroRel, { 'attr': {'class': 'form-control'} }) }}
                                <span class="input-group-btn">

                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', {'campoCodigo': 'form_codigoTerceroFk', 'campoNombre': 'TxtNombreTercero'}) }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_documentoCliente" class="col-sm-2 control-label">Documento cliente:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.documentoCliente, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>        
    <div class="panel panel-default">
        <div class="panel-heading">Informacion destinatario</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_nombreDestinatario" class="col-sm-2 control-label">Destinatario:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.nombreDestinatario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_telefonoDestinatario" class="col-sm-2 control-label">Telefono:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.telefonoDestinatario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_direccionDestinatario" class="col-sm-2 control-label">Direccion:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.direccionDestinatario, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="CboCiudadDestino" class="col-sm-2 control-label">Destino:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.ciudadDestinoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Liquidacion</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_ctUnidades" class="col-sm-2 control-label">Unidades:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.ctUnidades, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.ctUnidades) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_ctPesoReal" class="col-sm-2 control-label">Peso real:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.ctPesoReal, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_ctPesoVolumen" class="col-sm-2 control-label">Peso volumen:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.ctPesoVolumen, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_ctPesoLiquidar" class="col-sm-2 control-label">Peso liquidar:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.ctPesoLiquidar, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.ctPesoLiquidar) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_vrDeclarado" class="col-sm-2 control-label">Valor declarado:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrDeclarado, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.vrDeclarado) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_vrFlete" class="col-sm-2 control-label">Valor flete:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrFlete, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_vrManejo" class="col-sm-2 control-label">Valor manejo:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrManejo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_vrRecaudo" class="col-sm-2 control-label">Valor recaudo:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.vrRecaudo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Contenido</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="CboProducto" class="col-sm-2 control-label">Productos:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.productoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                    
            <div class="form-group">
                <label for="form_contenido" class="col-sm-2 control-label">Contenido:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.contenido, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_comentarios" class="col-sm-2 control-label">Liquidacion</label>
                <div class="col-sm-10">
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> Kilo
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> Unidad
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3"> Kilo adicional
                    </label>                          
                </div>                                         
            </div>
        </div>
    </div> 
    <div class="modal-footer">
        <a class="btn btn-default" href="{{ path('brs_tte_guias_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>    
        {{ form_end(form) }}
</div>
{% endblock %}