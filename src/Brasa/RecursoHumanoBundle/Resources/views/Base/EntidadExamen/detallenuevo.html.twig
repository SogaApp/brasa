{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo detalle tipo exámen</h3>
    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>TIPO EXÁMEN</th>
            <th>PRECIO</th>
        </tr>
        
            {%for arExamenTipos in arExamenTipos %}
               <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arExamenTipos.codigoExamenTipoPk }}">{{ arExamenTipos.codigoExamenTipoPk }}</td>
                <td>{{arExamenTipos.nombre}}</td>
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtPrecio[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
            {%endfor%}
            </tr>            
    </table>    
    </div>               
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}