{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <div class="page-header">
        <h3>Programaciones pago</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div> 
                <div class="form-group form-group-sm">  
                    <label for="form_estadoGenerado" class="col-sm-2 control-label">Generado:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.estadoGenerado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_estadoPagado" class="col-sm-2 control-label">Pagado:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.estadoPagado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div> 
        <table  class="table table-striped table-bordered  table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>COD</th>
                <th>CENTRO COSTOS</th>
                <th>PERIDOO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>DIAS</th>
                <th>NETO</th>
                <th><p style="margin: 0" data-toggle="tooltip" data-placement="top" title="Indica si ya estan generados los empleados">EMPLEADOS</p></th>
                <th>INCONSISTENCIAS</th>
                <th>GENERADO</th>
                <th>PAGADO</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Enlaces relacionadas al pago">ENLACES</p></th>
                <th style="text-align: center">DETALLE</th>
                <th></th>
            </tr>
            {% for arProgramacionPago in arProgramacionPago %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arProgramacionPago.codigoProgramacionPagoPk }}">{{ arProgramacionPago.codigoProgramacionPagoPk }} </td>
                <td>{{ arProgramacionPago.codigoCentroCostoFk  }}</td>
                <td>{{ arProgramacionPago.centroCostoRel.nombre  }}</td>
                <td>{{ arProgramacionPago.centroCostoRel.periodoPagoRel.nombre  }}</td>
                <td>{{ arProgramacionPago.fechaDesde |date("Y/m/d")  }}</td>
                <td {% if arProgramacionPago.estadoGenerado == 0 and date(arProgramacionPago.fechaHasta) < date() %}class="danger"{% endif %}>{{ arProgramacionPago.fechaHasta |date("Y/m/d")  }}</td>
                <td>{{ arProgramacionPago.dias  }}</td>
                <td style="text-align: right">{{ arProgramacionPago.vrNeto | number_format(2, '.', ',') }}</td>
                <td>{% if arProgramacionPago.empleadosGenerados == 1 %} SI ({{ arProgramacionPago.numeroEmpleados  }}) {% else %} NO {% endif %}</td>
                <td>{% if arProgramacionPago.inconsistencias == 1 %} SI (<a href="javascript:abrirVentana3('{{ path('brs_rhu_programaciones_pago_inconsistencias', { 'codigoProgramacionPago': arProgramacionPago.codigoProgramacionPagoPk }) }}', 'VerInconsistencias', 600, 900)" >Ver</a>){% else %} NO {% endif %}</td>                
                <td>{% if arProgramacionPago.estadoGenerado == 1 %} SI{% else %} NO {% endif %}</td>                
                <td>{% if arProgramacionPago.estadoPagado == 1 %} SI{% else %} NO {% endif %}</td>                
                <td>
                    {% if arProgramacionPago.estadoGenerado == 0 %}
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs">Enlaces</button>
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('brs_rhu_pagos_adicionales_detalle', { 'codigoProgramacionPago': arProgramacionPago.codigoProgramacionPagoPk }) }}" target="_blank">Adicionales al pago</a></li>
                            <li><a href="{{ path('brs_rhu_pagos_adicionales_generarmasivo_suplementario_detalle', { 'codigoCentroCosto': arProgramacionPago.codigoCentroCostoFk }) }}" target="_blank">Generar tiempo suplementario masivo</a></li>
                        </ul>
                    </div>
                    {% endif %}
                </td>                
                <td style="text-align: center">{% if arProgramacionPago.estadoGenerado == 0 %}<a href="{{ path('brs_rhu_programaciones_pago_detalle', { 'codigoProgramacionPago': arProgramacionPago.codigoProgramacionPagoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a>{% endif %}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arProgramacionPago.codigoProgramacionPagoPk }}" /></td>
            </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arProgramacionPago) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Programaciones pago <span class="badge">{{ arProgramacionPago.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                                
            </div>
            <div class="btn-group">                                
                {{ form_widget(form.BtnEliminarPago, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                {{ form_widget(form.BtnPagar, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}
                {{ form_widget(form.BtnDeshacer, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-success btn-sm'} }) }}                                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
