{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    <div class="page-header">
        <h3>Reporte de novedades pendientes</h3>          
    </div>
    
    <div class="well">        
        {{ form_errors(form) }}    
            <div class="form-group">  
                <label for="form_TxtCodigoGuia" class="col-sm-2 control-label">Codigo</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtCodigoGuia, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group">  
                <label for="form_TxtNumeroGuia" class="col-sm-2 control-label">Numero</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtNumeroGuia, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>     
            <div class="form-group">
                <label for="TxtNombreTercero" class="col-sm-2 control-label">Tercero</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="input-group">
                                {{ form_widget(form.TxtNombreTercero, { 'attr': {'class': 'form-control'} }) }}
                                <span class="input-group-btn">
                                    {{ form_widget(form.TxtCodigoTercero, { 'attr': {'class': 'btn btn-default'} }) }}
                                    <a class="btn btn-default" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', {'campoCodigo': 'TxtCodigoTercero', 'campoNombre': 'TxtNombreTercero'}) }}', 'BuscarTercero', 600, 900)">Buscar</a>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>        
            <div class="form-group">  
                <label for="form_TxtFechaDesde" class="col-sm-2 control-label">Desde</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                                 
            <div class="form-group">  
                <label for="form_TxtFechaHasta" class="col-sm-2 control-label">Hasta</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtFechaHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.Buscar, { 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
            </div>        
            {{ form_rest(form) }}                 
        {{ form_end(form) }}
    </div>
    
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>{{ knp_pagination_sortable(arNovedades, 'ID', 'arNovedades.codigoNovedadPk') }}</th>
            <th>Numero guia</th>
            <th>Cliente</th>
            <th>F. registro</th>
            <th>F. novedad</th>
            <th>F. Reporte</th>
            <th>Concepto</th>
            <th>Novedad</th>
            <th></th>
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
        </tr>
        {% for arNovedades in arNovedades %}
        <tr>
            <td>
                <input type="hidden" name="LblCodigoGuia[]" value="{{ arNovedades.codigoNovedadPk }}">
                <span class="badge">{{ arNovedades.codigoNovedadPk }}</span>
            </td>
            <td>{{ arNovedades.guiaRel.numeroGuia  }}</td>
            <td>{{ arNovedades.guiaRel.terceroRel.nombreCorto  }}</td>
            <td>{{ arNovedades.fechaRegistro |date("Y/m/d")  }}</td>
            <td>{{ arNovedades.fechaNovedad |date("Y/m/d")  }}</td>
            <td>{{ arNovedades.fechaReporte |date("Y/m/d")  }}</td>
            <td>{{ arNovedades.novedadConceptoRel.nombre  }}</td>
            <td>{{ arNovedades.novedad }}</td>                        
            <td style="text-align: center">{% if arNovedades.estadoSolucionada == 0  %}<a href="javascript:abrirVentana3('{{ path('brs_tte_novedades_solucionar', {'codigoNovedad': arNovedades.codigoNovedadPk}) }}', 'AgregarGuia', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_030_pencil.png') }}" width=22 height=22></a>{% endif %}</td>                                                            
            <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arNovedades.codigoNovedadPk }}" /></td>
        </tr>
        {% endfor %}                        
    </table>
    <div class="navigation">
        {{ knp_pagination_render(arNovedades) }}
    </div>
</div>
{% endblock %}
