{% extends '::base.html.twig' %}
{% block title %}Acreditaciones lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
<div class="container">
    <div class="page-header">
        <h3>Lista acreditaciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>  
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arAcreditaciones, 'CODIGO', 'ee.codigoAcreditacionPk') }}</th>
                <th>DOCUMENTO</th>
                <th>{{ knp_pagination_sortable(arAcreditaciones, 'NOMBRE', 'e.nombreCorto') }}</th>                
                <th>REGISTRO</th>
                <th>VAL</th>
                <th>VENCIMIENTO</th>                
                <th style="text-align: center"></th>                
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>
            {% for arAcreditaciones in arAcreditaciones %}
            <tr>
                <td>{{ arAcreditaciones.codigoAcreditacionPk }} </td>
                <td>{{ arAcreditaciones.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arAcreditaciones.empleadoRel.nombreCorto  }}</td>                                                
                <td>{{ arAcreditaciones.numeroRegistro }}</td>               
                <td>{% if arAcreditaciones.estadoValidado == 1 %} SI {% else %} NO {% endif %}</td>                 
                <td>{{ arAcreditaciones.fechaVencimiento | date('Y/m/d') }}</td>                                                
                <td style="text-align: center"><a href="{{ path('brs_rhu_movimiento_acreditacion_nuevo', {'codigoAcreditacion': arAcreditaciones.codigoAcreditacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arAcreditaciones.codigoAcreditacionPk }}" /></td>
            </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->.
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Estudios <span class="badge">{{ arAcreditaciones.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arAcreditaciones) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcelInforme, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_acreditacion_nuevo', {'codigoAcreditacion': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm', 'onclick': 'return confirm("Esta seguro de eliminar el registro?")'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
