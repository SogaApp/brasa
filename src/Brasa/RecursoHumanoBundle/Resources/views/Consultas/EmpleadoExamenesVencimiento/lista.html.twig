{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    <script type="text/javascript">
    $(document).ready(function() {
            $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
    </script>
    <div class="page-header">
        <h3>Consulta vencimiento examenes medicos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
            {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumeroIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNumeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                       
                <div class="form-group form-group-sm">  
                    <label for="form_fecha" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fecha, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                                         
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>{{ knp_pagination_sortable(arEmpleadoExamenes, 'CÃ“DIGO', 'e.codigoEmpleadoExamenPk') }}</th>
                    <th>EXAMEN</th>
                    <th>VENCIMIENTO</th>
                    <th>IDENTIFICACION</th>
                    <th>EMPLEADO</th>
                </tr>
                {% for arEmpleadoExamenes in arEmpleadoExamenes %}
                    <tr>
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arEmpleadoExamenes.codigoEmpleadoExamenPk }}">{{ arEmpleadoExamenes.codigoEmpleadoExamenPk }} </td>
                        <td>{{ arEmpleadoExamenes.examenTipoRel.nombre  }}</td>
                        {% if arEmpleadoExamenes.validarVencimiento == 1 %}
                            <td>{{ arEmpleadoExamenes.fechaVencimiento |date("Y/m/d")  }}</td>
                        {% else %}
                            <td>NO REQUIERE</td>
                        {% endif %}
                        <td>{{ arEmpleadoExamenes.empleadoRel.numeroIdentificacion  }}</td>
                        <td>{{ arEmpleadoExamenes.empleadoRel.nombreCorto  }}</td>
                    </tr>
                {% endfor %}
            </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arEmpleadoExamenes) }} 
            </div>
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arEmpleadoExamenes.getTotalItemCount }}</span></div>        
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>
        
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
